<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/hw_subscript_distance" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_number_size" android:textStyle="bold" android:textColor="@color/nsdk_rg_hw_subscript_list_head_number_color" android:id="@+id/hw_subscript_distance_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_text_size" android:textColor="@color/nsdk_rg_hw_subscript_list_head_text_color" android:id="@+id/hw_subscript_distance_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全程剩余"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/hw_subscript_service" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_number_size" android:textStyle="bold" android:textColor="@color/nsdk_rg_hw_subscript_list_head_number_color" android:id="@+id/hw_subscript_service_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_text_size" android:textColor="@color/nsdk_rg_hw_subscript_list_head_text_color" android:id="@+id/hw_subscript_service_count_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="前方服务区(个)"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/hw_subscript_toll_station" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_number_size" android:textStyle="bold" android:textColor="@color/nsdk_rg_hw_subscript_list_head_number_color" android:id="@+id/hw_subscript_toll_station_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_text_size" android:textColor="@color/nsdk_rg_hw_subscript_list_head_text_color" android:id="@+id/hw_subscript_toll_station_count_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="前方收费站(个)"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/hw_subscript_charge_station" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_number_size" android:textStyle="bold" android:textColor="@color/nsdk_rg_hw_subscript_list_head_number_color" android:id="@+id/hw_subscript_charge_station_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
        <TextView android:textSize="@dimen/nsdk_rg_hw_subscript_list_head_text_size" android:textColor="@color/nsdk_rg_hw_subscript_list_head_text_color" android:id="@+id/hw_subscript_charge_station_count_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="充电站(个)"/>
    </LinearLayout>
</LinearLayout>
