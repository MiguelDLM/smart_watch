<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.baidu.navisdk.ui.widget.RouteResultLoadingImageView android:id="@+id/iv_loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    <com.baidu.navisdk.video.BNCloudVideoView android:id="@+id/videoView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/iv_play" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nsdk_video_play" android:layout_centerInParent="true"/>
    <SeekBar android:id="@+id/seekbar" android:layout_width="match_parent" android:layout_height="3px" android:layout_marginBottom="20dp" android:progressDrawable="@drawable/nsdk_video_detail_bar" android:thumb="@drawable/transparent" android:layout_alignParentBottom="true"/>
    <RelativeLayout android:id="@+id/title" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentTop="true">
        <FrameLayout android:id="@+id/back_btn" android:layout_width="50dp" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nsdk_icon_back_white_2" android:scaleType="centerInside" android:layout_alignParentLeft="true"/>
        </FrameLayout>
        <TextView android:textSize="18dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="视频播放" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
