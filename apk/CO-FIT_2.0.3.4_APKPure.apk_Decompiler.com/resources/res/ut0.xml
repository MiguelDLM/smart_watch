<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_loading" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.core.widget.ContentLoadingProgressBar android:layout_width="40dp" android:layout_height="40dp" style="?android:attr/progressBarStyleSmall"/>
        <TextView android:textColor="@color/text_color" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/syncing"/>
        <TextView android:textColor="@color/text_color" android:gravity="center" android:id="@+id/sync_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/ll_data" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.baoyz.swipemenulistview.SwipeMenuListView android:id="@+id/list_view" android:paddingTop="20dp" android:paddingBottom="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:divider="@drawable/listview_divider_20dp"/>
        <TextView android:textSize="16sp" android:textColor="@color/line_color" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/empty" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_data" android:drawableTop="@drawable/pic_no_schedule" android:drawablePadding="16dp"/>
    </FrameLayout>
</LinearLayout>
