<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:background="@drawable/nsdk_drawable_common_loading_box" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/video_definity_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
        <TextView android:textSize="@dimen/nsdk_text_size_rg_second_info" android:textColor="@color/nsdk_cl_text_a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="视频录制设置"/>
        <ToggleButton android:textSize="@dimen/nsdk_text_size_rg_second_info" android:id="@+id/video_defination_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textOn="高清" android:textOff="标清"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_20dp" android:layout_below="@+id/video_definity_ll" android:layout_centerHorizontal="true">
        <TextView android:textSize="@dimen/nsdk_text_size_rg_second_info" android:textColor="@color/nsdk_cl_text_a" android:id="@+id/upload_material_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上传路测素材"/>
        <Button android:textSize="@dimen/nsdk_text_size_rg_second_info" android:id="@+id/upload_material_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="开启" android:layout_toRightOf="@+id/upload_material_tx"/>
    </LinearLayout>
</RelativeLayout>
