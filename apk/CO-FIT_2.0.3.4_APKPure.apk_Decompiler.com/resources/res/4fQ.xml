<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/truck_type_layout" android:background="@drawable/bnav_bg_attribution_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="19dp" android:textColor="#ff222222" android:gravity="center_vertical" android:id="@+id/truck_plate_title" android:layout_width="wrap_content" android:layout_height="27dp" android:layout_marginTop="19dp" android:text="完善车型，立即出发" android:fontFamily="sans-serif-medium" android:paddingStart="19dp" android:layout_alignParentStart="true"/>
    <RelativeLayout android:id="@+id/dialog_close" android:layout_width="40dp" android:layout_height="27dp" android:layout_alignBottom="@+id/truck_plate_title" android:paddingEnd="19dp" android:layout_alignParentEnd="true">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bnav_plate_limit_setting_close" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView android:textSize="13dp" android:textColor="#af7e4b" android:id="@+id/truck_plate_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="我们将根据车型为您匹配相应路线" android:layout_below="@+id/truck_plate_title" android:paddingStart="19dp"/>
    <View android:id="@+id/divider" android:background="#ffeeeeee" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="20dp" android:layout_below="@+id/truck_plate_desc"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/divider" android:paddingStart="20dp" android:paddingEnd="20dp">
        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/truck_mini" android:background="@drawable/nsdk_drawable_truck_type_bg" android:layout_width="wrap_content" android:layout_height="76dp" android:layout_weight="1">
            <ImageView android:layout_width="78dp" android:layout_height="59dp" android:src="@drawable/nsdk_truck_type_mini_icon" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/truck_mini_text"/>
            <TextView android:textSize="18dp" android:textColor="#ff222222" android:id="@+id/truck_mini_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="微型" android:singleLine="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View android:layout_width="19dp" android:layout_height="match_parent"/>
        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/truck_light" android:background="@drawable/nsdk_drawable_truck_type_bg" android:layout_width="wrap_content" android:layout_height="76dp" android:layout_weight="1">
            <ImageView android:layout_width="78dp" android:layout_height="59dp" android:src="@drawable/nsdk_truck_type_light_icon" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/truck_light_text"/>
            <TextView android:textSize="18dp" android:textColor="#ff222222" android:id="@+id/truck_light_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="轻型" android:singleLine="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/layout_1" android:paddingStart="20dp" android:paddingEnd="20dp">
        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/truck_medium" android:background="@drawable/nsdk_drawable_truck_type_bg" android:layout_width="wrap_content" android:layout_height="76dp" android:layout_weight="1">
            <ImageView android:layout_width="78dp" android:layout_height="59dp" android:src="@drawable/nsdk_truck_type_medium_icon" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/truck_medium_text"/>
            <TextView android:textSize="18dp" android:textColor="#ff222222" android:id="@+id/truck_medium_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="中型" android:singleLine="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View android:layout_width="20dp" android:layout_height="match_parent"/>
        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/truck_heavy" android:background="@drawable/nsdk_drawable_truck_type_bg" android:layout_width="wrap_content" android:layout_height="76dp" android:layout_weight="1">
            <ImageView android:layout_width="78dp" android:layout_height="59dp" android:src="@drawable/nsdk_truck_type_heavy_icon" android:layout_centerVertical="true" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/truck_heavy_text"/>
            <TextView android:textSize="18dp" android:textColor="#ff222222" android:id="@+id/truck_heavy_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="重型" android:singleLine="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:textSize="12dp" android:textColor="#5c6273" android:id="@+id/tv_truck_info_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/layout_2" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <TextView android:textSize="16dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_calc_route" android:background="@drawable/nsdk_truck_add_plate_normal_bg" android:clickable="false" android:layout_width="match_parent" android:layout_height="42dp" android:layout_marginTop="15dp" android:layout_marginBottom="20dp" android:text="开始规划路线" android:layout_below="@+id/tv_truck_info_desc" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
</RelativeLayout>
