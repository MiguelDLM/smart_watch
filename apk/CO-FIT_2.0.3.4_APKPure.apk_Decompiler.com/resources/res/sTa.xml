<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:id="@+id/big_bubble_container" android:background="@drawable/nsdk_drawable_rr_dynamic_card_middle_bubble" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/big_bubble_icon" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginRight="10dp" android:scaleType="fitCenter"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="12dp" android:textColor="#28303a" android:id="@+id/bubble_first_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="10dp" android:textColor="#28303a" android:id="@+id/bubble_second_text" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/small_bubble_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/small_bubble_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerCrop"/>
        <TextView android:textSize="12dp" android:textColor="#333333" android:layout_gravity="center" android:id="@+id/small_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerCrop" android:singleLine="true"/>
    </LinearLayout>
</FrameLayout>
