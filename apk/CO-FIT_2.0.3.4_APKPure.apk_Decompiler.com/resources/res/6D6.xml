<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root_view" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/sport_record_total_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.sma.smartv3.view.text.PFMedium android:textSize="20sp" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/sport_record_total_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_marginTop="10dp" android:text="@string/sports_overview" android:layout_centerHorizontal="true"/>
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="110dp">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="23dp" android:layout_weight="5">
                <com.sma.smartv3.view.text.PFMedium android:textSize="30dp" android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sport_record_total_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="13sp" android:textColor="@color/line_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sport_record_total_duration_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
            </LinearLayout>
            <View android:background="@color/line_color" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_marginBottom="40dp"/>
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_weight="4">
                <com.sma.smartv3.view.text.PFMedium android:textSize="30dp" android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sport_record_total_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="13sp" android:textColor="@color/line_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sport_record_total_size_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
            </LinearLayout>
            <View android:background="@color/line_color" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginTop="40dp" android:layout_marginBottom="40dp"/>
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="10dp" android:layout_weight="4">
                <com.sma.smartv3.view.text.PFMedium android:textSize="30dp" android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sport_record_total_calorie" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="13sp" android:textColor="@color/line_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sport_record_total_calorie_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:background="@drawable/common_ripple" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView android:id="@+id/scrollView" android:visibility="gone" style="@style/status_item_info_nsv">
            <RelativeLayout style="@style/status_item_info_rl_top">
                <RelativeLayout android:id="@+id/loading" style="@style/status_item_info_rl_top"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/dataContent" style="@style/status_item_info_rl_top"/>
                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/nowValue" style="@style/status_item_info_ib_one"/>
                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/nowTimeDetails" style="@style/status_item_info_ib_one"/>
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/valueUnit" style="@style/status_item_info_now_time"/>
                <ImageView android:id="@+id/image" style="@style/status_item_info_now_time"/>
                <ImageButton android:id="@+id/beforeTime" android:src="@drawable/selector_left_enter" style="@style/status_item_info_ib_one"/>
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/nowTime" android:text="@string/today" style="@style/status_item_info_now_time"/>
                <ImageButton android:id="@+id/nextTime" android:src="@drawable/selector_right_enter" style="@style/status_item_info_ib_two"/>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="20dp"/>
    </FrameLayout>
</LinearLayout>
