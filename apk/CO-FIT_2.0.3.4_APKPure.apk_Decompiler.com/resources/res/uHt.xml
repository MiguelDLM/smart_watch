<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/bnav_top_empty_view" layout="@layout/bnav_statusbar_empty_view_include"/>
    <RelativeLayout android:id="@+id/nsdk_driving_habit_status_bar" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_50dp" android:layout_below="@+id/bnav_top_empty_view">
        <ImageView android:id="@+id/nsdk_driving_habit_back_img" android:padding="@dimen/navi_dimens_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bnav_titlebar_ic_back_new" android:layout_centerVertical="true"/>
