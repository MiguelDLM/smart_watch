<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/nsdk_disclaimer_bg_color" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/navi_dimens_44dp">
        <TextView android:textSize="20sp" android:textColor="@color/nsdk_common_black" android:gravity="center" android:background="@color/nsdk_disclaimer_header_color" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_50dp" android:text="免责声明"/>
        <View android:background="#b6b6b6" android:layout_width="match_parent" android:layout_height="1px"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:paddingLeft="@dimen/navi_dimens_25dp" android:paddingTop="@dimen/navi_dimens_6dp" android:paddingRight="@dimen/navi_dimens_25dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.baidu.navisdk.ui.disclaimer.view.DisclaimerLineView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_25dp" app:nsdk_content="此导航提供的信息仅供您出行作为参考，请不要作为您出行的唯一依据。"/>
                <com.baidu.navisdk.ui.disclaimer.view.DisclaimerLineView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_25dp" app:nsdk_content="在您驾车时，请避免操作此产品，以免发生人身危险。"/>
                <com.baidu.navisdk.ui.disclaimer.view.DisclaimerLineView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_25dp" app:nsdk_content="本产品完全免费，产生的网络流量费，由运营商收取。"/>
                <com.baidu.navisdk.ui.disclaimer.view.DisclaimerLineView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_25dp" app:nsdk_content="导航会持续使用卫星定位服务，切换至后台播报时，仍会保持卫星定位连接，相比其他操作会消耗更多的电量。"/>
                <com.baidu.navisdk.ui.disclaimer.view.DisclaimerLineView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_25dp" app:nsdk_content="因违反交通法规及上述忠告而发生的一切损失，本产品不承担任何责任。"/>
                <CheckBox android:textSize="15sp" android:textColor="@color/nsdk_common_black" android:id="@+id/disclaimer_checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="下次不再提醒"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/disclaimer_button_container" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_44dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="18sp" android:textColor="@color/nsdk_common_black" android:gravity="center" android:id="@+id/disclaimer_reject_btn" android:background="@drawable/nsdk_disclaimer_btn_bg_selector" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="拒绝" android:layout_weight="1"/>
        <View android:background="#d0d0d0" android:layout_width="@dimen/navi_dimens_1dp" android:layout_height="match_parent"/>
        <TextView android:textSize="18sp" android:textColor="@color/nsdk_common_black" android:gravity="center" android:id="@+id/disclaimer_receive_btn" android:background="@drawable/nsdk_disclaimer_btn_bg_selector" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="接受" android:layout_weight="1"/>
    </LinearLayout>
    <View android:background="#d0d0d0" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_1dp" android:layout_above="@+id/disclaimer_button_container"/>
</RelativeLayout>
