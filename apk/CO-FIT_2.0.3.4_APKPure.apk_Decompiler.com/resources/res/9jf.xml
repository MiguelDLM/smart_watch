<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="-5dp" android:src="@drawable/popup_view_btn_bg_vector" android:layout_marginEnd="15dp"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/popup_view_btn_bg" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="10dp">
        <LinearLayout android:id="@+id/popup_switch_ai_model" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ai_answer_switch_icon"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="14sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/switch_ai_modle" android:maxLines="1" android:layout_marginStart="6dp"/>
        </LinearLayout>
        <View android:layout_gravity="center_horizontal" android:id="@+id/popup_switch_ai_model_view" android:background="@color/white" android:visibility="invisible" android:layout_width="120dp" android:layout_height="1px" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
        <LinearLayout android:id="@+id/popup_clear_chats" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ai_answer_chat_clean_icon"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="14sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/clear_chats" android:maxLines="1" android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
