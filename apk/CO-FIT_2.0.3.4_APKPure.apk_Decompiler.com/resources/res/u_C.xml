<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp">
        <LinearLayout android:padding="10dp" android:layout_marginEnd="15dp" style="@style/weight_measure_two_style">
            <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/weight"/>
            <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <com.sma.smartv3.view.text.DINCondBold android:textSize="30sp" android:textColor="@color/text_color" android:id="@+id/tv_weightValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/data_none"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/text_color" android:id="@+id/tv_weightUnit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kg" android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:padding="10dp" style="@style/weight_measure_two_style">
            <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bfr"/>
            <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                <com.sma.smartv3.view.text.DINCondBold android:textSize="30sp" android:textColor="@color/text_color" android:id="@+id/tv_bfrValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/data_none"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/percent" android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:paddingTop="25dp" android:paddingBottom="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="10dp">
        <com.sma.smartv3.view.segmentedbar.CircleThumbSegmentedBarView android:id="@+id/sbv_bmi" style="@style/sbv_circle_thumb_style"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_weight_measure_item_panel" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.google.android.material.tabs.TabLayout android:id="@+id/table" app:tabIndicatorFullWidth="false" app:tabPaddingEnd="-5dp" app:tabPaddingStart="-5dp" app:tabTextAppearance="@style/TabLayoutTextStyle" style="@style/status_weight_tba">
            <com.google.android.material.tabs.TabItem android:icon="@drawable/icon_weight_all" android:id="@+id/tab_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/all"/>
            <com.google.android.material.tabs.TabItem android:icon="@drawable/icon_weight_standard" android:id="@+id/tab_standard" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/level_standard"/>
            <com.google.android.material.tabs.TabItem android:icon="@drawable/icon_weight_low" android:id="@+id/tab_low" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/level_low"/>
            <com.google.android.material.tabs.TabItem android:icon="@drawable/icon_weight_high" android:id="@+id/tab_high" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/level_high"/>
        </com.google.android.material.tabs.TabLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_weight="1" android:nestedScrollingEnabled="false"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/the_bottom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
