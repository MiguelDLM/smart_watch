<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <com.sma.smartv3.view.text.PFMedium android:textSize="14dp" android:textColor="@color/line_color" android:id="@+id/tv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/audio_book_learn_transfer_tip" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <com.sma.smartv3.view.text.PFMedium android:textSize="14dp" android:textColor="@color/line_color" android:id="@+id/tv_free_space" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/app_store_title_tip_2" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/task_panel" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginStart="22dp" android:layout_marginEnd="22dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/text_color" android:id="@+id/tv_progress_tip" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/music_transfer_task_tip" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/text_color" android:id="@+id/tv_total_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1/100"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/text_color" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="0dp" android:layout_height="wrap_content" android:text="" android:singleLine="true" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/text_color" android:id="@+id/tv_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1%" android:layout_marginStart="20dp"/>
        </LinearLayout>
        <ProgressBar android:id="@+id/pb_progress" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/colorAccent" android:id="@+id/tv_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:onClick="onCancel"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:textColor="@color/colorAccent" android:id="@+id/tv_retry" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/retry" android:onClick="onRetry"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/audio_book_reclerview_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="10dp">
        <com.sma.smartv3.view.text.PFMedium android:textSize="18dp" android:textColor="@color/text_color" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/audio_book_device_title" android:layout_weight="1" android:layout_marginStart="20dp"/>
        <com.sma.smartv3.view.text.PFMedium android:textSize="14dp" android:textColor="@color/light" android:layout_gravity="center_vertical" android:id="@+id/audio_book_open_delete_btn" android:background="@drawable/selector_bottom_btn_bg" android:paddingTop="4dp" android:paddingBottom="4dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/delete" android:paddingStart="8dp" android:paddingEnd="8dp" android:layout_marginEnd="20dp" android:backgroundTint="@color/red"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
    <Button android:textSize="16dp" android:textColor="@color/light" android:background="@drawable/pop_bt_2" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/audio_book_pc_link_jump_tv" android:onClick="onBottomLinkJump" android:textAllCaps="false" android:layout_marginStart="40dp" android:layout_marginEnd="40dp"/>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">
        <Button android:textSize="16dp" android:textColor="@color/light" android:id="@+id/audio_book_left_btn" android:background="@drawable/pop_bt_3" android:visibility="gone" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/text_select_all" android:layout_weight="1" android:textAllCaps="false" android:layout_marginStart="20dp"/>
        <Button android:textSize="16dp" android:textColor="@color/light" android:id="@+id/audio_book_right_btn" android:background="@drawable/pop_bt_2" android:layout_width="0dp" android:layout_height="40dp" android:text="@string/audio_book_btn_add_files" android:layout_weight="1" android:onClick="onBottomClick" android:textAllCaps="false" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    </LinearLayout>
</LinearLayout>
