<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_view" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <CheckBox android:textColor="@color/colorAccent" android:id="@+id/cb_shutdown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Shutdown"/>
        <CheckBox android:textColor="@color/colorAccent" android:id="@+id/cb_ota_file" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Local OTA"/>
        <CheckBox android:textColor="@color/colorAccent" android:id="@+id/cb_sma_update" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SMA Update"/>
        <CheckBox android:textColor="@color/colorAccent" android:id="@+id/cb_sma_downgrade" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SMA Downgrade"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Buffer Size:"/>
            <EditText android:textColor="@color/text_color" android:id="@+id/et_buffer_size" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1018" android:inputType="number"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textColor="@color/text_color" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/current_selected_info" android:layout_weight="3"/>
            <androidx.appcompat.widget.AppCompatButton android:layout_width="0dp" android:layout_height="wrap_content" android:text="Copy" android:layout_weight="1" android:onClick="onCopy" android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="2dp"/>
        <TextView android:textSize="14dp" android:textColor="@color/text_color" android:id="@+id/tv_version_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:lines="5"/>
        <LinearLayout android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="2dp"/>
        <EditText android:textColor="@color/text_color" android:textColorHint="@color/text_color" android:id="@+id/et_old_ble_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/click_search_hint"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textColor="@color/text_color" android:textColorHint="@color/text_color" android:id="@+id/et_signal" android:layout_width="0dp" android:layout_height="wrap_content" android:text="60" android:layout_weight="1" android:inputType="number"/>
            <androidx.appcompat.widget.AppCompatButton android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/click_search_signal_hint" android:layout_weight="2" android:onClick="startSearch" android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_signal_hint"/>
                <TextView android:textColor="@color/text_color" android:id="@+id/tv_search_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upgraded_devices"/>
                <TextView android:textColor="@color/text_color" android:id="@+id/tv_already_ota" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ListView android:id="@+id/list_view" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="100dp" android:divider="@null"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/bt_start_ota" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/confirm_start_ota_tip" android:onClick="startOta" android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/bt_stop_ota" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/stop_upgrade" android:onClick="stopOta" android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton android:id="@+id/bt_clear_ota_history" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/clear_upgraded_records" android:onClick="clearOtaHistory" android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>
