<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/gen_panel" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <LinearLayout android:orientation="vertical" android:background="@drawable/common_ripple_status_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginStart="22dp" android:layout_marginEnd="22dp">
                    <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_model" android:background="@null" android:layout_marginTop="0dp" android:onClick="onSetModel" app:abh_left_text="@string/pay_dail_aigc_modle" app:abh_top_line="false" style="@style/abh_settings_item"/>
                    <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_style" android:background="@null" android:layout_marginTop="0dp" android:onClick="onSetStyle" app:abh_bottom_line="false" app:abh_left_text="@string/style" app:abh_top_line="false" style="@style/abh_settings_item"/>
                </LinearLayout>
                <RelativeLayout android:background="@drawable/common_ripple_status_item" android:padding="15dp" android:layout_width="match_parent" android:layout_height="200dp" android:layout_marginTop="22dp" android:layout_marginStart="22dp" android:layout_marginEnd="22dp">
                    <EditText android:textColor="@color/text_color" android:textColorHint="@color/line_color" android:gravity="start" android:id="@+id/edt_content" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/aigc_query_tip"/>
                </RelativeLayout>
                <View android:layout_width="1dp" android:layout_height="wrap_content" android:layout_weight="1"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="14sp" android:textColor="@color/line_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/aigc_tip" android:layout_marginStart="22dp" android:layout_marginEnd="22dp"/>
            </LinearLayout>
            <Button android:id="@+id/btn_search" android:visibility="gone" android:layout_marginTop="20dp" android:layout_marginBottom="0dp" android:text="查询状态" android:onClick="onSearch" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" style="@style/btn_common"/>
            <Button android:id="@+id/btn_gen" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:text="@string/generate" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" style="@style/btn_common"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/preview_panel" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="20dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button android:id="@+id/btn_again" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/aigc_draw_again" android:onClick="onAgain" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" style="@style/btn_common"/>
        <Button android:id="@+id/btn_gen_next_step" android:layout_marginBottom="10dp" android:text="@string/aigc_generate_watch_face" android:layout_marginStart="32dp" android:layout_marginEnd="32dp" style="@style/btn_common"/>
    </LinearLayout>
</LinearLayout>
