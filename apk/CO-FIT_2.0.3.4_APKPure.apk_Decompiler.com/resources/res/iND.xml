        <ImageView android:id="@+id/iv_ugc_comment_useful" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nsdk_ugc_useful_normal"/>
        <TextView android:textSize="12sp" android:textColor="#333333" android:id="@+id/tv_ugc_comment_useful_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_4dp" android:maxLines="1" android:maxLength="4"/>
    </LinearLayout>
</RelativeLayout>
