    <TextView android:textSize="10sp" android:textColor="#fff" android:id="@+id/tv_ugc_detail_comment_label" android:background="@drawable/nsdk_ugc_event_detailes_comment_label_bg_top" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_10dp" android:text="@string/nsdk_string_ugc_top_comment" android:includeFontPadding="false" android:layout_toRightOf="@+id/tv_time_stamp" android:layout_centerVertical="true"/>
