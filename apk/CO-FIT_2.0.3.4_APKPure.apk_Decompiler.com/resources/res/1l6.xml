<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" style="@style/pop_common_container_style">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingTop="25dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/pop_translation_detail_copy_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pop_recording_detail_copy_title" android:drawableTop="@drawable/translation_detail_copy_icon" android:drawablePadding="8dp" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/pop_translation_detail_export" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pop_recording_detail_export_title" android:drawableTop="@drawable/translation_detail_export_icon" android:drawablePadding="8dp" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/pop_translation_detail_delete_audio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pop_recording_detail_delete_title" android:drawableTop="@drawable/translation_detail_delete_icon" android:drawablePadding="8dp" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
        <LinearLayout android:orientation="vertical" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recording_information_title" android:drawableLeft="@drawable/translation_detail_title_icon" android:drawablePadding="5dp" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:id="@+id/pop_translation_detail_audio_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:id="@+id/pop_translation_detail_audio_text_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:id="@+id/pop_translation_detail_audio_file_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:id="@+id/pop_translation_detail_audio_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/layout_pop_bottom_btn"/>
</LinearLayout>
