<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/llMovingTarget" android:paddingBottom="0dp" style="@style/personal_info_rl">
    <LinearLayout android:layout_height="match_parent" android:layout_above="@+id/btGoalDone" style="@style/personal_info_ll">
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/step_goal_suggest"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <com.sma.smartv3.view.text.PFMedium android:layout_marginTop="0dp" android:text="@string/moving_target" style="@style/personal_info_tv_style"/>
                <com.sma.smartv3.view.WheelView.WheelView android:id="@+id/wv" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/approximatelyEqualTo" android:layout_marginTop="0dp" android:text="@string/approximately_equal" style="@style/personal_info_tv_style"/>
                <RelativeLayout android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="100dp" android:layout_height="wrap_content">
                        <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/icon_distance_72"/>
                        <com.sma.smartv3.view.text.DINCondBold android:textSize="28sp" android:textColor="@color/text_color" android:id="@+id/distanceGoal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="770.0"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/nowGoalUnit" android:layout_marginTop="3dp" android:text="@string/km" style="@style/personal_info_tv_style"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginStart="150dp">
                        <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/icon_calories_72"/>
                        <com.sma.smartv3.view.text.DINCondBold android:textSize="28sp" android:textColor="@color/text_color" android:id="@+id/caloriesGoal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="308"/>
                        <com.sma.smartv3.view.text.PFMedium android:layout_marginTop="3dp" android:text="@string/kcal" style="@style/personal_info_tv_style"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button android:id="@+id/btGoalDone" android:layout_marginTop="0dp" android:layout_marginBottom="0dp" android:text="@string/next" android:onClick="doneClick" android:layout_marginStart="0dp" android:layout_marginEnd="0dp" style="@style/bottom_btn.personal_info_next"/>
</RelativeLayout>
