<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/status_card_style">
    <RelativeLayout style="@style/status_card_style_1">
        <com.sma.smartv3.view.TintImageView android:id="@+id/sleepIv" android:src="@drawable/icon_sleep" style="@style/status_card_style_1_iv"/>
        <LinearLayout android:layout_toEndOf="@+id/sleepIv" style="@style/status_card_style_1_ll">
            <com.sma.smartv3.view.text.PFMedium android:text="@string/sleep" style="@style/status_card_style_1_title"/>
            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sleepTime" android:text="--" style="@style/status_card_style_1_time"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true">
            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sleepHour" android:text="0" android:layout_marginEnd="4dp" style="@style/status_card_style_1_content"/>
            <com.sma.smartv3.view.text.PFRegular android:text="H" android:layout_marginEnd="8dp" style="@style/unit_style"/>
            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sleepMinute" android:text="0" android:layout_marginEnd="4dp" style="@style/status_card_style_1_content"/>
            <com.sma.smartv3.view.text.PFRegular android:text="Min" android:layout_marginEnd="8dp" style="@style/unit_style"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout style="@style/status_item_chart_rl_style">
        <com.sma.smartv3.view.text.DINCondBold android:textColor="@color/transparent" android:id="@+id/noData" style="@style/no_data_tv"/>
        <FrameLayout android:background="@drawable/cofit_shape_status_item_sleep_bg" android:layout_width="match_parent" android:layout_height="100dp">
            <RelativeLayout android:id="@+id/sleepBarChartRl" android:layout_width="match_parent" android:layout_height="100dp">
                <com.github.mikephil.charting.charts.BarChart android:id="@+id/sleepBarChart" android:layout_width="match_parent" android:layout_height="100dp"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="80dp" android:layout_marginStart="6dp" android:layout_marginEnd="6dp">
                    <TextView android:textSize="10sp" android:textColor="@color/line_color" android:id="@+id/sleepStartTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="22:00" android:layout_alignParentStart="true"/>
                    <TextView android:textSize="10sp" android:textColor="@color/line_color" android:id="@+id/sleepEndTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="08:00" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
