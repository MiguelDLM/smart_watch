<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginHorizontal="20dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="15dp">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.sma.smartv3.view.text.PFMedium android:textSize="16dp" android:textColor="@color/colorAccent" android:id="@+id/tv_next_time_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="16dp" android:textColor="@color/line_color" android:id="@+id/tv_next_time_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <com.sma.smartv3.view.text.PFMedium android:textSize="16dp" android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/prayer_next_time_countdown"/>
                <com.sma.smartv3.view.CountDownView android:textSize="16dp" android:textColor="@color/line_color" android:id="@+id/tv_count_down" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/rectangular_background" android:paddingTop="2dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.sma.smartv3.view.FutureCalendarView android:id="@+id/calendarView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="12dp" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
