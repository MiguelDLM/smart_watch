<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="200dp">
    <ImageView android:id="@+id/pop_center_prompt_img" android:layout_width="match_parent" android:layout_height="300dp" android:src="@drawable/evaluation_pop_iv_bg" android:layout_centerHorizontal="true"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/pop_top_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="150dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:backgroundTint="#fff8f3">
        <TextView android:textSize="28dp" android:textColor="@color/order_text_orange" android:gravity="center" android:id="@+id/pop_center_prompt_img_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/score_pop_title" app:my_font="4"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/evaluation_star"/>
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/evaluation_star"/>
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/evaluation_star"/>
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/evaluation_star"/>
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/evaluation_star"/>
        </LinearLayout>
        <TextView android:textSize="18dp" android:textColor="@color/line_color" android:gravity="center" android:id="@+id/pop_center_prompt_img_content" android:paddingTop="5dp" android:paddingBottom="5dp" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/score_pop_content" android:maxLines="10" app:my_font="4"/>
        <Button android:enabled="true" android:textSize="18dp" android:textColor="@color/white" android:id="@+id/pop_center_evaluation_praise" android:layout_width="match_parent" android:layout_height="45dp" android:layout_marginLeft="30dp" android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:text="@string/score_pop_btn_praise" style="@style/btn_common"/>
        <TextView android:textSize="18dp" android:textColor="@color/line_color" android:gravity="center" android:id="@+id/pop_center_evaluation_feedback" android:paddingTop="10dp" android:paddingBottom="10dp" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/score_pop_btn_feedback" android:maxLines="10" android:paddingStart="25dp" android:paddingEnd="25dp" app:my_font="4"/>
        <TextView android:textSize="14dp" android:textColor="@color/line_color" android:gravity="center" android:id="@+id/pop_center_prompt_reminders" android:paddingTop="10dp" android:paddingBottom="15dp" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/score_pop_btn_reject" android:maxLines="10" android:paddingStart="25dp" android:paddingEnd="25dp" app:my_font="4"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="125dp" android:layout_centerHorizontal="true">
        <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/evaluation_hand_left_iv" android:layout_marginStart="20dp"/>
        <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/evaluation_hand_right_iv" android:layout_marginStart="75dp"/>
    </LinearLayout>
</RelativeLayout>
