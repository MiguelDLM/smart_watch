<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <RelativeLayout android:id="@+id/rl_input" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/chat_bottom" android:background="@color/view_page_secondary_bg" android:paddingTop="15dp" android:paddingBottom="15dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:textSize="14sp" android:id="@+id/iv_chat_voice" android:background="@drawable/icon_chat_audio" android:visibility="gone" android:layout_width="41dp" android:layout_height="41dp" android:layout_centerVertical="true"/>
            <EditText android:textSize="16dp" android:textColor="@color/text_color" android:id="@+id/et_chat_content" android:background="@color/voice_input_bag" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/btn_chat_send" android:layout_toEndOf="@+id/iv_chat_voice"/>
            <Button android:textSize="16dp" android:textColor="@color/white" android:id="@+id/btn_chat_send" android:background="@drawable/voice_chat_common_bg" android:layout_width="60dp" android:layout_height="34dp" android:text="@string/send" android:layout_centerVertical="true" android:onClick="onSend" android:textAllCaps="false" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true" android:backgroundTint="@color/colorAccent"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
