<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/truck_type_layout" android:background="@drawable/bnav_bg_attribution_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="19dp" android:textColor="#ff222222" android:gravity="center_vertical" android:id="@+id/truck_plate_title" android:layout_width="wrap_content" android:layout_height="27dp" android:layout_marginTop="20dp" android:text="车型信息不完善" android:fontFamily="sans-serif-medium" android:layout_marginStart="20dp" android:layout_alignParentStart="true"/>
    <RelativeLayout android:id="@+id/dialog_close" android:layout_width="40dp" android:layout_height="27dp" android:layout_alignBottom="@+id/truck_plate_title" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bnav_plate_limit_setting_close" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="#ffeeeeee" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="20dp" android:layout_below="@+id/truck_plate_title"/>
    <TextView android:textSize="16dp" android:textColor="#ff222222" android:orientation="horizontal" android:id="@+id/truck_complete_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="货车信息不完善，可能导致路线不合理或者违章，是否现在完善车辆信息？" android:layout_below="@+id/divider" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginTop="20dp" android:layout_marginBottom="13dp" android:layout_below="@+id/truck_complete_message" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <TextView android:textSize="16dp" android:textColor="#ff3385ff" android:gravity="center" android:id="@+id/goto_navi" android:background="@drawable/nsdk_truck_to_navi_bg_selector" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="继续导航" android:layout_weight="1"/>
        <View android:layout_width="10dp" android:layout_height="match_parent"/>
        <TextView android:textSize="16dp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/complete_info" android:background="@drawable/nsdk_truck_to_complete_bg_selector" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="完善信息" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
