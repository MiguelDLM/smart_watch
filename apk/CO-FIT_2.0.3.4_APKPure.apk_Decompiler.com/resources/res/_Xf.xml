<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/pass_route_detail_rl" android:background="@drawable/nsdk_rr_pass_road_right_big" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/pass_route_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="京新高速"/>
                <TextView android:layout_gravity="center_vertical" android:background="#e5e5e5" android:layout_width="0.5dp" android:layout_height="11dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"/>
                <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/pass_route_num_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2-5车道"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="#333333" android:gravity="center" android:id="@+id/pass_speed_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100-120km/h"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/navi_guodao_rl" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/guodao_label" android:background="@drawable/bnav_bg_pass_road_guodao_label" android:paddingLeft="3dp" android:paddingTop="1dp" android:paddingRight="3dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="国道"/>
        <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/guodao_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:text="走向成功的道路"/>
    </LinearLayout>
</RelativeLayout>
