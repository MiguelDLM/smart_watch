<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/route_result_content_view" android:background="@drawable/nsdk_route_result_center_background" android:layout_width="match_parent" android:layout_height="70dp">
    <RelativeLayout android:id="@+id/left_container" android:layout_width="28dp" android:layout_height="match_parent" android:layout_marginLeft="13dp" android:layout_marginRight="25dp">
        <View android:id="@+id/connect_line_up" android:background="@drawable/bnav_bg_rr_detail_vertical_line" android:layout_width="70dp" android:layout_height="5dp" android:layout_marginLeft="-30dp" android:layout_marginRight="-30dp" android:layout_centerHorizontal="true" android:layerType="software"/>
        <ImageView android:id="@+id/icon" android:background="#ffffff" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginTop="5dp" android:layout_below="@+id/connect_line_up" android:layout_centerInParent="false"/>
        <View android:id="@+id/connect_line_down" android:background="@drawable/bnav_bg_rr_detail_vertical_line" android:layout_width="70dp" android:layout_height="27dp" android:layout_marginLeft="-30dp" android:layout_marginTop="5dp" android:layout_marginRight="-30dp" android:layout_below="@+id/icon" android:layout_centerHorizontal="true" android:layerType="software"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/right_ourter_container" android:background="@drawable/nsdk_rr_detail_item_selector" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/left_container">
        <LinearLayout android:orientation="vertical" android:id="@+id/text_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <TextView android:textSize="16dp" android:textColor="#333333" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_road_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="高新高速公路" android:maxLines="1"/>
            <TextView android:textSize="14dp" android:textColor="#999999" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/tv_action" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="行驶100公里" android:maxLines="1"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/bottom_divider" android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginRight="10dp" android:layout_alignLeft="@+id/right_ourter_container" android:layout_alignRight="@+id/right_ourter_container" android:layout_alignParentBottom="true"/>
</RelativeLayout>
