<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_mode_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_real" app:abh_description="@string/hr_mode_real_des" app:abh_title="@string/hr_mode_real_title" style="@style/abh_settings_item"/>
                <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_smart" app:abh_description="@string/hr_mode_smart_des" app:abh_title="@string/hr_mode_smart_title" style="@style/abh_settings_item"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_time_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header" app:abh_description="@string/heart_rate_monitoring_tip" app:abh_title="@string/heart_rate_monitoring" style="@style/abh_settings_item"/>
                <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_time_range" android:onClick="onSetTimeRange" app:abh_left_text="@string/time_settings" style="@style/abh_settings_item"/>
                <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_interval" android:onClick="onSetInterval" app:abh_left_text="@string/monitoring_interval" style="@style/abh_settings_item"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_warn_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_high" app:abh_description="@string/heart_rate_limit_reminder_tip" app:abh_title="@string/heart_rate_limit_reminder" style="@style/abh_settings_item"/>
                    <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_high_value" android:onClick="onSetHighValue" app:abh_left_text="@string/heart_rate_limit" style="@style/abh_settings_item"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_low" app:abh_description="@string/heart_rate_lower_limit_reminder_tip" app:abh_title="@string/heart_rate_lower_limit_reminder" style="@style/abh_settings_item"/>
                    <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_low_value" android:onClick="onSetLowValue" app:abh_left_text="@string/heart_rate_lower_limit" style="@style/abh_settings_item"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
