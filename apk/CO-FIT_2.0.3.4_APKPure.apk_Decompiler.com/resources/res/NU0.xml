<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/content_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/bnav_tab_background" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/remain_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="剩余：0km" android:layout_weight="1"/>
            <TextView android:id="@+id/remain_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="剩余：0分钟" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:background="@drawable/bnav_tab_background" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <TextView android:id="@+id/distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0米" android:layout_weight="1"/>
            <ImageView android:id="@+id/turnIcon" android:layout_width="20dp" android:layout_height="20dp" android:tint="#000000" android:layout_weight="1"/>
            <TextView android:gravity="center" android:id="@+id/route_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_gravity="bottom" android:id="@+id/rl_button" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_above="@+id/layout_3tab">
        <Button android:textSize="18dp" android:textColor="#333333" android:gravity="center" android:id="@+id/btn_prefer" android:background="@drawable/bnav_tab_background" android:layout_width="80dp" android:layout_height="40dp" android:text="偏好选择" android:layout_alignParentBottom="true"/>
        <Button android:textSize="18dp" android:textColor="#333333" android:gravity="center" android:id="@+id/btn_fullView" android:background="@drawable/bnav_tab_background" android:layout_width="50dp" android:layout_height="40dp" android:layout_marginBottom="5dp" android:text="全览" android:layout_above="@+id/btn_prefer"/>
        <Button android:textSize="18dp" android:textColor="#333333" android:gravity="center" android:id="@+id/btn_road" android:background="@drawable/bnav_tab_background" android:layout_width="50dp" android:layout_height="40dp" android:text="路况" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_3tab" android:background="@drawable/bnav_tab_background" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <include android:id="@+id/route_0" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" layout="@layout/item_route_result_tab"/>
            <include android:id="@+id/route_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" layout="@layout/item_route_result_tab"/>
            <include android:id="@+id/route_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" layout="@layout/item_route_result_tab"/>
        </LinearLayout>
        <View android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textSize="16dp" android:textColor="@color/bnav_text_selector" android:gravity="center" android:id="@+id/btn_start_navi" android:background="@drawable/bnav_tv_background" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:text="开始导航" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
