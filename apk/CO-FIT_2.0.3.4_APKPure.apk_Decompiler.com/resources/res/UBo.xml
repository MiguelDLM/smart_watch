<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_view" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:id="@+id/create_plan_confirm_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/create_plan_title" layout="@layout/layout_title_iv_tv_iv"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/create_plan_btn_layout" android:layout_below="@+id/create_plan_title" style="@style/coach_layout_padding_start_end"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/create_plan_btn_layout" android:background="@color/view_page_secondary_bg" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <Button android:textColor="@color/colorAccent" android:id="@+id/coach_modify_plan" android:background="@drawable/pop_bt_5" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/abh_modify_btn_tv" android:layout_weight="1" style="@style/pop_bottom_btn_1_style"/>
            <Button android:id="@+id/coach_confirm_plan" android:background="@drawable/pop_bt_4" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/abh_confirm_btn_tv" android:layout_weight="1" android:layout_marginStart="16dp" style="@style/pop_bottom_btn_2_style"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/create_plan_loading_layout" android:background="@drawable/confirm_plan_ll_bg" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/confirm_plan_ll_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/create_plan_loading_icon"/>
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/light" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/abh_confirm_tip"/>
    </LinearLayout>
</RelativeLayout>
