<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" style="@style/status_item_info_root">
    <androidx.core.widget.NestedScrollView android:id="@+id/scrollView" style="@style/status_item_info_nsv">
        <LinearLayout style="@style/status_item_info_ll">
            <RelativeLayout style="@style/status_item_info_rl_top">
                <ImageButton android:id="@+id/beforeTime" android:src="@drawable/selector_left_enter" style="@style/status_item_info_ib_one"/>
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/nowTime" android:text="@string/today" style="@style/status_item_info_now_time"/>
                <ImageButton android:id="@+id/nextTime" android:src="@drawable/selector_right_enter" style="@style/status_item_info_ib_two"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/loading" android:visibility="gone" style="@style/status_item_info_loading_rl">
                <androidx.core.widget.ContentLoadingProgressBar android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
            </RelativeLayout>
            <LinearLayout android:id="@+id/dataContent" style="@style/status_item_info_ll_two">
                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/nowTimeDetails" android:text="--" style="@style/status_item_info_select_time"/>
                <RelativeLayout style="@style/status_item_info_rl_two">
                    <ImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_temperature" android:layout_alignParentBottom="true" style="@style/status_item_info_iv_left_spacing"/>
                    <com.sma.smartv3.view.text.DINCondBold android:id="@+id/nowValue" android:text="" style="@style/status_item_info_select_value"/>
                    <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/text_color" android:id="@+id/valueUnit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" style="@style/status_item_info_iv_right_spacing"/>
                </RelativeLayout>
                <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.sma.smartv3.view.TempProgressBar android:id="@+id/tempPb" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="26dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" app:circleColor="@color/weight_show_1" app:oneColor="@color/temp_day_item_center_4" app:ringColor="@color/text_color" app:threeColor="@color/temp_day_item_center_6" app:topTvColor="@color/text_color" app:twoColor="@color/temp_day_item_center_5"/>
                </RelativeLayout>
                <LinearLayout android:layout_marginTop="60dp" style="@style/status_item_info_ll_three">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <RelativeLayout android:id="@+id/noData" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.sma.smartv3.view.text.DINCondBold style="@style/no_data_tv"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
