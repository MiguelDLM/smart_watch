<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/top_layout" android:background="@color/bnav_common_titlebar_bg" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_50dp">
        <FrameLayout android:id="@+id/left_content" android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/left_imageview" android:clickable="true" android:layout_width="@dimen/navi_dimens_48dp" android:layout_height="@dimen/navi_dimens_48dp" android:layout_marginRight="@dimen/navi_dimens_10dp" android:src="@drawable/bnav_common_titlebar_ic_back_new" android:scaleType="centerInside"/>
            <Button android:textSize="14sp" android:textColor="#ffffffff" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/left_button" android:background="@drawable/bnav_titlebar_btn_transparent_bg_selector" android:paddingLeft="@dimen/navi_dimens_8dp" android:paddingRight="@dimen/navi_dimens_8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/navi_dimens_10dp" android:minWidth="@dimen/navi_dimens_45dp" android:text="全选" android:maxLength="4"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/right_content" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
            <ImageView android:gravity="center" android:id="@+id/right_imageview" android:background="@drawable/bnav_titlebar_btn_transparent_bg_selector" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/navi_dimens_10dp" android:scaleType="centerInside" android:minWidth="@dimen/navi_dimens_45dp"/>
            <Button android:textSize="@dimen/navi_dimens_14dp" android:textColor="#333333" android:gravity="center" android:id="@+id/right_button" android:background="@drawable/bnav_titlebar_btn_transparent_bg_selector" android:paddingLeft="@dimen/navi_dimens_8dp" android:paddingRight="@dimen/navi_dimens_8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/navi_dimens_10dp" android:minWidth="@dimen/navi_dimens_45dp" android:text="全选"/>
        </FrameLayout>
        <FrameLayout android:gravity="center" android:id="@+id/middle_content" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/right_content" android:layout_toRightOf="@+id/left_content" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/navi_dimens_16dp" android:textColor="@color/bnav_common_titlebar_middle_text" android:gravity="center" android:id="@+id/middle_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:id="@+id/title_bar_divide_line" android:background="#ddd" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/top_layout"/>
</RelativeLayout>
