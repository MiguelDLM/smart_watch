    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="80dp" android:layout_toEndOf="@+id/charge_list_tab_battery">
        <TextView android:textSize="14dp" android:textColor="#ff11141a" android:ellipsize="end" android:id="@+id/charge_list_tab_info_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="充电3次，充电桩充足" android:maxLines="1" android:includeFontPadding="false" android:fontFamily="sans-serif-medium"/>
