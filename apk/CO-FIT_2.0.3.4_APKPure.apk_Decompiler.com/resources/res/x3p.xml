    </RelativeLayout>
    <TextView android:textSize="12dp" android:textColor="#ff11141a" android:id="@+id/charge_list_tab_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="更新续航" android:maxLines="1" android:includeFontPadding="false" android:drawablePadding="2dp" android:layout_centerVertical="true" android:drawableEnd="@drawable/nsdk_energy_charge_arrow_right" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
