<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="360dp" android:layout_height="360dp">
    <ImageView android:id="@+id/iv_nav_image" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="vertical" android:layout_width="170dp" android:layout_height="190dp">
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" app:cardBackgroundColor="#80000000" app:cardCornerRadius="20dp" app:cardElevation="0dp">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_gravity="center" android:id="@+id/iv_nav_type" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/icon_nav_type_walk"/>
                <TextView android:textSize="24dp" android:textColor="#ffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/tv_guide_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="2"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
