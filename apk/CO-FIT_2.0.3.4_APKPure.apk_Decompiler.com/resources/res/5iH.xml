<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/bn_bg_rg_new_simple_guide_view" android:paddingLeft="@dimen/nsdk_rg_simple_guide_margin_h" android:paddingRight="@dimen/nsdk_rg_simple_guide_margin_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:elevation="@dimen/nsdk_rg_default_guide_elevation">
    <ImageView android:id="@+id/bnav_rg_cur_area_state_label" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/nsdk_rg_simple_guide_area_label_margin_top" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:id="@+id/bnav_guide_info_rl" android:layout_width="match_parent" android:layout_height="@dimen/nsdk_rg_simple_guide_top_info_height" android:layout_marginTop="@dimen/nsdk_rg_simple_guide_top_info_margin_top" android:layout_below="@+id/bnav_rg_cur_area_state_label">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/bnav_rg_guide_info_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <ImageView android:id="@+id/bnav_rg_turn_icon" android:layout_width="@dimen/nsdk_rg_icon_simple_mode_turn_zise" android:layout_height="@dimen/nsdk_rg_icon_simple_mode_turn_zise"/>
            <TextView android:textSize="@dimen/navi_dimens_20dp" android:textStyle="bold" android:textColor="#272e3a" android:gravity="center" android:id="@+id/bnav_rg_indoor_floor_icon" android:background="@drawable/bnav_bg_indoor_floor_icon" android:visibility="gone" android:layout_width="@dimen/nsdk_rg_icon_simple_mode_turn_zise" android:layout_height="@dimen/nsdk_rg_icon_simple_mode_turn_zise" android:text="B4"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/bnav_rg_simple_info_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/nsdk_text_size_simple_mode_guide" android:textStyle="bold" android:textColor="@color/nsdk_rg_main_info" android:id="@+id/bnav_rg_distance_num_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="@dimen/nsdk_text_size_end_simple_mode_guide" android:textStyle="bold" android:textColor="@color/nsdk_rg_main_info" android:id="@+id/bnav_rg_after_label_info" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/bnav_rg_loading_bar_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <ImageView android:id="@+id/bnav_rg_progress_cycle" android:background="@drawable/bnav_common_progress_cycle" android:layout_width="@dimen/nsdk_rg_icon_simple_mode_turn_zise" android:layout_height="@dimen/nsdk_rg_icon_simple_mode_turn_zise" android:layout_marginBottom="@dimen/navi_dimens_3dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/navi_dimens_15dp" android:textColor="@color/nsdk_rg_main_info" android:ellipsize="end" android:gravity="center" android:id="@+id/bnav_rg_loading_info" android:layout_width="match_parent" android:layout_height="match_parent" android:maxLines="2"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/bnav_divider" android:background="#4dffffff" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="@dimen/nsdk_rg_simple_guide_divider_margin_h" android:layout_marginRight="@dimen/nsdk_rg_simple_guide_divider_margin_h" android:layout_below="@+id/bnav_guide_info_rl"/>
    <include android:gravity="center" android:orientation="horizontal" android:id="@+id/bnav_rg_device_status_container" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_30dp" android:layout_below="@+id/bnav_divider" layout="@layout/nsdk_layout_rg_simple_guide_device_state"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/bnav_rg_next_turn_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_30dp" android:layout_below="@+id/bnav_divider">
        <TextView android:textSize="@dimen/navi_dimens_16dp" android:textStyle="bold" android:textColor="@color/nsdk_rg_main_info" android:id="@+id/bnav_rg_sg_next_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="随后"/>
        <ImageView android:id="@+id/bnav_rg_sg_next_turn_icon" android:layout_width="@dimen/navi_dimens_16dp" android:layout_height="@dimen/navi_dimens_16dp" android:layout_marginLeft="@dimen/navi_dimens_4dp" android:src="@drawable/nsdk_ic_lane_turn_around_left"/>
    </LinearLayout>
</RelativeLayout>
