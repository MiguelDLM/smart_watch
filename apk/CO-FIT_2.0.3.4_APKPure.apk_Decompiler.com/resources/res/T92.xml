<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/animationView" android:background="@drawable/bnav_bg_traffic_record" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="240.5dp">
        <LinearLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="19dp" android:layout_marginTop="21dp" android:layout_marginRight="19dp" android:layout_marginBottom="2dp">
            <TextView android:textSize="19sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="进入城区需进行备案登记" android:maxLines="1" android:layout_weight="1" android:fontFamily="HwChinese-medium"/>
            <ImageView android:id="@+id/dismiss_icon" android:layout_width="11.8dp" android:layout_height="11.8dp" android:src="@drawable/bnav_traffic_record_cancle"/>
        </LinearLayout>
        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#c69868" android:ellipsize="end" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="19dp" android:layout_marginTop="1dp" android:text="完成备案可获得进入特定区域权限" android:maxLines="1" android:lineSpacingExtra="15dp"/>
        <View android:background="#eeeeee" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="20dp"/>
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <com.baidu.navisdk.ui.widget.MaxHeightRecyclerView android:id="@+id/cityrecord_recy" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:nsdk_maxHeight="198dp"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/state_view" android:background="@color/nsdk_white_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="115dp">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/state_icon" android:visibility="gone" android:layout_width="38.5dp" android:layout_height="38.5dp" android:src="@drawable/bnav_traffic_record_right"/>
                    <com.baidu.navisdk.ui.widget.RouteResultLoadingImageView android:id="@+id/loadingIcon" android:layout_width="38.5dp" android:layout_height="38.5dp"/>
                </RelativeLayout>
                <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7.5dp">
                    <TextView android:textSize="14sp" android:textColor="#28303a" android:id="@+id/state_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="loading..."/>
                    <TextView android:textSize="14dp" android:textColor="@color/nsdk_swap_holo_bule_bright" android:id="@+id/retry" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="重试"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView android:textSize="16dp" android:textColor="@color/nsdk_white_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/record" android:background="@drawable/bnav_bg_traffic_record_bule" android:visibility="gone" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginLeft="20dp" android:layout_marginTop="31dp" android:layout_marginRight="20dp" android:layout_marginBottom="13dp" android:text="立即备案" android:fontFamily="HwChinese-medium"/>
    </LinearLayout>
</LinearLayout>
