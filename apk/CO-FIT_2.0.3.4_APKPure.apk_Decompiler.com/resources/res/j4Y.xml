<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/background" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageButton android:id="@+id/back" android:visibility="visible" android:contentDescription="@string/app_intro_back_button" android:rotation="180" app:srcCompat="@drawable/ic_appintro_next" style="@style/AppIntroButtonStyleCompat"/>
    <com.github.appintro.internal.AppIntroViewPager android:id="@+id/view_pager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/indicator_container" android:overScrollMode="never"/>
    <Button android:textSize="@dimen/appintro_skiptext_size" android:textColor="@color/text_color" android:id="@+id/skip" android:text="@string/app_intro_skip_button" android:layout_alignParentRight="true" android:labelFor="@string/app_intro_skip_button" style="@style/AppIntroButtonStyleCompat"/>
    <Button android:textSize="@dimen/appintro_donetext_size" android:textColor="@color/guide_text_color" android:id="@+id/next" android:text="@string/next" android:layout_above="@+id/indicator_container" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:layout_alignParentEnd="true" android:labelFor="@string/next" app:srcCompat="@drawable/ic_appintro_next" style="@style/AppIntroButtonStyleCompat"/>
    <Button android:textSize="@dimen/appintro_donetext_size" android:textColor="@color/guide_text_color" android:id="@+id/done" android:visibility="gone" android:text="@string/app_intro_done_button" android:layout_above="@+id/indicator_container" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:layout_alignParentEnd="true" android:labelFor="@string/app_intro_done_button" style="@style/AppIntroButtonStyleCompat"/>
    <FrameLayout android:id="@+id/indicator_container" android:layout_margin="24dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true" style="@style/AppIntroIndicatorContainer"/>
</RelativeLayout>
