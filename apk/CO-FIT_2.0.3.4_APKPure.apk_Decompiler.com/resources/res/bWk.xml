<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#fffefefe" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/ugc_map_report_statusbar_view" layout="@layout/bnav_ugc_statusbar_empty_view_include"/>
    <com.baidu.navisdk.ui.widget.BNCommonTitleBar android:layout_gravity="center_horizontal" android:id="@+id/ugc_map_report_titlebar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ugc_map_report_statusbar_view" app:nsdk_middleContentText="上报" app:nsdk_rightContentImage="@drawable/nsdk_ugc_map_main_title_right" app:nsdk_rightContentVisible="true"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/ugc_report_scrollview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/ugc_map_report_titlebar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/ugc_map_main_card_contribute" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_80dp" android:layout_marginLeft="@dimen/navi_dimens_20dp" android:layout_marginRight="@dimen/navi_dimens_20dp" android:layout_marginHorizontal="@dimen/navi_dimens_20dp"/>
            <LinearLayout android:gravity="center_vertical" android:id="@+id/ugc_map_act_tip_bar" android:background="@drawable/nsdk_ugc_map_act_tip_bar_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="9dp" android:layout_marginTop="10dp" android:layout_marginRight="9dp">
                <ImageView android:id="@+id/ugc_map_act_tip_icon" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="12dp" android:src="@drawable/nsdk_ugc_map_act_tip_icon"/>
                <TextView android:textSize="12dp" android:ellipsize="end" android:id="@+id/ugc_map_act_tip_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="参加人人上报，赢惊喜大奖!" android:maxLines="1" android:layout_weight="1" android:layout_toRightOf="@+id/ugc_map_act_tip_icon"/>
                <ImageView android:id="@+id/ugc_map_act_tip_close" android:layout_width="9dp" android:layout_height="9dp" android:layout_marginRight="12dp" android:src="@drawable/nsdk_ugc_map_act_tip_close" android:layout_alignParentRight="true"/>
            </LinearLayout>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#333333" android:gravity="left" android:id="@+id/ugc_map_main_firs_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_16dp" android:layout_marginBottom="@dimen/navi_dimens_10dp" android:text="路况相关" android:layout_marginStart="@dimen/navi_dimens_20dp"/>
            <com.baidu.navisdk.ugc.replenishdetails.UgcReplenishDetailsTipsLayout android:id="@+id/ugc_map_replenish_details_hit_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.baidu.navisdk.ugc.report.ui.inmap.main.UgcReportGridView android:layout_gravity="center_horizontal" android:id="@+id/ugc_map_main_allitems_gv" android:scrollbars="none" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_35dp" android:layout_marginTop="@dimen/navi_dimens_10dp" android:layout_marginRight="@dimen/navi_dimens_35dp" android:listSelector="@android:color/transparent" android:horizontalSpacing="@dimen/navi_dimens_60dp" android:verticalSpacing="@dimen/navi_dimens_17dp" android:stretchMode="spacingWidth" android:columnWidth="@dimen/navi_dimens_68dp" android:numColumns="3" android:scrollbarFadeDuration="0" android:layout_marginHorizontal="@dimen/navi_dimens_35dp"/>
            <View android:background="#f3f4f6" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_5dp" android:layout_marginTop="@dimen/navi_dimens_15dp" android:layout_marginBottom="@dimen/navi_dimens_15dp" android:layout_marginVertical="@dimen/navi_dimens_15dp"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/ugc_report_map_recyclerview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/navi_dimens_10dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ugc_map_main_bottom_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/nsdk_ugc_report_grid_margin" android:layout_marginTop="@dimen/navi_dimens_20dp" android:layout_marginRight="@dimen/nsdk_ugc_report_grid_margin">
                <TextView android:textSize="@dimen/navi_dimens_12dp" android:textColor="#666f81" android:gravity="center" android:id="@+id/ugc_map_main_bottom_feedback" android:padding="0dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="@dimen/navi_dimens_40dp" android:text="反馈建议" android:includeFontPadding="false" android:layout_weight="1"/>
            </LinearLayout>
            <View android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout android:gravity="bottom" android:id="@+id/ugc_map_main_subitem_frame" android:background="#99000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:id="@+id/ugc_map_main_subitem_listview" android:background="#fff" android:layout_width="match_parent" android:layout_height="wrap_content" android:footerDividersEnabled="false"/>
        <View android:id="@+id/ugc_map_main_subitem_line" android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_10dp" android:layout_below="@+id/ugc_map_main_subitem_listview"/>
        <TextView android:textSize="@dimen/navi_dimens_16dp" android:textColor="@color/bnav_common_ugc_sub_item_txt_selector" android:gravity="center" android:id="@+id/subitem_cancel" android:background="#fff" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_40dp" android:text="取消" android:layout_below="@+id/ugc_map_main_subitem_line"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/ugc_map_replenish_details_layout" android:background="@color/nsdk_ugc_menu_background" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
