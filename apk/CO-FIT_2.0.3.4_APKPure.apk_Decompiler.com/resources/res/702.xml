<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:background="#d8000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/navi_dimens_23dp" android:textStyle="bold" android:textColor="#fff" android:id="@+id/first_guide_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_105dp" android:text="智能省电模式" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="@dimen/navi_dimens_14dp" android:gravity="center" android:id="@+id/first_guide_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_22dp" android:layout_marginTop="@dimen/navi_dimens_14dp" android:layout_marginRight="@dimen/navi_dimens_22dp" android:layout_below="@+id/first_guide_title"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/first_guide_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/first_guide_desc" android:layout_centerHorizontal="true">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/first_guide_default_mode_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_35dp" android:layout_marginRight="@dimen/navi_dimens_22dp">
            <ImageView android:id="@+id/iv_default_model" android:layout_width="@dimen/navi_dimens_123dp" android:layout_height="@dimen/navi_dimens_140dp" android:src="@drawable/nsdk_rg_first_guide_power_save_mode"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_25dp">
                <CheckBox android:id="@+id/first_guide_defailt_mode_cb" android:background="@drawable/nsdk_rg_first_guide_checkbox_bg" android:layout_width="@dimen/navi_dimens_19dp" android:layout_height="@dimen/navi_dimens_19dp" android:checked="true" android:button="@null"/>
                <TextView android:textSize="@dimen/navi_dimens_17dp" android:textStyle="bold" android:textColor="#fff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_5dp" android:text="开启智能调节"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/navi_dimens_17dp" android:textStyle="bold" android:textColor="#fff" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_8dp" android:text="转弯信息更清晰"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/first_guide_simple_mode_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_35dp">
            <ImageView android:id="@+id/iv_simple_model" android:layout_width="@dimen/navi_dimens_123dp" android:layout_height="@dimen/navi_dimens_140dp" android:src="@drawable/nsdk_rg_first_guide_system_power_mode"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_25dp">
                <CheckBox android:id="@+id/first_guide_simple_mode_cb" android:background="@drawable/nsdk_rg_first_guide_checkbox_bg" android:layout_width="@dimen/navi_dimens_19dp" android:layout_height="@dimen/navi_dimens_19dp" android:button="@null"/>
                <TextView android:textSize="@dimen/navi_dimens_17dp" android:textStyle="bold" android:textColor="#fff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_5dp" android:text="导航亮度不变"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/navi_dimens_17dp" android:textStyle="bold" android:textColor="#fff" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/navi_dimens_8dp" android:text="地图视野更开阔"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:textSize="@dimen/navi_dimens_20dp" android:textStyle="bold" android:textColor="#fff" android:id="@+id/first_guide_btn" android:background="@drawable/nsdk_rg_first_guide_confirm" android:layout_width="@dimen/navi_dimens_185dp" android:layout_height="@dimen/navi_dimens_40dp" android:layout_marginTop="@dimen/navi_dimens_80dp" android:text="确认" android:layout_below="@+id/first_guide_ll" android:layout_centerHorizontal="true"/>
</RelativeLayout>
