<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/multi_device_item_info_layout" android:background="@drawable/rectangular_background" android:layout_width="match_parent" android:layout_height="190dp" android:layout_margin="10dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="15dp">
        <ImageView android:id="@+id/iv_device" android:layout_width="110dp" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="10dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toEndOf="@+id/iv_device">
            <com.sma.smartv3.view.text.PFMedium android:textSize="18dp" android:textColor="@color/text_color" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="12dp" android:textStyle="bold" android:textColor="@color/text_color" android:id="@+id/tv_mac" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:singleLine="true"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/power_panel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <ImageView android:id="@+id/iv_connection" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_bt_connection"/>
                <ImageView android:id="@+id/iv_power" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/level_list_device_power" android:layout_marginStart="14dp"/>
            </LinearLayout>
            <com.sma.smartv3.view.text.DINCondBold android:textSize="16dp" android:textStyle="bold" android:textColor="@color/text_color" android:id="@+id/tv_state" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Disconnected"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="15dp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_reconnect" android:background="@drawable/shape_sport_bt_bg" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/reconnect" android:singleLine="true" android:paddingStart="10dp" android:paddingEnd="10dp"/>
            <ProgressBar android:id="@+id/pb_connecting" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="8dp"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/btn_delete" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:paddingStart="20dp" android:layout_alignParentEnd="true">
        <ImageView android:layout_gravity="bottom" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/icon_delete" app:tint="@android:color/holo_red_dark"/>
    </FrameLayout>
</RelativeLayout>
