<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="30dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <Button android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="开始测试" android:onClick="onEnter"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="GSensor测试" android:onClick="onGSensor"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="漏光测试" android:onClick="onHrLeak"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="退出测试" android:onClick="onExit"/>
    <TextView android:id="@+id/tv_info" android:padding="10dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
