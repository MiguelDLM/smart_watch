<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rela_view" android:background="#2b3648" android:layout_width="match_parent" android:layout_height="45dp" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/turn_icon" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="5dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="12dp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/single_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:maxLines="2" android:layout_toRightOf="@+id/turn_icon" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/next_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_toRightOf="@+id/turn_icon" android:layout_centerVertical="true">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="16dp" android:textColor="#ffffff" android:id="@+id/remain_start" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="12dp" android:textColor="#ffffff" android:id="@+id/remain_end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp"/>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/next_road" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
    <com.baidu.navisdk.ui.routeguide.pip.RGPipConditionView android:id="@+id/condition_view" android:layout_width="match_parent" android:layout_height="14dp" android:layout_marginBottom="-7dp" android:layout_above="@+id/rela_view"/>
</RelativeLayout>
