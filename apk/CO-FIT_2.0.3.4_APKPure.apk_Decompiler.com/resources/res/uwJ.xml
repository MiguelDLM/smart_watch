        </LinearLayout>
        <ImageView android:id="@+id/learn_card_arrow_icon" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/learn_card_ic_arrow_open"/>
    </LinearLayout>
    <LinearLayout android:layout_gravity="end" android:id="@+id/learn_card_all_choose_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.sma.smartv3.view.text.PFMedium android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginRight="6dp" android:text="@string/text_select_all"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/learn_card_all_choose_icon" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/audio_book_unchoose_icon"/>
    </LinearLayout>
</LinearLayout>
