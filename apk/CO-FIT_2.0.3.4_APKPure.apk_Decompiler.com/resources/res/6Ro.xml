<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/big_weather_container" android:background="@drawable/nsdk_rr_pass_weather_big_bubble" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="58dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/big_weather_icon" android:layout_width="26dp" android:layout_height="26dp" android:layout_marginLeft="14dp" android:layout_marginRight="10dp" android:scaleType="fitCenter"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="14dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12dp" android:textColor="#333333" android:id="@+id/city_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="12dp" android:textColor="#333333" android:id="@+id/temp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/pavement_info" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="10dp" android:textColor="#d0021b" android:id="@+id/weather_describe" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="4dp"/>
                <TextView android:textSize="10dp" android:textColor="#d0021b" android:id="@+id/pavement_describe" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/small_weather_container" android:background="@drawable/nsdk_rr_pass_weather_small_left_bubble" android:layout_width="38dp" android:layout_height="38dp">
        <ImageView android:layout_gravity="center" android:id="@+id/small_weather_icon" android:layout_width="16dp" android:layout_height="16dp" android:scaleType="centerCrop"/>
    </FrameLayout>
</FrameLayout>
