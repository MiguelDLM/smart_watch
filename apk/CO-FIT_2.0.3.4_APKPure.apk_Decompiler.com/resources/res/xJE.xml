<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="780dp" style="@style/sport_detail_style">
    <FrameLayout android:id="@+id/mapView_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="-40dp" android:minHeight="300dp" android:layout_above="@+id/data_panel">
        <com.baidu.mapapi.map.TextureMapView android:id="@+id/bMapView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.sma.smartv3.view.CustomGoogleMapView android:id="@+id/gMapView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:layout_gravity="end" android:orientation="vertical" android:id="@+id/check_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="80dp" android:paddingEnd="5dp">
            <CheckBox android:id="@+id/downloadGpxIb" android:background="@drawable/common_ripple_borderless" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="15dp" android:button="@drawable/icon_gpx_v2"/>
            <CheckBox android:id="@+id/btn_map_hot" android:background="@drawable/common_ripple_borderless" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="15dp" android:button="@drawable/selector_map_hot_v2"/>
            <CheckBox android:id="@+id/btn_map_3d" android:background="@drawable/common_ripple_borderless" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="15dp" android:button="@drawable/selector_map_3d_v2"/>
            <CheckBox android:id="@+id/btn_map_mark" android:background="@drawable/common_ripple_borderless" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="15dp" android:button="@drawable/selector_map_mark_v2"/>
        </LinearLayout>
    </FrameLayout>
    <com.sma.smartv3.view.text.DINCondBold android:textSize="24sp" android:textColor="@color/white" android:id="@+id/tv_detail_name_noMap" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:layout_above="@+id/tv_dateTime_noMap"/>
    <com.sma.smartv3.view.text.PFMedium android:textColor="@color/white" android:id="@+id/tv_dateTime_noMap" android:visibility="gone" android:layout_marginLeft="20dp" android:layout_marginBottom="10dp" android:layout_above="@+id/data_panel" style="@style/sport_detail_item_name"/>
    <Button android:textSize="15dp" android:textColor="@android:color/white" android:id="@+id/btn_track_play" android:background="@drawable/selector_btn_play" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginRight="20dp" android:text="@string/track_play" android:layout_above="@+id/data_panel" android:paddingStart="20dp" android:paddingEnd="20dp" android:layout_alignParentEnd="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/data_panel" android:background="@drawable/shape_sport_detail_top_bg_v2" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/iv_avatar1_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.sma.smartv3.view.text.DINCondBold android:textSize="20sp" android:textColor="@color/text_color" android:id="@+id/tv_detail_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
                <com.sma.smartv3.view.text.DINCondBold android:textSize="40sp" android:textColor="@color/text_color" android:id="@+id/tv_distance_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tv_detail_name" android:layout_centerVertical="true"/>
                <com.sma.smartv3.view.text.PFMedium android:gravity="bottom" android:id="@+id/tv_distance_unit" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="@string/km" android:layout_toRightOf="@+id/tv_distance_value" android:layout_below="@+id/tv_detail_name" android:layout_alignBottom="@+id/tv_distance_value" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" style="@style/sport_detail_item_name"/>
                <LinearLayout android:gravity="right" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.sma.smartv3.view.ImageViewRound android:layout_gravity="right" android:id="@+id/iv_avatar" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/pic_avatar_default" app:borderWidth="1dp" app:isCustomize="true" app:type="linear"/>
                        <com.sma.smartv3.view.text.PFMedium android:gravity="center" android:layout_gravity="center" android:id="@+id/edt_nickname" android:text="@string/heart_rate" style="@style/sport_detail_item_name"/>
                    </LinearLayout>
                    <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_dateTime" style="@style/sport_detail_item_name"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/sport_detail_progressbar_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ProgressBar android:id="@+id/sport_detail_progressbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxHeight="10dp" android:max="100" android:progress="100" android:progressDrawable="@drawable/seekbar_sport_detail_bg" android:minHeight="10dp" style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:id="@+id/sport_detail_minpace" android:text="@string/sport_detail_min_pace" android:layout_below="@+id/sport_detail_progressbar" style="@style/sport_detail_item_name"/>
                <com.sma.smartv3.view.text.PFMedium android:textSize="12sp" android:id="@+id/sport_detail_maxpace" android:text="@string/sport_detail_max_pace" android:layout_below="@+id/sport_detail_progressbar" android:layout_alignParentRight="true" style="@style/sport_detail_item_name"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/iv_avatar2_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.sma.smartv3.view.ImageViewRound android:id="@+id/iv_avatar2" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/pic_avatar_default" app:borderWidth="1dp" app:isCustomize="true" app:type="linear"/>
                <com.sma.smartv3.view.text.PFMedium android:gravity="center" android:layout_gravity="center" android:id="@+id/edt_nickname2" android:text="@string/heart_rate" style="@style/sport_detail_item_name"/>
                <com.sma.smartv3.view.text.PFMedium style="@style/sport_detail_item_name"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <LinearLayout android:gravity="left" android:layout_marginLeft="20dp" style="@style/sport_map_item_ll">
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_duration_title" android:text="@string/exercise_time" style="@style/sport_detail_item_name"/>
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_avg_bpm_value" android:visibility="gone" android:text="120" style="@style/sport_detail_item_value"/>
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_duration" style="@style/sport_detail_item_value"/>
            </LinearLayout>
            <LinearLayout android:gravity="left" android:layout_marginLeft="20dp" style="@style/sport_map_item_ll">
                <com.sma.smartv3.view.text.PFMedium android:text="@string/quantity_of_heat" style="@style/sport_detail_item_name"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_calories_value" android:text="0" style="@style/sport_detail_item_value"/>
                    <com.sma.smartv3.view.text.PFMedium style="@style/sport_detail_item_unit_right"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <LinearLayout android:gravity="left" android:id="@+id/sport_detail_pace_layout" android:layout_marginLeft="20dp" style="@style/sport_map_item_ll">
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/avg_pace" style="@style/sport_detail_item_name"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_pace_value" android:text="0" style="@style/sport_detail_item_value"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_pace_unit" android:text="@string/km" style="@style/sport_detail_item_unit_right"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="left" android:layout_marginLeft="20dp" style="@style/sport_map_item_ll">
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/ave_hr" style="@style/sport_detail_item_name"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_hr_value" android:text="0" style="@style/sport_detail_item_value"/>
                        <com.sma.smartv3.view.text.PFMedium android:layout_marginTop="0dp" style="@style/sport_detail_item_unit"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <LinearLayout android:gravity="left" android:id="@+id/sport_detail_steps_layout" android:layout_marginLeft="20dp" style="@style/sport_map_item_ll">
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/stepnum" style="@style/sport_detail_item_name"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_step_value" android:text="0" style="@style/sport_detail_item_value"/>
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/steps" style="@style/sport_detail_item_unit_right"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="left" android:id="@+id/tv_airpressure_layout" android:visibility="invisible" android:layout_marginLeft="20dp" style="@style/sport_map_item_ll">
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/air_pressure" style="@style/sport_detail_item_name"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_airpressure_value" android:text="0" style="@style/sport_detail_item_value"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_airpressure_unit" android:text="@string/kpa" style="@style/sport_detail_item_unit_right"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.sma.smartv3.view.text.PFMedium android:textSize="14dp" android:textColor="@color/text_color" android:layout_gravity="right" android:id="@+id/tv_view_field_explanation" android:visibility="gone" android:layout_marginRight="10dp" android:drawableLeft="@drawable/understand_situation_icon2" android:drawablePadding="6dp" android:layout_below="@+id/sport_detail_progressbar" style="@style/sport_detail_item_name"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/sport_detail_map_v2_recycler" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
