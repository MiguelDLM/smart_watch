<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rootViewSpeed" android:layout_marginTop="6dp" style="@style/sport_record_item_bg">
    <com.sma.smartv3.view.text.PFRegular android:id="@+id/speedPf" android:text="@string/speed" style="@style/item_sport_record_title_tv"/>
    <RelativeLayout android:id="@+id/sportRecordAvgSpeedRl" style="@style/item_sport_record_activity_rl">
        <ImageView android:src="@drawable/icon_speed_72" style="@style/item_sport_record_activity_rl_iv"/>
        <com.sma.smartv3.view.text.PFMedium android:text="@string/avg_speed" style="@style/item_sport_record_activity_tv_description"/>
        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordAvgSpeed" android:text="23" style="@style/item_sport_record_activity_rl_tv_value"/>
            <com.sma.smartv3.view.text.PFMedium android:id="@+id/sportRecordAvgSpeedUnit" android:text="@string/km_h" style="@style/item_sport_record_activity_rl_tv_unit"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/sportRecordFastestSpeedRl" style="@style/item_sport_record_activity_rl">
        <ImageView android:src="@drawable/icon_fastest_speed" style="@style/item_sport_record_activity_rl_iv"/>
        <com.sma.smartv3.view.text.PFMedium android:text="@string/fastest_speed" style="@style/item_sport_record_activity_tv_description"/>
        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordFastestSpeed" android:text="180" style="@style/item_sport_record_activity_rl_tv_value"/>
            <com.sma.smartv3.view.text.PFMedium android:id="@+id/sportRecordFastestSpeedUnit" android:text="@string/km_h" style="@style/item_sport_record_activity_rl_tv_unit"/>
        </LinearLayout>
    </RelativeLayout>
    <com.sma.smartv3.view.text.PFRegular android:id="@+id/pacePF" android:text="@string/pace" style="@style/item_sport_record_title_tv"/>
    <RelativeLayout android:id="@+id/sportRecordAvgPaceRl" style="@style/item_sport_record_activity_rl">
        <ImageView android:src="@drawable/icon_avg_pace" style="@style/item_sport_record_activity_rl_iv"/>
        <com.sma.smartv3.view.text.PFMedium android:text="@string/avg_pace" style="@style/item_sport_record_activity_tv_description"/>
        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordAvgPace" android:text="1" style="@style/item_sport_record_activity_rl_tv_value"/>
            <com.sma.smartv3.view.text.PFMedium android:id="@+id/sportRecordAvgPaceUnit" android:text="@string/pace_km" style="@style/item_sport_record_activity_rl_tv_unit"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/sportRecordFastestPaceRl" style="@style/item_sport_record_activity_rl">
        <ImageView android:src="@drawable/icon_fastest_pace" style="@style/item_sport_record_activity_rl_iv"/>
        <com.sma.smartv3.view.text.PFMedium android:text="@string/fastest_pace" style="@style/item_sport_record_activity_tv_description"/>
        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordFastestPace" android:text="1" style="@style/item_sport_record_activity_rl_tv_value"/>
            <com.sma.smartv3.view.text.PFMedium android:id="@+id/sportRecordFastestPaceUnit" android:text="@string/pace_km" style="@style/item_sport_record_activity_rl_tv_unit"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/sportRecordPaceChartRl" style="@style/item_sport_record_activity_rl">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.sma.smartv3.view.text.DINCondBold android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/km"/>
            <com.sma.smartv3.view.text.DINCondBold android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pace_km_desc" android:layout_marginStart="20dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>
