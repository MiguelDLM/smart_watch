<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/common_ripple_status_item" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:id="@+id/interpretation_records_language_left_tv" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:id="@+id/interpretation_records_language" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="6dp"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/transform_language_img" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_transform_language" android:layout_marginStart="6dp"/>
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/colorAccent" android:id="@+id/interpretation_records_to_language" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="6dp"/>
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:gravity="right" android:id="@+id/interpretation_records_duration" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
    <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
    <com.sma.smartv3.view.text.PFMedium android:textColor="@color/text_color" android:id="@+id/interpretation_records_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:id="@+id/interpretation_records_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/icon_transform_location2"/>
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:id="@+id/interpretation_records_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="位置信息" android:layout_marginStart="6dp"/>
        <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:gravity="right" android:id="@+id/interpretation_records_time" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
