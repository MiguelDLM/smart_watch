<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent" android:layout_height="152dp" android:layout_marginTop="12dp" android:src="@drawable/pic_firmware_upgrade" android:layout_marginStart="58dp" android:layout_marginEnd="58dp"/>
            <com.sma.smartv3.view.text.PFBold android:textSize="12sp" android:textColor="@color/line_color" android:gravity="center_horizontal" android:id="@+id/tv_firmware_upgrade_top_tip" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/firmware_upgrade_tip"/>
            <View style="@style/h_divider_gray2_margin22"/>
            <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/text_color" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/latest_firmware_version"/>
            <com.sma.smartv3.view.text.PFBold android:textSize="16sp" android:textColor="@color/line_color" android:gravity="center_horizontal" android:id="@+id/tv_latest" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp"/>
            <View android:layout_marginTop="14dp" style="@style/h_divider_gray2_margin22"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/text_color" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/current_firmware_version"/>
                <com.sma.smartv3.view.text.PFBold android:textSize="16sp" android:textColor="@color/line_color" android:gravity="center_horizontal" android:id="@+id/tv_current" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp"/>
                <View android:layout_marginTop="14dp" style="@style/h_divider_gray2_margin22"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_dev_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="22dp" android:layout_marginEnd="22dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="info:"/>
                    <TextView android:textColor="@color/text_color" android:id="@+id/tv_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upgraded_devices"/>
                    <TextView android:textColor="@color/text_color" android:id="@+id/tv_already_ota" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Speed:"/>
                    <TextView android:textColor="@color/text_color" android:id="@+id/tv_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/launcher_title_bar" android:id="@+id/tv_tip" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="22dp"/>
            <com.sma.smartv3.view.text.PFBold android:textSize="13sp" android:textColor="@color/text_color" android:gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tv_step" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
            <com.sma.smartv3.view.ProgressButton android:layout_marginTop="10dp" android:layout_marginBottom="50dp" style="@style/firmware_pb_style"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
