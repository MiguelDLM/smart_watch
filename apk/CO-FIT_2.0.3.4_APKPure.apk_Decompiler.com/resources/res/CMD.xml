<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton android:layout_width="0dp" android:layout_height="wrap_content" android:text="Clear Log" android:layout_weight="1" android:onClick="clearData" android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="收到新的log内容会自动显示下方；点击ClearLog只会清空当前页面显示，log 仍然会存储在文件中，可通过上一页面顶部的ShareLog功能导出"/>
    </LinearLayout>
    <ListView android:id="@+id/list_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:smoothScrollbar="false"/>
</LinearLayout>
