<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header" app:abh_description="@string/touch_set_des" app:abh_title="@string/touch_set" style="@style/abh_settings_item"/>
            <com.sma.smartv3.view.SettingsPanel android:orientation="vertical" android:id="@+id/item_container" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_music" app:abh_description="@string/touch_set_music_des" app:abh_title="@string/music_manager" style="@style/abh_settings_item"/>
                <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_photo" app:abh_description="@string/touch_set_photo_des" app:abh_title="@string/touch_set_music" style="@style/abh_settings_item"/>
                <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_slide" app:abh_description="@string/cross_app_translation_desc" app:abh_title="@string/cross_app_translation" style="@style/abh_settings_item"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.sma.smartv3.view.AbhSettingsHeader android:id="@+id/item_header_custom" app:abh_title="@string/touch_set_custom" style="@style/abh_settings_item"/>
                    <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_single" android:onClick="onShowKeysPopup" android:layout_marginStart="20dp" app:abh_left_text="@string/touch_set_single" style="@style/abh_settings_item"/>
                    <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_double" android:onClick="onShowKeysPopup" android:layout_marginStart="20dp" app:abh_left_text="@string/touch_set_double" style="@style/abh_settings_item"/>
                    <com.sma.smartv3.view.AbhSettingsItem android:id="@+id/item_long" android:onClick="onShowKeysPopup" android:layout_marginStart="20dp" app:abh_left_text="@string/touch_set_long" style="@style/abh_settings_item"/>
                </LinearLayout>
            </com.sma.smartv3.view.SettingsPanel>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
