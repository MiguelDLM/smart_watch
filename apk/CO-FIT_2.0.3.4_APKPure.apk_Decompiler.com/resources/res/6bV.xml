<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout style="@style/abh_title">
        <ImageView style="@style/abh_title_left"/>
        <com.sma.smartv3.view.text.PFMedium android:gravity="center_vertical" android:layout_gravity="center_vertical" style="@style/abh_title_center"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/abh_title_other_right" android:padding="4dp" android:visibility="gone" android:layout_width="35dp" android:layout_height="wrap_content" android:onClick="onTitleRightOtherClick"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/abh_title_right" android:padding="4dp" android:visibility="gone" android:layout_width="35dp" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:onClick="onTitleRightClick"/>
    </LinearLayout>
    <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:gravity="center" android:id="@+id/ai_chat_open_deduction_config_tv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <RelativeLayout android:id="@+id/rl_input" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/chat_bottom" android:paddingTop="15dp" android:paddingBottom="15dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="15dp">
            <ImageView android:textSize="14sp" android:id="@+id/iv_chat_voice" android:background="@drawable/icon_chat_textbox" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:layout_centerVertical="true" android:onClick="onSwitchInputMethod"/>
            <EditText android:textSize="16dp" android:textColor="@color/text_color" android:gravity="center_vertical" android:id="@+id/et_chat_content" android:background="@color/voice_input_bag2" android:paddingLeft="8dp" android:paddingRight="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="34dp" android:maxLines="3" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/btn_chat_send" android:layout_toEndOf="@+id/iv_chat_voice"/>
            <Button android:textSize="16dp" android:textColor="@color/white" android:id="@+id/btn_chat_send" android:background="@drawable/voice_chat_common_bg" android:visibility="gone" android:layout_width="60dp" android:layout_height="34dp" android:text="@string/send" android:layout_centerVertical="true" android:onClick="onSend" android:textAllCaps="false" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true" android:backgroundTint="@color/colorAccent"/>
            <Button android:textSize="16dp" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/btn_chat_audio" android:background="@drawable/voice_chat_common_bg" android:layout_width="match_parent" android:layout_height="34dp" android:text="@string/long_press_to_speak" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/iv_chat_voice"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
