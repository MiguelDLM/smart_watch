<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/nsdk_rr_long_distance_service" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/car_service_rl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="2dp" android:layout_marginRight="2dp" android:layout_marginBottom="2dp">
        <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="#3385ff" android:id="@+id/car_service_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="邯郸服务区"/>
        <TextView android:textSize="9dp" android:textColor="#3385ff" android:id="@+id/car_remain_dis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="340公里" android:layout_toRightOf="@+id/car_service_tx" android:layout_alignBottom="@+id/car_service_tx"/>
        <TextView android:textSize="10dp" android:textColor="#555555" android:id="@+id/car_remain_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="约4小时50分到达" android:layout_below="@+id/car_service_tx"/>
    </RelativeLayout>
    <TextView android:id="@+id/car_line" android:background="#cccc99" android:layout_width="0.5dp" android:layout_height="26dp" android:layout_marginLeft="3dp" android:layout_marginTop="4dp" android:layout_marginRight="3dp" android:layout_marginBottom="2dp" android:layout_toRightOf="@+id/car_service_rl"/>
    <RelativeLayout android:id="@+id/add_node_rl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginRight="2dp" android:layout_toRightOf="@+id/car_line">
        <ImageView android:id="@+id/add_node_img" android:background="@drawable/nsdk_rr_distance_add_node" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="#3385ff" android:id="@+id/add_node_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="途经点" android:layout_toRightOf="@+id/add_node_img" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
