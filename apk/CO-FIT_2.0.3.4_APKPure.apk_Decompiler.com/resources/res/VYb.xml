<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <layer-list>
            <item android:id="@android:id/background">
                <shape>
                    <corners android:radius="@dimen/hiad_download_button_radius"/>
                    <solid android:color="@color/hiad_app_down_processing_backgroud"/>
                    <stroke android:width="@dimen/hiad_download_button_stroke_processing_width" android:color="@color/hiad_app_down_processing_progress"/>
                </shape>
            </item>
            <item android:id="@android:id/progress">
                <clip android:gravity="start">
                    <shape>
                        <corners android:radius="@dimen/hiad_download_button_radius"/>
                        <solid android:color="@color/hiad_app_down_processing_progress"/>
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>
</selector>
