<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" style="@style/sport_detail_style">
        <LinearLayout android:orientation="vertical" android:id="@+id/hr_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/icon_hr_72" style="@style/sport_detail_chart_item_iv"/>
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/heart_rate" style="@style/sport_detail_chart_item_title"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/min_hr" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_avg_bpm_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/max_hr" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_max_bpm_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <com.github.mikephil.charting.charts.LineChart android:id="@+id/hrLineChart" android:layout_width="match_parent" android:layout_height="200dp"/>
                </RelativeLayout>
                <com.sma.smartv3.view.text.PFRegular android:textSize="16sp" android:id="@+id/tv_heart_rate_range" android:text="@string/heart_rate_range" style="@style/sport_detail_chart_item_data_title"/>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_heart_rate_range" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:layout_width="150dp" android:layout_height="150dp">
                        <com.github.mikephil.charting.charts.PieChart android:id="@+id/hrPieChart" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingEnd="10dp" android:layout_marginStart="20dp">
                        <LinearLayout android:orientation="horizontal" android:id="@+id/sportRecordStrenuousRl" style="@style/sport_detail_chart_item_hr_ll">
                            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/hr_scope_color_1" style="@style/sport_detail_chart_item_hr_ll_iv"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/strenuous_exercise" style="@style/sport_detail_chart_item_hr_tv_description"/>
                            <LinearLayout style="@style/sport_detail_chart_item_hr_ll_ll">
                                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordStrenuous" android:text="1" style="@style/sport_detail_chart_item_hr_ll_tv_value"/>
                                <com.sma.smartv3.view.text.PFMedium android:text="@string/min" style="@style/sport_detail_chart_item_hr_ll_tv_unit"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/sportRecordAnaerobicRl" style="@style/sport_detail_chart_item_hr_ll">
                            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/hr_scope_color_2" style="@style/sport_detail_chart_item_hr_ll_iv"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/anaerobic_exercise" style="@style/sport_detail_chart_item_hr_tv_description"/>
                            <LinearLayout style="@style/sport_detail_chart_item_hr_ll_ll">
                                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordAnaerobic" android:text="1" style="@style/sport_detail_chart_item_hr_ll_tv_value"/>
                                <com.sma.smartv3.view.text.PFMedium android:text="@string/min" style="@style/sport_detail_chart_item_hr_ll_tv_unit"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/sportRecordAerobicRl" style="@style/sport_detail_chart_item_hr_ll">
                            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/hr_scope_color_3" style="@style/sport_detail_chart_item_hr_ll_iv"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/aerobic_exercise" style="@style/sport_detail_chart_item_hr_tv_description"/>
                            <LinearLayout style="@style/sport_detail_chart_item_hr_ll_ll">
                                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordAerobic" android:text="1" style="@style/sport_detail_chart_item_hr_ll_tv_value"/>
                                <com.sma.smartv3.view.text.PFMedium android:text="@string/min" style="@style/sport_detail_chart_item_hr_ll_tv_unit"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/sportRecordFatBurningRl" style="@style/sport_detail_chart_item_hr_ll">
                            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/hr_scope_color_4" style="@style/sport_detail_chart_item_hr_ll_iv"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/fat_burning_exercise" style="@style/sport_detail_chart_item_hr_tv_description"/>
                            <LinearLayout style="@style/sport_detail_chart_item_hr_ll_ll">
                                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordFatBurning" android:text="1" style="@style/sport_detail_chart_item_hr_ll_tv_value"/>
                                <com.sma.smartv3.view.text.PFMedium android:text="@string/min" style="@style/sport_detail_chart_item_hr_ll_tv_unit"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout android:id="@+id/sportRecordWarmUpRl" style="@style/sport_detail_chart_item_hr_ll">
                            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/hr_scope_color_5" style="@style/sport_detail_chart_item_hr_ll_iv"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/warm_up_exercise" style="@style/sport_detail_chart_item_hr_tv_description"/>
                            <LinearLayout style="@style/sport_detail_chart_item_hr_ll_ll">
                                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordWarmUp" android:text="1" style="@style/sport_detail_chart_item_hr_ll_tv_value"/>
                                <com.sma.smartv3.view.text.PFMedium android:text="@string/min" style="@style/sport_detail_chart_item_hr_ll_tv_unit"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/sport_detail_chart_item_bottom_line"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/pressure_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/icon_pressure_72" style="@style/sport_detail_chart_item_iv"/>
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/pressure" style="@style/sport_detail_chart_item_title"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/ave_pressure" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_avg_pressure_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/max_pressure" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_max_pressure_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <com.github.mikephil.charting.charts.LineChart android:id="@+id/pressureLineChart" android:layout_width="match_parent" android:layout_height="200dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View style="@style/sport_detail_chart_item_bottom_line"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/pace_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/icon_pace_108" style="@style/sport_detail_chart_item_iv"/>
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/pace" style="@style/sport_detail_chart_item_title"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/slowest_pace" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_avg_pace_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/fastest_pace" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_min_pace_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <com.github.mikephil.charting.charts.LineChart android:id="@+id/paceLineChart" android:layout_width="match_parent" android:layout_height="200dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View style="@style/sport_detail_chart_item_bottom_line"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/spm_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/icon_spm_yellow" style="@style/sport_detail_chart_item_iv"/>
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/cadence" style="@style/sport_detail_chart_item_title"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/avg_spm" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_avg_spm_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/max_spm" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_max_spm_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <com.github.mikephil.charting.charts.LineChart android:id="@+id/spmLineChart" android:layout_width="match_parent" android:layout_height="200dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View style="@style/sport_detail_chart_item_bottom_line"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/speed_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/icon_speed_108" style="@style/sport_detail_chart_item_iv"/>
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/speed" style="@style/sport_detail_chart_item_title"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_avg_speed_title" android:text="@string/avg_speed" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_avg_speed_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/fastest_speed" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_fast_speed_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <com.github.mikephil.charting.charts.LineChart android:id="@+id/speedLineChart" android:layout_width="match_parent" android:layout_height="200dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View style="@style/sport_detail_chart_item_bottom_line"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/altitude_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:src="@drawable/icon_altitude_green" style="@style/sport_detail_chart_item_iv"/>
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/altitude" style="@style/sport_detail_chart_item_title"/>
                    <com.sma.smartv3.view.text.PFMedium android:id="@+id/altitude_unit_tv" android:visibility="gone" android:text="@string/altitude_unit" style="@style/sport_detail_chart_item_data_title"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/min_altitude" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_min_altitude_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/max_altitude" style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/tv_max_altitude_value" android:text="0" style="@style/sport_detail_chart_item_data_value"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <com.github.mikephil.charting.charts.LineChart android:id="@+id/altitudeLineChart" android:layout_width="match_parent" android:layout_height="200dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View style="@style/sport_detail_chart_item_bottom_line"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
