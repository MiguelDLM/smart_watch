<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/oct_bg_download" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_app_icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="32dp" android:scaleType="fitCenter"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#161823" android:id="@+id/tv_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <TextView android:textSize="12sp" android:textColor="#4d161823" android:id="@+id/tv_app_version" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <TextView android:textSize="12sp" android:textColor="#4d161823" android:gravity="center_horizontal" android:id="@+id/tv_app_developer" android:layout_width="300dp" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp">
        <TextView android:textSize="12sp" android:textColor="#4e90ff" android:id="@+id/tv_app_permission" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="权限详情"/>
        <View android:background="#d8d8d8" android:layout_width="0.5dp" android:layout_height="9dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
        <TextView android:textSize="12sp" android:textColor="#4e90ff" android:id="@+id/tv_app_privacy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="隐私协议"/>
        <View android:background="#d8d8d8" android:layout_width="0.5dp" android:layout_height="9dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
        <TextView android:textSize="12sp" android:textColor="#4e90ff" android:id="@+id/tv_app_function" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="功能介绍"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_download" android:background="@drawable/oct_bg_download_btn" android:layout_width="276dp" android:layout_height="36dp" android:layout_marginTop="16dp">
        <ImageView android:layout_width="16dp" android:layout_height="16dp" android:layout_marginRight="4dp" android:src="@drawable/oct_icon_download" android:layout_marginEnd="4dp"/>
        <TextView android:textSize="14sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="立即下载"/>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textColor="#4d161823" android:id="@+id/tv_give_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:layout_marginBottom="15dp" android:text="放弃下载"/>
</LinearLayout>
