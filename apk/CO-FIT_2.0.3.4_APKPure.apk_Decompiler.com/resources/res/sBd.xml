<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/ugc_sub_map_container_layer" android:background="#00000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/ugc_navi_sub_fade_layer" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_0dp" android:layout_weight="1"/>
        <com.baidu.navisdk.ugc.report.ui.widget.UgcCustomLinearScrollView android:orientation="vertical" android:id="@+id/ugc_sub_main_content_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@+id/ugc_sub_fade_layer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_0dp" android:layout_weight="1"/>
            <RelativeLayout android:id="@+id/ugc_sub_title_layout" android:background="@color/nsdk_cl_bg_d" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_81dp">
