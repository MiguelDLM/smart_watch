                <TextView android:textSize="@dimen/navi_dimens_18dp" android:textStyle="bold" android:textColor="#333333" android:id="@+id/ugc_sub_title_type_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_15dp" android:layout_marginTop="@dimen/navi_dimens_20dp" android:text="事故" android:layout_toRightOf="@+id/ugc_sub_title_iv"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_15dp" android:layout_marginLeft="@dimen/navi_dimens_15dp" android:layout_marginBottom="@dimen/navi_dimens_20dp" android:layout_toRightOf="@+id/ugc_sub_title_iv" android:layout_alignParentBottom="true">
                    <TextView android:textSize="@dimen/navi_dimens_12dp" android:textColor="#666666" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/ugc_sub_title_result_info_tips_tv" android:visibility="gone" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="wrap_content" android:text="定位中..." android:singleLine="true" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/navi_dimens_12dp" android:textColor="#666" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/ugc_sub_title_position_info_tv" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="wrap_content" android:text="定位中..." android:singleLine="true" android:layout_weight="1"/>
                    <TextView android:textSize="@dimen/navi_dimens_12dp" android:textColor="#666" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/ugc_sub_select_position_info_tv" android:visibility="gone" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="wrap_content" android:text="在图区确定问题位置" android:singleLine="true" android:layout_weight="1"/>
                    <LinearLayout android:layout_gravity="center_vertical" android:id="@+id/ugc_sub_title_change_position_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:layout_gravity="center_vertical" android:id="@+id/ugc_sub_title_position_select_iv" android:layout_width="@dimen/navi_dimens_11dp" android:layout_height="@dimen/navi_dimens_11dp" android:src="@drawable/nsdk_ugc_sub_title_position_select_icon" android:scaleType="fitCenter"/>
                        <TextView android:textSize="@dimen/navi_dimens_12dp" android:textColor="#3385ff" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/navi_dimens_3dp" android:text="更改位置"/>
                        <View android:layout_width="@dimen/navi_dimens_12dp" android:layout_height="1px"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:background="#d6d6d6" android:layout_width="match_parent" android:layout_height="@dimen/nsdk_ugc_report_view_line_height" android:layout_marginLeft="@dimen/navi_dimens_15dp" android:layout_marginRight="@dimen/navi_dimens_15dp" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ugc_sub_scroll_layout" android:background="@color/nsdk_cl_bg_d" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.baidu.navisdk.ugc.report.ui.widget.UgcReportLayout android:id="@+id/ugc_report_detail_layout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <Button android:textColor="#ffffff" android:layout_gravity="center_vertical" android:id="@+id/ugc_sub_upload_btn" android:background="@drawable/bnav_common_ugc_blue_button_selector" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_33dp" android:layout_marginLeft="@dimen/navi_dimens_15dp" android:layout_marginRight="@dimen/navi_dimens_15dp" android:layout_marginBottom="@dimen/navi_dimens_20dp" android:text="立即上报"/>
                <View android:id="@+id/ugc_navi_sub_upload_spacing" android:background="@color/nsdk_cl_bg_d" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/navi_dimens_0dp" android:layout_marginLeft="@dimen/navi_dimens_15dp" android:layout_weight="1"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ugc_navi_sub_upload_layout" android:background="@color/nsdk_cl_bg_d" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/navi_dimens_20dp">
                    <Button android:textColor="#3385ff" android:id="@+id/ugc_navi_sub_upload_cancle_btn" android:background="@drawable/bnav_common_ugc_blue_corners_button_selector" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="@dimen/navi_dimens_33dp" android:layout_marginLeft="@dimen/navi_dimens_15dp" android:text="取消" android:layout_weight="1"/>
                    <Button android:textColor="#ffffff" android:id="@+id/ugc_navi_sub_upload_btn" android:background="@drawable/bnav_common_ugc_blue_button_selector" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="@dimen/navi_dimens_33dp" android:layout_marginLeft="@dimen/navi_dimens_15dp" android:layout_marginRight="@dimen/navi_dimens_15dp" android:text="立即上报" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </com.baidu.navisdk.ugc.report.ui.widget.UgcCustomLinearScrollView>
    </LinearLayout>
    <com.baidu.navisdk.ui.widget.EmptyTopLayout android:id="@+id/ugc_report_empty_layout" android:background="@color/ugc_rg_transparent" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView android:id="@+id/goback_iv" android:background="@drawable/bnav_titlebar_back_bg_selector" android:visibility="gone" android:layout_width="@dimen/navi_dimens_34dp" android:layout_height="@dimen/navi_dimens_34dp" android:layout_marginLeft="@dimen/navi_dimens_10dp" android:layout_marginTop="@dimen/navi_dimens_10dp" android:layout_below="@+id/ugc_report_empty_layout"/>
</RelativeLayout>
