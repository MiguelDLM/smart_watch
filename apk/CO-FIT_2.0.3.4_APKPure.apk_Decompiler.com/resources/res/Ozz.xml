<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/nav_voice_switch_layout" android:paddingRight="@dimen/nsdk_more_setting_menu_item_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/nsdk_more_setting_btn_panel_title_bottom_margin">
        <ImageView android:gravity="center" android:id="@+id/left_imageview" android:clickable="true" android:layout_width="@dimen/navi_dimens_48dp" android:layout_height="@dimen/navi_dimens_48dp" android:src="@drawable/bnav_titlebar_ic_back_new" android:scaleType="centerInside"/>
        <TextView android:textSize="@dimen/navi_dimens_18dp" android:textColor="@color/bnav_titlebar_middle_text" android:id="@+id/nav_voice_text_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="播报内容" android:maxLines="1" android:layout_centerInParent="true" style="@style/NavCommonListItemTitleText"/>
    </RelativeLayout>
    <RadioGroup android:orientation="horizontal" android:id="@+id/nav_view_voice_selector_rg" android:background="@drawable/nsdk_bg_drawable_white_bottom_shadow" android:paddingLeft="@dimen/nsdk_more_setting_menu_item_padding_left" android:paddingRight="@dimen/nsdk_more_setting_menu_item_padding_right" android:paddingBottom="@dimen/navi_dimens_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:gravity="center" android:id="@+id/nav_diy_voice_simple_rb" android:background="@drawable/bnav_selector_diy_speak_radio_group" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="@dimen/navi_dimens_30dp" android:layout_marginRight="@dimen/navi_dimens_15dp" android:button="@null" android:text="@string/nsdk_diy_speak_items_simple" android:layout_weight="1" style="@style/nav_more_setting_selector_rg.speak_mode"/>
        <RadioButton android:gravity="center" android:id="@+id/nav_diy_voice_standard_rb" android:background="@drawable/bnav_selector_diy_speak_default" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="@dimen/navi_dimens_30dp" android:layout_marginRight="@dimen/navi_dimens_15dp" android:button="@null" android:text="@string/nsdk_diy_speak_items_standard" android:layout_weight="1" style="@style/nav_more_setting_selector_rg.speak_mode"/>
        <RadioButton android:gravity="center" android:id="@+id/nav_diy_voice_detail_rb" android:background="@drawable/bnav_selector_diy_speak_radio_group" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="@dimen/navi_dimens_30dp" android:layout_marginRight="@dimen/navi_dimens_15dp" android:button="@null" android:text="@string/nsdk_diy_speak_items_detail" android:layout_weight="1" style="@style/nav_more_setting_selector_rg.speak_mode"/>
        <RadioButton android:gravity="center" android:id="@+id/nav_diy_voice_custom_rb" android:background="@drawable/bnav_selector_diy_speak_radio_group" android:layout_width="@dimen/navi_dimens_0dp" android:layout_height="@dimen/navi_dimens_30dp" android:button="@null" android:text="@string/nsdk_diy_speak_items_user_define" android:layout_weight="1" style="@style/nav_more_setting_selector_rg.speak_mode"/>
    </RadioGroup>
</LinearLayout>
