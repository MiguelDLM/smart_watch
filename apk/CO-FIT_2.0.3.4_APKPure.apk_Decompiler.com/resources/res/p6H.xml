<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rootView" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:id="@+id/nestedScrollView" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/mapPbRl" android:layout_width="match_parent" android:layout_height="400dp">
                <ProgressBar android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/mapViewFrameLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="400dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/activityDataLl" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="370dp">
                <RelativeLayout android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:background="@drawable/shape_sport_record_detail_root_top_bg" android:paddingTop="16dp" android:paddingBottom="8dp" android:layout_height="100dp" android:layout_marginTop="30dp" android:paddingStart="16dp" android:paddingEnd="16dp" style="@style/sport_record_item_bg">
                        <com.sma.smartv3.view.text.DINCondBold android:textSize="34sp" android:textColor="@color/text_color" android:id="@+id/sportTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:25:30"/>
                        <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_alignParentBottom="true">
                            <ImageView android:gravity="center" android:id="@+id/sportSourceIv" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/icon_watch"/>
                            <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/line_color" android:gravity="center" android:id="@+id/sportName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Running" android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <com.sma.smartv3.view.text.DINCondBold android:textSize="16sp" android:textColor="@color/line_color" android:id="@+id/sportStartTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="07:30 AM 10/23/2019" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginEnd="30dp" android:layout_alignParentEnd="true">
                        <com.sma.smartv3.view.ImageViewRound android:id="@+id/ivAvatar" android:layout_width="60dp" android:layout_height="60dp" app:borderWidth="1dp" app:isCustomize="true" app:type="linear"/>
                        <com.sma.smartv3.view.text.PFMedium android:textSize="16sp" android:textColor="@color/text_color" android:ellipsize="end" android:id="@+id/nickName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="NickName" android:lines="1"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout android:background="@drawable/shape_sport_record_detail_root_bottom_bg" style="@style/sport_record_item_bg">
                    <View android:background="@color/line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_margin="10dp"/>
                    <RelativeLayout android:id="@+id/sportRecordPauseTimeLl" style="@style/item_sport_record_activity_rl">
                        <ImageView android:src="@drawable/icon_pause_time" style="@style/item_sport_record_activity_rl_iv"/>
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/pause_time" style="@style/item_sport_record_activity_tv_description"/>
                        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
                            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordPauseTime" android:text="00:00:00" style="@style/item_sport_record_activity_rl_tv_value"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/sportRecordStepLl" style="@style/item_sport_record_activity_rl">
                        <ImageView android:src="@drawable/icon_step_72" style="@style/item_sport_record_activity_rl_iv"/>
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/steps" style="@style/item_sport_record_activity_tv_description"/>
                        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
                            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordStep" android:text="7812" style="@style/item_sport_record_activity_rl_tv_value"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/steps" style="@style/item_sport_record_activity_rl_tv_unit"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/sportRecordCadenceLl" style="@style/item_sport_record_activity_rl">
                        <ImageView android:src="@drawable/icon_spm" style="@style/item_sport_record_activity_rl_iv"/>
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/cadence" style="@style/item_sport_record_activity_tv_description"/>
                        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
                            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordCadence" android:text="18" style="@style/item_sport_record_activity_rl_tv_value"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/spm" style="@style/item_sport_record_activity_rl_tv_unit"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/sportRecordDistanceLl" style="@style/item_sport_record_activity_rl">
                        <ImageView android:src="@drawable/icon_distance_72" style="@style/item_sport_record_activity_rl_iv"/>
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/distance" style="@style/item_sport_record_activity_tv_description"/>
                        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
                            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordDistance" android:text="23.5" style="@style/item_sport_record_activity_rl_tv_value"/>
                            <com.sma.smartv3.view.text.PFMedium android:id="@+id/sportRecordDistanceUnit" android:text="@string/km" style="@style/item_sport_record_activity_rl_tv_unit"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/sportRecordCaloriesLl" style="@style/item_sport_record_activity_rl">
                        <ImageView android:src="@drawable/icon_calories_72" style="@style/item_sport_record_activity_rl_iv"/>
                        <com.sma.smartv3.view.text.PFMedium android:text="@string/calories" style="@style/item_sport_record_activity_tv_description"/>
                        <LinearLayout style="@style/item_sport_record_activity_rl_ll">
                            <com.sma.smartv3.view.text.DINCondBold android:id="@+id/sportRecordCalories" android:text="2786" style="@style/item_sport_record_activity_rl_tv_value"/>
                            <com.sma.smartv3.view.text.PFMedium android:text="@string/kcal" style="@style/item_sport_record_activity_rl_tv_unit"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/otherDataLl" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/activityDataLl">
                <include layout="@layout/status_item_sport_record_heart_rate"/>
                <include layout="@layout/status_item_sport_record_speed"/>
                <include layout="@layout/status_item_sport_record_altitude"/>
                <View android:id="@+id/bottomView" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageButton android:background="@drawable/common_ripple_borderless" android:padding="4dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_return" android:onClick="onBack"/>
        <ImageButton android:id="@+id/downloadGpxIb" android:background="@drawable/common_ripple_borderless" android:padding="4dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_gpx" android:onClick="downloadGpx" android:layout_marginEnd="100dp" android:layout_alignParentEnd="true"/>
        <ImageButton android:background="@drawable/common_ripple_borderless" android:padding="4dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_share" android:onClick="share" android:layout_marginEnd="50dp" android:layout_alignParentEnd="true"/>
        <ImageButton android:background="@drawable/common_ripple_borderless" android:padding="4dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/icon_delete_sport_record" android:onClick="delete" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
