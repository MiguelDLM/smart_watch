<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/root_view" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/iv_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
            <FrameLayout android:id="@+id/fl_map" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.baidu.mapapi.map.TextureMapView android:id="@+id/bMapView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <com.sma.smartv3.view.CustomGoogleMapView android:id="@+id/gMapView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </FrameLayout>
            <include layout="@layout/layout_gps_common_v2"/>
        </RelativeLayout>
        <LinearLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp">
            <com.sma.smartv3.view.text.PFMedium android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recommended_course"/>
            <com.sma.smartv3.view.text.PFMedium android:textColor="@color/line_color" android:gravity="right" android:id="@+id/sportRecommendationCourse" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/all_courses" android:layout_weight="1"/>
            <ImageView android:layout_gravity="center_vertical" android:layout_marginStart="1dp" style="@style/device_item_right_iv_style"/>
        </LinearLayout>
        <FrameLayout android:background="@drawable/fitness_item_special_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/sportRecommendationRecycler" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
