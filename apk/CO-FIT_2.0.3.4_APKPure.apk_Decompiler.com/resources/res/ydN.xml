<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" style="@style/status_item_info_root">
    <androidx.core.widget.NestedScrollView android:id="@+id/scrollView" style="@style/status_item_info_nsv">
        <LinearLayout style="@style/status_item_info_ll">
            <RelativeLayout style="@style/status_item_info_rl_top">
                <ImageButton android:id="@+id/beforeTime" android:src="@drawable/selector_left_enter" style="@style/status_item_info_ib_one"/>
                <com.sma.smartv3.view.text.PFMedium android:id="@+id/nowTime" android:text="@string/today" style="@style/status_item_info_now_time"/>
                <ImageButton android:id="@+id/nextTime" android:src="@drawable/selector_right_enter" style="@style/status_item_info_ib_two"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/loading" style="@style/status_item_info_loading_rl">
                <androidx.core.widget.ContentLoadingProgressBar android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
            </RelativeLayout>
            <LinearLayout android:id="@+id/dataContent" style="@style/status_item_info_ll_two">
                <com.sma.smartv3.view.text.DINCondBold android:id="@+id/nowTimeDetails" android:text="12:00" style="@style/status_item_info_select_time"/>
                <RelativeLayout style="@style/status_item_info_rl_two">
                    <ImageView android:id="@+id/image" android:src="@drawable/icon_ecg" style="@style/status_item_info_iv_flag"/>
                    <com.sma.smartv3.view.text.DINCondBold android:id="@+id/nowValue" android:text="0" style="@style/status_item_info_select_value"/>
                    <com.sma.smartv3.view.text.PFMedium android:id="@+id/valueUnit" android:text="@string/bpm" style="@style/status_item_info_value_unit"/>
                </RelativeLayout>
                <com.sma.smartv3.view.MyLineChart android:id="@+id/lineChart" style="@style/status_item_info_chat"/>
                <LinearLayout style="@style/status_item_info_ll_three">
                    <LinearLayout style="@style/status_item_info_ll_three_ll">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/maxHrTV" android:text="@string/max_hr" style="@style/status_item_info_total"/>
                        <com.sma.smartv3.view.text.DINCondBold android:id="@+id/maxHrValue" android:text="0" style="@style/status_item_info_total_value"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/maxHrUnit" android:text="@string/bpm" style="@style/status_item_info_total_unit"/>
                    </LinearLayout>
                    <LinearLayout style="@style/status_item_info_ll_three_ll">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/avHrTV" android:text="@string/ave_hr" style="@style/status_item_info_total"/>
                        <com.sma.smartv3.view.text.DINCondBold android:id="@+id/avHrValue" android:text="0" style="@style/status_item_info_total_value"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/avHrUnit" android:text="@string/bpm" style="@style/status_item_info_total_unit"/>
                    </LinearLayout>
                    <LinearLayout style="@style/status_item_info_ll_three_ll">
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/minHrTV" android:text="@string/min_hr" style="@style/status_item_info_total"/>
                        <com.sma.smartv3.view.text.DINCondBold android:id="@+id/minHrValue" android:text="0" style="@style/status_item_info_total_value"/>
                        <com.sma.smartv3.view.text.PFMedium android:id="@+id/minHrUnit" android:text="@string/bpm" style="@style/status_item_info_total_unit"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout style="@style/status_measure_layout_style">
                    <Button android:text="@string/measure" style="@style/status_measure_btn_style"/>
                    <View style="@style/status_line_style"/>
                </LinearLayout>
                <LinearLayout style="@style/status_tip_layout_style">
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/heart_rate" style="@style/status_tip_title_style"/>
                    <com.sma.smartv3.view.text.PFMedium android:text="@string/heart_rate_tip" style="@style/status_tip_style"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
