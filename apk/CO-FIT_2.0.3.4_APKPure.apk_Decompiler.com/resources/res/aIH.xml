<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/detail_pass_city_rl" android:background="@drawable/nsdk_rr_pass_road_right_big" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@android:color/black" android:id="@+id/pass_city_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="1dp" android:layout_marginBottom="1dp" android:text="石家庄"/>
        <RelativeLayout android:id="@+id/route_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_below="@+id/pass_city_tx">
            <TextView android:textSize="12dp" android:textColor="#555555" android:id="@+id/total_dis_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="500公里"/>
            <TextView android:textSize="12dp" android:textColor="#555555" android:id="@+id/total_time_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:text="小时" android:layout_toRightOf="@+id/total_dis_tx"/>
        </RelativeLayout>
        <TextView android:id="@+id/line_tx" android:background="#99b5b5b5" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="2dp" android:layout_marginTop="1dp" android:layout_marginRight="2dp" android:layout_marginBottom="1dp" android:layout_below="@+id/route_ll"/>
        <ImageView android:id="@+id/detail_climate_img" android:background="@drawable/nsdk_rr_bad_weather_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="0.5dp" android:layout_marginBottom="1dp" android:layout_below="@+id/line_tx" android:layout_centerVertical="true"/>
        <TextView android:textSize="12dp" android:textColor="#555555" android:id="@+id/climate_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginBottom="1dp" android:text="天气" android:layout_toRightOf="@+id/detail_climate_img" android:layout_below="@+id/line_tx"/>
        <TextView android:textSize="12dp" android:textColor="#555555" android:id="@+id/temprature_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginBottom="1dp" android:text="温度" android:layout_toRightOf="@+id/climate_tx" android:layout_below="@+id/line_tx"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/short_pass_rl" android:background="@drawable/nsdk_rr_pass_road_right_small" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/short_pass_city_tx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="市"/>
        <ImageView android:id="@+id/climate_img" android:background="@drawable/nsdk_rr_bad_weather_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp"/>
    </LinearLayout>
</RelativeLayout>
