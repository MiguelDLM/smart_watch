<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:mcpapp="http://schemas.android.com/apk/com.l4digital.fastscroll" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root_view" android:background="@color/view_page_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_data" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/contact_search_layout" android:background="@color/view_page_secondary_bg" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="22dp" android:layout_marginStart="22dp" android:layout_marginEnd="22dp">
                <EditText android:id="@+id/contact_list_et" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="10dp"/>
                <View android:layout_gravity="center_vertical" android:background="@color/text_color" android:layout_width="1dp" android:layout_height="20dp" android:layout_toLeftOf="@+id/search_cion_img" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/search_cion_img" android:padding="3dp" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:src="@drawable/search_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="5dp"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/view_page_secondary_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">
                <com.sma.smartv3.view.text.PFMedium android:layout_marginTop="22dp" android:layout_marginBottom="10dp" android:text="@string/swipe_left_to_delete_tip" android:layout_marginStart="22dp" android:layout_marginEnd="22dp" style="@style/swipe_left_to_delete_tip_style"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:divider="@null" android:paddingEnd="30dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.sma.smartv3.view.ContactSideBar android:layout_gravity="right" android:id="@+id/contact_list_contact_sidebar" android:layout_width="30dp" android:layout_height="wrap_content" android:layout_marginTop="80dp" android:layout_marginBottom="80dp"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/empty" android:background="@color/view_page_main_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="16sp" android:textColor="@color/text_color" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="@string/contact_no_data" android:drawableTop="@drawable/pic_no_contact_v2" android:drawablePadding="16dp"/>
            <TextView android:textSize="16sp" android:textColor="@color/line_color" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginTop="30dp" android:layout_marginRight="22dp" android:layout_marginBottom="100dp" android:text="@string/contact_no_data_tip" android:drawablePadding="16dp"/>
            <Button android:layout_marginTop="50dp" android:text="@string/add" style="@style/bottom_btn"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
