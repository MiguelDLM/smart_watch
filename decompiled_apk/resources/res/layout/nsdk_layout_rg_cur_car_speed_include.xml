<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bnav_rg_cp_cur_car_speed_rl"
    android:visibility="gone"
    android:layout_width="@dimen/nsdk_rg_cur_car_speed_anim_panel_size"
    android:layout_height="@dimen/nsdk_rg_cur_car_speed_anim_panel_size"
    android:layout_margin="-6dp"
    android:layout_marginBottom="2dp">
    <View
        android:id="@+id/bnav_rg_cp_cur_overspeed_anim_view"
        android:background="@drawable/nsdk_drawable_rg_assist_overspeed_anim_bg"
        android:visibility="gone"
        android:layout_width="@dimen/nsdk_rg_interval_camera_panel_size"
        android:layout_height="@dimen/nsdk_rg_interval_camera_panel_size"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/bnav_rg_cp_car_speed_layout"
        android:layout_width="@dimen/nsdk_rg_interval_camera_panel_size"
        android:layout_height="@dimen/nsdk_rg_interval_camera_panel_size"
        android:layout_centerInParent="true">
        <View
            android:id="@+id/bnav_rg_cp_car_speed_bg"
            android:background="@drawable/nsdk_drawable_rg_assist_normal_speed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <TextView
                android:textSize="@dimen/navi_dimens_28dp"
                android:textStyle="bold"
                android:textColor="#3884fc"
                android:id="@+id/bnav_rg_cp_cur_car_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:letterSpacing="-0.03"/>
            <TextView
                android:textSize="@dimen/navi_dimens_10dp"
                android:textColor="#3884fc"
                android:id="@+id/bnav_rg_cp_cur_car_speed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="km/h"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
