<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/mapView_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-20dp"
        android:layout_above="@+id/data_panel">
        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/bMapView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.sma.smartv3.view.CustomGoogleMapView
            android:id="@+id/gMapView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp">
            <CheckBox
                android:id="@+id/downloadGpxIb"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/icon_gpx"/>
            <CheckBox
                android:id="@+id/btn_map_hot"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_map_hot"/>
            <CheckBox
                android:id="@+id/btn_map_3d"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_map_3d"/>
            <CheckBox
                android:id="@+id/btn_map_mark"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_map_mark"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/data_panel"
        android:background="@drawable/shape_sport_detail_top_bg"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sma.smartv3.view.text.DINCondBold
                    android:textSize="35sp"
                    android:textColor="@color/text_color"
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:25:30"/>
                <com.sma.smartv3.view.text.DINCondBold
                    android:textSize="16sp"
                    android:textColor="@color/line_color"
                    android:id="@+id/tv_dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:30 AM 10/23/2019"/>
            </LinearLayout>
            <Button
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:id="@+id/btn_track_play"
                android:background="@drawable/selector_btn_play"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/track_play"
                android:layout_centerVertical="true"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:gravity="start"
                style="@style/sport_map_item_ll">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.sma.smartv3.view.text.PFMedium
                        android:text="@string/heart_rate"
                        style="@style/sport_detail_item_name"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:id="@+id/tv_avg_bpm_value"
                        android:text="120"
                        style="@style/sport_detail_item_value"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:text="@string/bpm"
                        style="@style/sport_detail_item_unit"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/sport_map_item_ll">
                <com.sma.smartv3.view.text.PFMedium
                    android:text="@string/distance"
                    style="@style/sport_detail_item_name"/>
                <com.sma.smartv3.view.text.PFMedium
                    android:id="@+id/tv_distance_value"
                    android:text="27586"
                    style="@style/sport_detail_item_value"/>
                <com.sma.smartv3.view.text.PFMedium
                    android:id="@+id/tv_distance_unit"
                    android:text="@string/km"
                    style="@style/sport_detail_item_unit"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                style="@style/sport_map_item_ll">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.sma.smartv3.view.text.PFMedium
                        android:text="@string/calories"
                        style="@style/sport_detail_item_name"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:id="@+id/tv_calories_value"
                        android:text="27586"
                        style="@style/sport_detail_item_value"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:text="@string/kcal"
                        style="@style/sport_detail_item_unit"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
