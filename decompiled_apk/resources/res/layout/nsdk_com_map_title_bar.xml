<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@android:color/transparent"
    android:paddingLeft="@dimen/navi_dimens_10dp"
    android:paddingTop="@dimen/navi_dimens_10dp"
    android:paddingRight="@dimen/navi_dimens_10dp"
    android:paddingBottom="@dimen/navi_dimens_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:gravity="center"
        android:id="@+id/left_imageview"
        android:background="@drawable/bnav_titlebar_back_bg_selector"
        android:clickable="true"
        android:layout_width="@dimen/navi_dimens_48dp"
        android:layout_height="@dimen/navi_dimens_48dp"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:gravity="center"
        android:id="@+id/right_imageview"
        android:background="@drawable/nsdk_carmode_maptitlebar_back"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="@dimen/navi_dimens_48dp"
        android:layout_height="@dimen/navi_dimens_48dp"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/middle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>
