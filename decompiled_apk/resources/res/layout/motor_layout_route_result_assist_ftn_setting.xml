<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/motor_route_result_setting_page"
    android:background="@color/motor_rr_setting_page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/motor_rr_setting_top_empty_view"
        android:background="@color/nsdk_cl_bg_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/bnav_statusbar_empty_view_include"/>
    <com.baidu.navisdk.ui.widget.BNCommonTitleBar
        android:id="@+id/motor_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        apps:nsdk_middleContentText="@string/motor_nav_assist_function_setting"/>
    <ScrollView
        android:scrollbarSize="@dimen/navi_dimens_0dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarStyle="insideOverlay"
        android:orientation="vertical"
        android:id="@+id/motor_rr_setting_scroll"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/motor_rr_assist_ftn_bluetooth_group_ly"
            android:background="@drawable/nsdk_drawable_rg_setting_page_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/motor_setting_page_margin_left_right"
            android:layout_marginTop="@dimen/motor_setting_margin_top_group_title"
            android:layout_marginRight="@dimen/motor_setting_page_margin_left_right">
            <RelativeLayout
                android:id="@+id/motor_float_setting_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MotorSettingItemMarginStyle.SwitchItem">
                <TextView
                    android:id="@+id/motor_nav_float_mode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nsdk_float_setting_title"
                    style="@style/MotorSettingItemTitleText"/>
                <ImageView
                    android:id="@+id/motor_nav_float_setting_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/bnav_setting_item_switch_selector"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@null"/>
                <com.baidu.navisdk.module.vehiclemanager.widgets.BNSettingTextRadioGroup
                    android:orientation="horizontal"
                    android:id="@+id/motor_nav_float_mode_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/navi_dimens_10dp"
                    android:layout_below="@+id/motor_nav_float_mode_tv"
                    apps:nsdk_radio_content_array="@array/rg_setting_float_item"
                    apps:nsdk_radio_init_daynight="false"/>
                <TextView
                    android:id="@+id/motor_nav_float_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/motor_explain_view_margin_top"
                    android:maxLines="3"
                    android:layout_below="@+id/motor_nav_float_mode_radio_group"
                    style="@style/MotorSettingItemTipsText"/>
            </RelativeLayout>
            <View
                android:id="@+id/motor_menu_h_split_assist_ftn_0"
                style="@style/MotorCommonListSplitLine"/>
            <com.baidu.navisdk.module.vehiclemanager.widgets.BNSettingExplainSwitchItem
                android:id="@+id/motor_calling_play_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                apps:nsdk_explain_item_tip="@string/motor_calling_play_tips"
                apps:nsdk_explain_item_title="@string/motor_calling_play_title"
                style="@style/MotorSettingItemMarginStyle.SwitchItem"/>
            <View
                android:id="@+id/motor_menu_h_split_assist_ftn_1"
                style="@style/MotorCommonListSplitLine"/>
            <com.baidu.navisdk.module.vehiclemanager.widgets.BNSettingExplainSwitchItem
                android:id="@+id/motor_scenic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                apps:nsdk_explain_item_tip="@string/motor_scenic_play_tips"
                apps:nsdk_explain_item_title="@string/motor_scenic_play_title"
                style="@style/MotorSettingItemMarginStyle.SwitchItem"/>
            <View
                android:id="@+id/motor_menu_h_split_assist_ftn_2"
                style="@style/MotorCommonListSplitLine"/>
            <com.baidu.navisdk.module.vehiclemanager.widgets.BNSettingExplainSwitchItem
                android:id="@+id/motor_power_saver_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/motor_setting_item_margin_top_bottom"
                apps:nsdk_add_view_margin_left="@dimen/navi_dimens_10dp"
                apps:nsdk_add_view_rightOfTitle="@layout/motor_layout_power_saver_mark"
                apps:nsdk_explain_item_tip="@string/motor_power_saver_tips"
                apps:nsdk_explain_item_title="@string/motor_power_saver_title"
                style="@style/MotorSettingItemMarginStyle.SwitchItem"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
