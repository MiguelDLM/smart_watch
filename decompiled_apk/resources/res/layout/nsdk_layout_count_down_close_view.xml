<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/nsdk_ugc_count_down_close_view_bg"
    android:padding="@dimen/navi_dimens_4dp"
    android:layout_width="@dimen/navi_dimens_60dp"
    android:layout_height="@dimen/navi_dimens_30dp">
    <TextView
        android:textSize="@dimen/navi_dimens_15dp"
        android:id="@+id/count_down_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/count_down_close_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/count_down_close_icon"
        android:layout_width="@dimen/navi_dimens_20dp"
        android:layout_height="@dimen/navi_dimens_20dp"
        android:src="@drawable/nsdk_checkbox_notification_count_down_close"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/count_down_time_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
