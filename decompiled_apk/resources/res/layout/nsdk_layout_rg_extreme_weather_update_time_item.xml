<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="@dimen/navi_dimens_16dp"
    android:paddingBottom="@dimen/navi_dimens_14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/navi_dimens_10dp"
        android:textColor="#999"
        android:id="@+id/bnav_rg_weather_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <TextView
        android:textSize="@dimen/navi_dimens_10dp"
        android:textColor="#333"
        android:ellipsize="end"
        android:id="@+id/bnav_rg_weather_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <TextView
        android:textSize="@dimen/navi_dimens_10dp"
        android:textColor="#999"
        android:ellipsize="end"
        android:id="@+id/bnav_rg_weather_end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   提供"
        android:maxLines="1"/>
</LinearLayout>
