<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ugc_report_main_Flevel_Layout"
    android:background="#fbfbfb"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/ugc_report_popup_header_container"
        android:background="#fbfbfb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_54dp">
        <ImageView
            android:id="@+id/ugc_report_popup_icon"
            android:padding="@dimen/navi_dimens_5dp"
            android:layout_width="@dimen/navi_dimens_23dp"
            android:layout_height="@dimen/navi_dimens_25dp"
            android:src="@drawable/bnav_ugc_drawable_route_fullview_close"
            android:layout_marginEnd="@dimen/navi_dimens_10dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/ugc_report_panel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nsdk_string_rg_ugc_road_report_problem"
            android:layout_marginStart="@dimen/navi_dimens_15dp"/>
    </RelativeLayout>
    <View
        android:background="#d7d8d9"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="-1px"/>
    <GridView
        android:gravity="center"
        android:id="@+id/ugc_report_main_grideview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_5dp"
        android:layout_marginTop="@dimen/navi_dimens_15dp"
        android:layout_marginRight="@dimen/navi_dimens_5dp"
        android:layout_marginBottom="@dimen/navi_dimens_15dp"
        android:listSelector="@android:color/transparent"
        android:verticalSpacing="@dimen/navi_dimens_15dp"
        android:stretchMode="columnWidth"
        android:numColumns="4"
        android:scrollbarFadeDuration="0"/>
</LinearLayout>
