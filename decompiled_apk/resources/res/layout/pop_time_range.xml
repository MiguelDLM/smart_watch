<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/pop_common_container_style">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pop_header_height">
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="@dimen/pop_header_height"
            android:text="@string/start_time"
            android:layout_weight="1"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="@dimen/pop_header_height"
            android:text="@string/end_time"
            android:layout_weight="1"/>
    </LinearLayout>
    <View style="@style/pop_top_line_style"/>
    <com.sma.smartv3.view.picker.TimeRangePicker
        android:id="@+id/time_range_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View style="@style/pop_bottom_line_style"/>
    <include layout="@layout/layout_pop_bottom_btn"/>
</LinearLayout>
