<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:text="@string/cadence"
                style="@style/qrcode_sycn_tip"/>
            <com.sma.smartv3.view.text.PFMedium
                android:text="@string/cadence_tip"
                style="@style/qrcode_sycn_tip"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
