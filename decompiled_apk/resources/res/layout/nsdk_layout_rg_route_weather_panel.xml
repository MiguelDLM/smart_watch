<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/nsdk_drawable_rg_weather_panel_bg"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/nsdk_rg_weather_panel_height"
    android:minWidth="@dimen/navi_dimens_115dp">
    <TextView
        android:textSize="@dimen/navi_dimens_16dp"
        android:textColor="#d0021b"
        android:ellipsize="end"
        android:id="@+id/bnav_rg_weather_panel_traffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxEms="8"/>
    <LinearLayout
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:id="@+id/bnav_rg_weather_panel_bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/navi_dimens_16dp"
            android:textColor="#333"
            android:id="@+id/bnav_rg_weather_panel_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/navi_dimens_12dp"
            android:textColor="#333"
            android:id="@+id/bnav_rg_weather_panel_dis_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
