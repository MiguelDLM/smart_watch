<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12dp"
        android:textColor="#3385ff"
        android:gravity="center_vertical"
        android:id="@+id/text_left"
        android:background="@drawable/bnav_route_result_dynamic_card_no_arrow_1_left"
        android:paddingLeft="7dp"
        android:paddingRight="10dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-17dp"
        android:text="188公里"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#3385ff"
        android:gravity="center_vertical"
        android:id="@+id/text_right"
        android:background="@drawable/bnav_route_result_dynamic_card_no_arrow_1_right"
        android:paddingLeft="10dp"
        android:paddingRight="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-17dp"
        android:text="188公里"
        android:layout_toRightOf="@+id/icon"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/text_left"/>
</merge>
