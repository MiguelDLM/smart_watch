<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_time_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sma.smartv3.view.AbhSettingsHeader
                    android:id="@+id/item_header"
                    app:abh_description="@string/heart_rate_monitoring_tip"
                    app:abh_title="@string/electrocardiogram_monitoring"
                    style="@style/abh_settings_item"/>
                <com.sma.smartv3.view.AbhSettingsItem
                    android:id="@+id/item_time_range"
                    android:onClick="onSetTimeRange"
                    app:abh_left_text="@string/time_settings"
                    style="@style/abh_settings_item"/>
                <com.sma.smartv3.view.AbhSettingsItem
                    android:id="@+id/item_interval"
                    android:onClick="onSetInterval"
                    app:abh_left_text="@string/monitoring_interval"
                    style="@style/abh_settings_item"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
