<?xml version="1.0" encoding="utf-8"?>
<com.baidu.navisdk.ui.routeguide.subview.widget.ServiceAreaExitLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/bnavi_hw_petrol_station_panel"
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bnav_hw_service_panel_top_dist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/bnavi_hw_service_panel_top_icon"
            android:layout_width="@dimen/nsdk_rg_hw_service_area_panel_icon_width"
            android:layout_height="@dimen/nsdk_rg_hw_service_area_panel_icon_height"
            android:layout_marginTop="@dimen/navi_dimens_1dp"/>
        <TextView
            android:textSize="@dimen/nsdk_rg_hw_service_area_panel_text_dist"
            android:textColor="@color/nsdk_rg_hw_service_info"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:id="@+id/bnavi_hw_service_panel_top_remain_dist"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/nsdk_rg_hw_service_area_panel_text_unit"
            android:textColor="@color/nsdk_rg_hw_service_info"
            android:layout_gravity="bottom"
            android:id="@+id/bnavi_hw_service_panel_top_unit"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-0.3dp"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_21dp"
        android:layout_marginTop="@dimen/navi_dimens_3dp">
        <ImageView
            android:id="@+id/bnavi_rg_hw_service_panel_subscript_icon"
            android:visibility="gone"
            android:layout_width="@dimen/nsdk_rg_hw_service_area_subscript_icon_size"
            android:layout_height="@dimen/nsdk_rg_hw_service_area_subscript_icon_size"
            android:layout_marginRight="@dimen/navi_dimens_5dp"
            android:layout_marginBottom="@dimen/navi_dimens_3dp"
            android:src="@drawable/nsdk_drawable_rg_hw_service_subscribed"/>
        <TextView
            android:textSize="@dimen/nsdk_rg_hw_service_area_panel_text_exit_name"
            android:textColor="@color/nsdk_rg_hw_service_info"
            android:ellipsize="end"
            android:gravity="right"
            android:id="@+id/bnavi_hw_service_panel_exit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_weight="1"/>
    </LinearLayout>
</com.baidu.navisdk.ui.routeguide.subview.widget.ServiceAreaExitLayout>
