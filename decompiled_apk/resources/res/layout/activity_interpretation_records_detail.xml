<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/text_color"
                    android:id="@+id/interpretation_records_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="220dp"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/transform_title_edit_img"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/icon_dialog_edit_img"
                    android:layout_marginStart="6dp"
                    app:tint="@color/line_color"/>
            </LinearLayout>
            <com.sma.smartv3.view.text.PFMedium
                android:textColor="@color/line_color"
                android:layout_gravity="center_vertical"
                android:id="@+id/interpretation_records_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/transform_language_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_transform_language"
                android:layout_marginStart="6dp"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:id="@+id/interpretation_records_to_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_transform_location2"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textColor="@color/line_color"
                android:id="@+id/interpretation_records_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置信息"
                android:layout_marginStart="6dp"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textColor="@color/line_color"
                android:gravity="right"
                android:id="@+id/interpretation_records_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textColor="@color/text_color"
            android:id="@+id/interpretation_records_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textColor="@color/line_color"
            android:id="@+id/interpretation_records_extraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ProgressBar
        android:id="@+id/interpretation_records_audio_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sma.smartv3.view.text.PFMedium
            android:textColor="@color/line_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:layout_weight="1"
            android:layout_marginStart="10dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textColor="@color/line_color"
            android:id="@+id/interpretation_records_audio_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/simultaneous_play_audio_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_run_start"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/simultaneous_play_audio_volume_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/simultaneous_play_volume_icon"
            android:layout_toRightOf="@+id/simultaneous_play_audio_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"/>
    </RelativeLayout>
</LinearLayout>
