<?xml version="1.0" encoding="utf-8"?>
<com.huawei.hms.ads.nativead.NativeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/adp_huawei_native_video_view"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:id="@+id/adp_huawei_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huawei.hms.ads.nativead.MediaView
            android:id="@+id/adp_huawei_ad_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/adp_huawei_left_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adp_huawei_ad_media">
            <TextView
                android:textSize="@dimen/hiad_text_13_sp"
                android:textColor="#000000"
                android:id="@+id/adp_huawei_ad_title"
                android:layout_width="180dp"
                android:layout_height="19dp"
                android:layout_marginTop="16dp"
                android:alpha="1"
                android:layout_marginStart="24dp"/>
            <TextView
                android:textSize="@dimen/hiad_text_12_sp"
                android:textColor="#666666"
                android:id="@+id/adp_huawei_ad_source"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="16dp"
                android:maxWidth="158dp"
                android:layout_below="@+id/adp_huawei_ad_title"
                android:alpha="0.6"
                android:layout_marginStart="24dp"/>
            <TextView
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/adp_huawei_ad_flag"
                android:background="@drawable/adp_huawei_native_flag_rounded_corners_shape"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:layout_marginTop="40dp"
                android:text="@string/adp_huawei_ad_flag"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/adp_huawei_ad_source"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/adp_huawei_right_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adp_huawei_ad_media"
            android:layout_alignParentEnd="true">
            <Button
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:id="@+id/adp_huawei_ad_call_to_action"
                android:background="@drawable/adp_huawei_native_button_rounded_corners_shape"
                android:layout_width="72dp"
                android:layout_height="26dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="23dp"
                android:layout_marginEnd="52dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</com.huawei.hms.ads.nativead.NativeView>
