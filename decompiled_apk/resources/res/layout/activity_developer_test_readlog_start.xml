<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:id="@+id/et_old_ble_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/click_search_hint"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:id="@+id/et_signal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="60"
                android:layout_weight="1"
                android:inputType="number"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/click_search_signal_hint"
                android:layout_weight="2"
                android:onClick="startSearch"
                android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_signal_hint"/>
                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/tv_search_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/readLog_devices"/>
                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/tv_already_readLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/list_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:divider="@null"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_start_readLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_start_readLog_tip"
            android:onClick="startReadLog"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_stop_readLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_readLog"
            android:onClick="stopReadLog"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_clear_readLog_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_readLog_records"
            android:onClick="clearReadLogHistory"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>
