<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/guide_back"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/wsdk_back_btn_normal"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:textSize="21dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="AR步行导航使用介绍"/>
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="什么是AR步行导航？"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="AR步行导航可以将路线和转弯箭头等信息展示在您所在的真实实景中，更简单易懂的引导您行走。"/>
            <View
                android:background="#ececec"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="AR步行导航都有哪些功能?"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="1.抬起手机使用AR导航，放平手机使用普通导航。"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="进入AR导航页面后，抬起手机即可使用AR导航模式，放平手机可使用普通步行导航模式。                 为了您的安全起见，建议在路口等车辆较多的地方放下手机，注意步行安全。"/>
            <ImageView
                android:background="@drawable/wsdk_6dof_guide1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="2.跟随AR路线行走"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="AR导航开始后，您可以跟随实景中的路线指引来行走。如果AR导航开始后，您的手机中没有路线，可跟随路线指引的指示标，找到路线。"/>
            <ImageView
                android:background="@drawable/wsdk_6dof_guide2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="30dp"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="3.引路图标介绍"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="在路线的转弯处，您可以看到如图所示的转弯箭头图标，可在此处转弯。"/>
            <ImageView
                android:background="@drawable/wsdk_6dof_guide3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="如果您的路线需要上天桥/下地道，那么在上天桥前/下地道处可以看到如图所示的上天桥/下地道图标，可在此处上天桥/下地道。"/>
            <ImageView
                android:background="@drawable/wsdk_6dof_guide4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="到达终点后，您可以在终点处看到如图所示的终点图标。"/>
            <ImageView
                android:background="@drawable/wsdk_6dof_guide5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"/>
            <TableLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:divider="@drawable/table_v_line"
                android:stretchColumns="*"
                android:showDividers="end|middle|beginning">
                <TableRow
                    android:orientation="horizontal"
                    android:divider="@drawable/table_h_line"
                    android:showDividers="end|middle|beginning">
                    <TextView
                        android:textSize="14dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text=""/>
                    <TextView
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="安卓"/>
                    <TextView
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="IOS"/>
                </TableRow>
                <TableRow
                    android:divider="@drawable/table_h_line"
                    android:showDividers="end|middle|beginning">
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="系统版本"/>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="安卓10.0及以上"/>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="IOS11.3以上"/>
                </TableRow>
                <TableRow
                    android:divider="@drawable/table_h_line"
                    android:showDividers="end|middle|beginning">
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="设备要求"/>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="绝大多数Android手机"/>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="iPhone7以上"/>
                </TableRow>
                <TableRow
                    android:divider="@drawable/table_h_line"
                    android:showDividers="end|middle|beginning">
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="应用版本"/>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="15.7.5及以上"/>
                    <TextView
                        android:textSize="12dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="1dp"
                        android:text="15.6.0及以上"/>
                </TableRow>
            </TableLayout>
            <View
                android:background="#ececec"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="常见问题"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="1.AR实景中的箭头图标位置不准确"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="如果您的手机卫星信号较弱，导致定位不准，那么实景中的箭头图标放置的位置可能不准确。为了保持卫星信号稳定，请尽量行走在开阔地带。"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="2.AR导航路线方向不准"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="路线方向和罗盘方向可能受磁场等因素导致方向不准。如果您使用时发现AR导航路线方向不准或罗盘方向不准，可以尝试拿着手机画8字进行方向校正："/>
            <ImageView
                android:background="@drawable/wsdk_6dof_guide6"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="3.AR导航启动失败"/>
            <TextView
                android:textSize="15dp"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="安卓端由于AR引擎的原因，可能存在AR导航启动失败的情况，如果启动失败，可以尝试将手机摄像头对准光线充足、物体较多的区域。若多次尝试仍无法启动，请重启手机。"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
