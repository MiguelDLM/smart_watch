<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/route_search_filter_fast_slow"
        android:background="@drawable/bnav_common_cp_button_selector"
        android:visibility="gone"
        android:layout_width="@dimen/navi_dimens_48dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/navi_dimens_9dp">
        <Button
            android:textSize="@dimen/navi_dimens_10dp"
            android:textColor="#333333"
            android:id="@+id/route_search_filter_category_fast"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_48dp"
            android:text="快充"/>
        <Button
            android:textSize="@dimen/navi_dimens_10dp"
            android:textColor="#333333"
            android:id="@+id/route_search_filter_category_slow"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_48dp"
            android:text="慢充"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/route_search_filter_brands"
        android:background="@drawable/bnav_common_cp_button_selector"
        android:layout_width="@dimen/navi_dimens_48dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/route_search_start_arrow_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_13dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/route_search_start_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/navi_dimens_1dp"
                android:src="@drawable/nsdk_nearby_search_up_arrow"
                android:scaleType="fitXY"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/route_search_filter_brands_recycler_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_143dp"/>
        <FrameLayout
            android:id="@+id/route_search_end_arrow_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_13dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/route_search_end_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/navi_dimens_1dp"
                android:src="@drawable/nsdk_nearby_search_down_arrow"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
