<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:id="@+id/right_area_style2_container"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:paddingStart="12dp"
    android:paddingEnd="15dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/left_row_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/row_button_container">
        <ImageView
            android:id="@+id/left_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/bn_quest_route_result_card_row_quest"
            android:scaleType="centerCrop"/>
        <TextView
            android:textSize="16dp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_marginStart="9dp"/>
        <TextView
            android:textSize="12dp"
            android:ellipsize="end"
            android:id="@+id/sub_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/content_title"
            android:layout_alignBottom="@+id/content_title"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/left_row_subtitle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/left_row_title_container"
        android:layout_centerInParent="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/row_button_container">
        <ImageView
            android:id="@+id/left_image_sub"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/bn_quest_route_result_card_row_answer"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/content_sub_text_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp">
            <TextView
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哈哈哈"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/row_button_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/left_row_subtitle_container"
        android:layout_alignParentEnd="true">
        <com.baidu.navisdk.module.routeresultbase.view.template.cell.row.RowButton
            android:id="@+id/row_button"
            android:layout_width="wrap_content"
            android:layout_height="18dp"/>
    </RelativeLayout>
</RelativeLayout>
