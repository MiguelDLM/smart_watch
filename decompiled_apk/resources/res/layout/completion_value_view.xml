<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.sma.smartv3.view.text.FontTextView
        android:textSize="28sp"
        android:textColor="@drawable/selector_text_color_white_gray8a"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:my_font="din_cond_bold"/>
    <com.sma.smartv3.view.text.FontTextView
        android:textSize="12sp"
        android:textColor="@drawable/selector_text_color_white_gray8a"
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minute_abrv"
        android:layout_marginStart="2dp"
        app:my_font="pf_medium"/>
    <com.sma.smartv3.view.text.FontTextView
        android:textSize="28sp"
        android:textColor="@drawable/selector_text_color_white_gray8a"
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:my_font="din_cond_bold"/>
    <com.sma.smartv3.view.text.FontTextView
        android:textSize="12sp"
        android:textColor="@drawable/selector_text_color_white_gray8a"
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_abrv"
        android:layout_marginStart="2dp"
        app:my_font="pf_medium"/>
</LinearLayout>
