<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ar_indoor_poi_switch_panel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ar_indoor_poi_skin_switch_panel"
        android:background="@drawable/wsdk_ar_btn_bg"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/indoor_select_item"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="14dp"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="查看周边服务"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#c2c2c2"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="展示门店招牌"
                android:layout_toRightOf="@+id/text1"
                android:layout_centerVertical="true"/>
            <CheckBox
                android:id="@+id/poi_check"
                android:background="@drawable/wsdk_checkbox_selector"
                android:layout_width="28dp"
                android:layout_height="17dp"
                android:layout_marginLeft="8dp"
                android:checked="true"
                android:button="@drawable/transparent"
                android:layout_toRightOf="@+id/text2"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/indoor_switch_hide_btn"
                android:padding="0dp"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/wsdk_quit_white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <HorizontalScrollView
            android:id="@+id/indoor_container_scroller"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="0dp"
            android:layout_below="@+id/indoor_select_item">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/toilet_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/toilet_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_toilet_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="洗手间"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/elevator_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/elevator_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_elevator_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="直梯"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/stair_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/stair_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_stair_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扶梯"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/entrance_exit_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/entrance_exit_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_entrance_exit_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出入口"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/atm_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/atm_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_atm_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ATM"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/service_center_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/service_center_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_service_center_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务中心"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/information_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/information_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_information_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="问询处"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cashier_btn"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/cashier_btn_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginBottom="15dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/wsdk_cashier_panel"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </FrameLayout>
                    <TextView
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收银台"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</RelativeLayout>
