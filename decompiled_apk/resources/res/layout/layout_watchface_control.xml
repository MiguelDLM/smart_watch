<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout style="@style/watchface_element_ll_style">
        <com.sma.smartv3.view.text.PFMedium
            android:text="@string/control"
            style="@style/watchface_element_ll_tv_style"/>
        <com.sma.smartv3.view.text.PFMedium
            android:text="@string/watchface_element_drag_tip"
            style="@style/watchface_element_ll_tv_2_style"/>
    </LinearLayout>
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/dialSelect0"
                style="@style/watchface_element_content_ll_style">
                <RelativeLayout style="@style/watchface_element_content_ll_style_ll_rl">
                    <ImageView
                        android:id="@+id/ivDialSelect0"
                        android:src="@drawable/dial_control_pop_0"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv"/>
                    <ImageView
                        android:id="@+id/dialSelectStatus0"
                        android:src="@drawable/ic_watchface_element_add"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv_2"/>
                </RelativeLayout>
                <com.sma.smartv3.view.text.PFRegular
                    android:text="@string/steps"
                    style="@style/watchface_element_content_ll_style_ll_tv"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dialSelect1"
                style="@style/watchface_element_content_ll_style">
                <RelativeLayout style="@style/watchface_element_content_ll_style_ll_rl">
                    <ImageView
                        android:id="@+id/ivDialSelect1"
                        android:src="@drawable/dial_control_pop_1"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv"/>
                    <ImageView
                        android:id="@+id/dialSelectStatus1"
                        android:src="@drawable/ic_watchface_element_add"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv_2"/>
                </RelativeLayout>
                <com.sma.smartv3.view.text.PFRegular
                    android:text="@string/heart_rate"
                    style="@style/watchface_element_content_ll_style_ll_tv"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dialSelect2"
                style="@style/watchface_element_content_ll_style">
                <RelativeLayout style="@style/watchface_element_content_ll_style_ll_rl">
                    <ImageView
                        android:id="@+id/ivDialSelect2"
                        android:src="@drawable/dial_control_pop_2"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv"/>
                    <ImageView
                        android:id="@+id/dialSelectStatus2"
                        android:src="@drawable/ic_watchface_element_add"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv_2"/>
                </RelativeLayout>
                <com.sma.smartv3.view.text.PFRegular
                    android:text="@string/calories"
                    style="@style/watchface_element_content_ll_style_ll_tv"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dialSelect3"
                style="@style/watchface_element_content_ll_style">
                <RelativeLayout style="@style/watchface_element_content_ll_style_ll_rl">
                    <ImageView
                        android:id="@+id/ivDialSelect3"
                        android:src="@drawable/dial_control_pop_3"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv"/>
                    <ImageView
                        android:id="@+id/dialSelectStatus3"
                        android:src="@drawable/ic_watchface_element_add"
                        style="@style/watchface_element_content_ll_style_ll_rl_iv_2"/>
                </RelativeLayout>
                <com.sma.smartv3.view.text.PFRegular
                    android:text="@string/distance"
                    style="@style/watchface_element_content_ll_style_ll_tv"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout style="@style/watchface_element_ll_style">
        <com.sma.smartv3.view.text.PFMedium
            android:text="@string/color"
            style="@style/watchface_element_ll_tv_style"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
</LinearLayout>
