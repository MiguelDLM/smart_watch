<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:textColor="@color/colorAccent"
                android:id="@+id/cb_shutdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shutdown"/>
            <CheckBox
                android:textColor="@color/colorAccent"
                android:id="@+id/cb_skip_server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过服务器校验"/>
        </LinearLayout>
        <EditText
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:id="@+id/et_old_ble_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/click_search_hint"/>
        <TextView
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气压:"/>
        <EditText
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:gravity="center"
            android:id="@+id/et_airpressure_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType="number"/>
        <TextView
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海拔:"/>
        <EditText
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:gravity="center"
            android:id="@+id/et_altitude_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType="number"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:id="@+id/et_signal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_weight="1"
                android:inputType="number"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/click_search_signal_hint"
                android:layout_weight="2"
                android:onClick="startSearch"
                android:textAllCaps="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_signal_hint"/>
                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/tv_search_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/airpressure_value_devices"/>
                <TextView
                    android:textColor="@color/text_color"
                    android:id="@+id/tv_already_airpressure_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/list_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:divider="@null"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_start_airpressure_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_start_airpressure_value_tip"
            android:onClick="startAirPressureValue"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_stop_airpressure_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_airpressure_value"
            android:onClick="stopAirPressureValue"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_clear_airpressure_value_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_airpressure_value_records"
            android:onClick="clearAirPressureValueHistory"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>
