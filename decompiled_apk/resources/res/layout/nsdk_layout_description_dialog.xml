<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/nsdk_ugc_dialog_description_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#11141a"
            android:id="@+id/description_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="详情"
            android:layout_marginStart="19dp"
            app:layout_constraintBottom_toTopOf="@+id/description_divide_line"
            app:layout_constraintLeft_toLeftOf="@+id/description_scrollview"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/close_icon"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@drawable/bnav_ugc_drawable_description_dialog_close"
            app:layout_constraintBottom_toBottomOf="@+id/description_detail_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/description_detail_title"/>
        <View
            android:id="@+id/description_divide_line"
            android:background="#e9ebf0"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/description_scrollview"/>
        <ScrollView
            android:id="@+id/description_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:textSize="12sp"
                android:textColor="#5c6373"
                android:layout_gravity="top"
                android:id="@+id/description_detail_content"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"/>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
