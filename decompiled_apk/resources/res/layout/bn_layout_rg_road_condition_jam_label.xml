<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/navi_dimens_12dp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:id="@+id/bn_rg_road_jam_label_distance"
        android:background="@drawable/bn_rg_smart_road_condition_label_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bn_rg_road_condition_label_normal_height"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/bn_rg_road_condition_label_left_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:gravity="center"
        android:id="@+id/bn_rg_road_jam_label_type"
        android:layout_width="@dimen/bn_rg_road_condition_label_icon_normal_width"
        android:layout_height="@dimen/bn_rg_road_condition_label_icon_normal_width"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
