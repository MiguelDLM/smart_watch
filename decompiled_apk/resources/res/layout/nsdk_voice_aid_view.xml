<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.baidu.navisdk.ui.widget.BNCommonCornerView
        android:id="@+id/cornerView"
        android:background="@drawable/nsdk_xd_voice_aid_view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapframework.voice.widget.VoiceContentAnimView
            android:layout_gravity="bottom"
            android:id="@+id/content_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.baidu.mapframework.voice.widget.VoiceHeadView
                    android:id="@+id/voice_add_head_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navi_dimens_19dp"/>
                <View
                    android:id="@+id/voice_add_line_view"
                    android:background="#ffffff"
                    android:layout_width="1px"
                    android:layout_height="@dimen/navi_dimens_10dp"
                    android:layout_marginLeft="@dimen/navi_dimens_20dp"/>
                <ImageView
                    android:id="@+id/voice_add_close_iv"
                    android:padding="@dimen/navi_dimens_8dp"
                    android:layout_width="@dimen/navi_dimens_25dp"
                    android:layout_height="@dimen/navi_dimens_25dp"
                    android:layout_marginLeft="@dimen/navi_dimens_11dp"
                    android:src="@drawable/nsdk_voice_aid_close"/>
            </LinearLayout>
        </com.baidu.mapframework.voice.widget.VoiceContentAnimView>
    </com.baidu.navisdk.ui.widget.BNCommonCornerView>
</merge>
