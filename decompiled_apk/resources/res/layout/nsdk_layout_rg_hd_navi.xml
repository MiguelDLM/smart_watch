<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end|bottom"
    android:id="@+id/bnav_rg_hd_map_container"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bnav_rg_hd_shadow_view"
        android:background="@drawable/nsdk_rg_hd_view_shadow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_30dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/bnav_rg_hd_upper_ui_root_ly"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bnav_rg_hd_close_btn"
            android:layout_width="@dimen/navi_dimens_32dp"
            android:layout_height="@dimen/navi_dimens_32dp"
            android:layout_marginTop="@dimen/navi_dimens_50dp"
            android:layout_marginRight="@dimen/navi_dimens_10dp"
            android:layout_marginBottom="@dimen/navi_dimens_10dp"
            android:src="@drawable/bnav_ic_hd_multi_close"
            app:layout_constraintBottom_toTopOf="@+id/bnav_rg_hd_full_btn"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/bnav_rg_hd_full_btn"
            android:padding="@dimen/navi_dimens_10dp"
            android:layout_width="@dimen/navi_dimens_52dp"
            android:layout_height="@dimen/navi_dimens_52dp"
            android:src="@drawable/bnav_ic_hd_full"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
