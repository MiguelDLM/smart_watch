<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/right_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="14dp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:id="@+id/operating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"/>
        <RelativeLayout
            android:id="@+id/single_card_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/content_title_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/left_image"
                    android:visibility="visible"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bn_quest_route_result_card_row_quest"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="6dp"/>
                <TextView
                    android:textSize="17dp"
                    android:textColor="#333333"
                    android:id="@+id/content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_toEndOf="@+id/left_image"/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:id="@+id/sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/content_title"
                    android:layout_alignBottom="@+id/content_title"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/content_sub_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_title_container">
                <ImageView
                    android:id="@+id/left_image_sub"
                    android:visibility="visible"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bn_quest_route_result_card_row_answer"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="6dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/content_sub_text_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/left_image_sub"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <com.baidu.navisdk.module.routeresultbase.view.template.cell.row.RowButton
        android:id="@+id/row_button"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/right_area"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"/>
</merge>
