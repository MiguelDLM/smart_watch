<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navi_rg_parking_list_layout"
    android:background="@drawable/nsdk_layout_save_park_panel_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navi_dimens_222dp">
    <View
        android:id="@+id/save_park_top_bg"
        android:background="@drawable/nsdk_layout_save_park_panel_gradient_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="@drawable/nsdk_layout_save_park_panel_background_new"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/nsdk_rg_smart_traffic_park_list_title_text_color"
        android:ellipsize="middle"
        android:id="@+id/parking_lot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="为您推荐距终点附近停车场"
        android:maxEms="15"
        android:singleLine="true"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/parking_lot_close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bd_common_ic_close"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/parking_lot_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/parking_lot_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parking_lot_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_180dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/parking_lot_title"
        app:layout_constraintTop_toBottomOf="@+id/parking_lot_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
