<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/pop_common_container_style">
    <com.sma.smartv3.view.text.PFMedium
        android:padding="22dp"
        android:layout_height="wrap_content"
        style="@style/popup_title"/>
    <View style="@style/pop_top_line_style"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
    <View style="@style/pop_bottom_line_style"/>
    <include layout="@layout/layout_pop_bottom_btn"/>
</LinearLayout>
