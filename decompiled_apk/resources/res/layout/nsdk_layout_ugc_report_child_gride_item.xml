<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/navi_dimens_5dp"
    android:paddingBottom="@dimen/navi_dimens_17dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ugc_report_child_iview"
        android:layout_width="@dimen/navi_dimens_60dp"
        android:layout_height="@dimen/navi_dimens_60dp"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="@dimen/navi_dimens_13dp"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ugc_report_child_tview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_6dp"
        android:text="拥堵"/>
</LinearLayout>
