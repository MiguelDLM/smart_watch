<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/menu_wrap_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/bt_delete_weight_record"
            android:background="@drawable/common_ripple_red"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_delete"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/ll_item_panel"
        android:background="@drawable/common_ripple_main_bg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp">
            <View
                android:layout_weight="1"
                style="@style/weight_history_divider"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/iv_measure_type"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_measure_scale"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium
                            android:textSize="15sp"
                            android:textColor="@color/line_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"/>
                        <com.sma.smartv3.view.text.DINCondBold
                            android:textSize="20sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/tv_weightValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="21.11%"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium
                            android:textSize="15sp"
                            android:textColor="@color/line_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bfr"/>
                        <com.sma.smartv3.view.text.DINCondBold
                            android:textSize="20sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/tv_bfrValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="21.11%"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFMedium
                            android:textSize="15sp"
                            android:textColor="@color/line_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bmi"/>
                        <com.sma.smartv3.view.text.DINCondBold
                            android:textSize="20sp"
                            android:textColor="@color/text_color"
                            android:id="@+id/tv_bmiValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="21.11"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_measure_item_right"
                    android:visibility="invisible"
                    style="@style/weight_report_item_right_iv_style"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
