<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <View
        android:id="@+id/divider"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nsdk_route_result_taxi_ic"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="16dp"
        android:textColor="#333333"
        android:gravity="center"
        android:id="@+id/tv"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/iv"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/nsdk_color_route_detail_to_taxi_btn_selector"
        android:gravity="center"
        android:id="@+id/to_taxi"
        android:background="@drawable/nsdk_bg_route_detail_to_taxi_selector"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:text="去打车"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
