<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="97dp"
    android:layout_height="97dp"
    android:layout_marginStart="9dp">
    <View
        android:id="@+id/speed_view_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/round_bg"
        android:background="@drawable/nsdk_smart_traffic_speed_bg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.baidu.navisdk.ui.routeguide.mapmode.subview.RGMMRotatingSpeedView
        android:id="@+id/speed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:green_light_speed_circle_bg="@drawable/nsdk_green_light_normal_speed_circle_bg"
        app:green_light_speed_oval_bg="@drawable/nsdk_green_light_normal_speed_oval_bg"
        app:green_light_speed_unit_text="km/h"
        app:layout_constraintBottom_toBottomOf="@+id/round_bg"
        app:layout_constraintLeft_toLeftOf="@+id/round_bg"
        app:layout_constraintRight_toRightOf="@+id/round_bg"
        app:layout_constraintTop_toTopOf="@+id/round_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
