<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sma.smartv3.view.text.PFMedium
        android:textColor="@color/line_color"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/app_store_title_tip_1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <com.sma.smartv3.view.text.PFMedium
        android:textColor="@color/line_color"
        android:id="@+id/storage_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/app_store_empty_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/app_store_empty"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/no_application"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="18dp"
            android:textColor="@color/line_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/no_application_tip"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
