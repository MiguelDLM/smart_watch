<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_info_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_info_tip"
        android:layout_width="@dimen/navi_dimens_5dp"
        android:layout_height="@dimen/navi_dimens_5dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/navi_dimens_10dp"/>
    <TextView
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColor="#333333"
        android:id="@+id/item_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总重"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/navi_dimens_10dp"
        android:layout_toEndOf="@+id/item_info_tip"/>
    <EditText
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColor="#333333"
        android:id="@+id/item_info_edit_text"
        android:background="#00ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0 ~ 100"
        android:layout_centerVertical="true"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@drawable/bnav_bg_edit_cursor_drawable"
        android:layout_marginStart="@dimen/navi_dimens_80dp"/>
    <TextView
        android:textSize="@dimen/navi_dimens_14dp"
        android:id="@+id/item_info_tip_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/navi_dimens_80dp"/>
    <TextView
        android:textSize="@dimen/navi_dimens_13dp"
        android:textColor="#333333"
        android:id="@+id/item_info_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吨"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/navi_dimens_130dp"/>
    <ImageView
        android:id="@+id/item_info_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nsdk_drawable_plate_list_right_arrow"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/navi_dimens_10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
