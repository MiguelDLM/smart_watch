<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rv"
    android:background="@color/view_page_main_bg"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:background="@drawable/common_ripple_borderless"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back"
                android:onClick="backClick"/>
            <LinearLayout
                android:id="@+id/llGetVerificationCode"
                style="@style/reset_password_ll_style">
                <com.sma.smartv3.view.text.PFMedium
                    android:text="@string/enter_confirmation_code"
                    style="@style/reset_password_ll_top_desc_style"/>
                <RelativeLayout
                    android:layout_marginTop="80dp"
                    style="@style/edittext_rl">
                    <View style="@style/edittext_bottom_line"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="@string/input_email"
                        style="@style/reset_password_ll_one_style">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email"
                            android:maxLines="1"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionNext"
                            style="@style/reset_password_ll_one_et_style"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <LinearLayout style="@style/reset_password_ll_one_ll_style">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        style="@style/edittext_rl">
                        <View style="@style/edittext_bottom_line"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/verification_code"
                            style="@style/reset_password_ll_til">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/verificationCode"
                                android:maxLines="1"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                style="@style/reset_password_ll_one_et_style"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                    <Button
                        android:id="@+id/btGetVerificationCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/get"
                        android:layout_weight="1"
                        android:onClick="getVerificationCode"
                        android:layout_marginStart="20dp"
                        style="@style/btn_common"/>
                </LinearLayout>
                <LinearLayout style="@style/reset_password_ll_bt_style">
                    <Button
                        android:id="@+id/btn_nextStep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/next"
                        android:onClick="nextStep"
                        style="@style/bottom_btn"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSetNewPassword"
                style="@style/reset_password_ll_style">
                <com.sma.smartv3.view.text.PFMedium
                    android:text="@string/set_new_password"
                    style="@style/reset_password_ll_top_desc_style"/>
                <RelativeLayout
                    android:layout_marginTop="80dp"
                    style="@style/edittext_rl">
                    <View style="@style/edittext_bottom_line"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="@string/new_password"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorAccent"
                        style="@style/reset_password_ll_one_style">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/newPassword"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:imeOptions="actionNext"
                            style="@style/reset_password_ll_one_et_style"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="40dp"
                    style="@style/edittext_rl">
                    <View style="@style/edittext_bottom_line"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="@string/enter_the_new_password_again"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorAccent"
                        style="@style/reset_password_ll_one_style">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/newPasswordAgain"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:imeOptions="actionDone"
                            style="@style/reset_password_ll_one_et_style"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/line_color"
                    android:id="@+id/resetPasswordTip"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_password_tip"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>
                <LinearLayout style="@style/reset_password_ll_bt_style">
                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm"
                        android:onClick="confirm"
                        style="@style/bottom_btn"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
