<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/charge_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/charge_list_item_detail_container"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">
        <TextView
            android:textSize="16dp"
            android:textColor="#ff11141a"
            android:ellipsize="end"
            android:id="@+id/charge_list_info_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国家电网充电站(津京唐高速)"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="60dp"/>
        <ImageView
            android:id="@+id/charge_list_add_approach_img"
            android:background="@drawable/nsdk_energy_charge_approach_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="1dp"
            android:layout_alignBottom="@+id/charge_list_info_location"
            android:layout_alignParentEnd="true"/>
        <com.baidu.navisdk.ui.widget.BNFlowLayout
            android:id="@+id/charge_list_info_detail"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/charge_list_info_location"
            android:layout_marginEnd="60dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/charge_list_info_station_container"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/charge_list_info_detail"
            android:layout_marginEnd="60dp"/>
        <com.baidu.navisdk.ui.widget.BNFlowLayout
            android:id="@+id/charge_list_info_cost"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/charge_list_info_station_container"
            android:layout_marginEnd="60dp"/>
        <com.baidu.navisdk.ui.widget.BNFlowLayout
            android:id="@+id/charge_list_info_des"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/charge_list_info_cost"
            android:layout_marginEnd="60dp"
            app:maxRows="1"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/charge_list_go_route_result"
            android:background="@drawable/bnav_charge_navi_route_result"
            android:visibility="visible"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:text="到这去"
            android:includeFontPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
        <RelativeLayout
            android:id="@+id/charge_list_navi_add_node_container"
            android:background="@drawable/bnav_charge_navi_normal_bg"
            android:visibility="gone"
            android:layout_width="71dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:textSize="12dp"
                android:textColor="#ff1fcca1"
                android:gravity="center_vertical"
                android:id="@+id/charge_list_navi_add_node"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="途经点"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/nsdk_energy_charge_approach_img"
                android:drawablePadding="2dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/charge_list_divider"
        android:background="#1a7a8199"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/charge_list_item_detail_container"/>
</RelativeLayout>
