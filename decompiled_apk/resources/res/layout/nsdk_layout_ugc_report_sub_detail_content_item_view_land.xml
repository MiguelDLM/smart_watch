<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/navi_dimens_13dp"
            android:textColor="#ee2c2c"
            android:id="@+id/ugc_sub_detail_falg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navi_dimens_18dp"
            android:text="*"/>
        <TextView
            android:textSize="@dimen/navi_dimens_12dp"
            android:textColor="#333333"
            android:id="@+id/ugc_sub_lane_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navi_dimens_25dp"
            android:layout_marginRight="@dimen/navi_dimens_25dp"
            android:text="车道信息"
            android:singleLine="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ugc_report_sub_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_25dp"
        android:layout_marginTop="@dimen/navi_dimens_8dp"
        android:layout_marginRight="@dimen/navi_dimens_25dp"
        android:layout_marginBottom="@dimen/navi_dimens_8dp"/>
</LinearLayout>
