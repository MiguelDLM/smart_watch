<?xml version="1.0" encoding="utf-8"?>
<com.huawei.hms.ads.nativead.NativeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/adp_huawei_native_medium_view"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:id="@+id/adp_huawei_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huawei.hms.ads.nativead.MediaView
            android:id="@+id/adp_huawei_ad_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/adp_huawei_left_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adp_huawei_ad_media">
            <TextView
                android:textSize="16sp"
                android:textColor="#000000"
                android:id="@+id/adp_huawei_ad_title"
                android:layout_width="180dp"
                android:layout_height="19dp"
                android:layout_marginTop="16dp"
                android:alpha="1"
                android:layout_marginStart="10dp"/>
            <TextView
                android:textColor="#666666"
                android:id="@+id/adp_huawei_ad_source"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:maxWidth="158dp"
                android:layout_below="@+id/adp_huawei_ad_title"
                android:layout_marginStart="10dp"/>
            <TextView
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/adp_huawei_ad_flag"
                android:background="@drawable/adp_huawei_native_flag_rounded_corners_shape"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:layout_marginTop="12dp"
                android:text="@string/adp_huawei_ad_flag"
                android:layout_below="@+id/adp_huawei_ad_title"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/adp_huawei_ad_source"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/adp_huawei_right_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adp_huawei_ad_media"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="95dp"
                android:layout_height="26dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true">
                <Button
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:id="@+id/adp_huawei_ad_call_to_action"
                    android:background="@drawable/adp_huawei_native_button_rounded_corners_shape"
                    android:visibility="gone"
                    android:layout_width="72dp"
                    android:layout_height="26dp"/>
                <ImageView
                    android:id="@+id/ads_huawei_close"
                    android:background="@drawable/adp_ad_close"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.huawei.hms.ads.nativead.NativeView>
