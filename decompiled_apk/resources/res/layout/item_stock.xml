<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/menu_wrap_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/ll_item_panel"
        android:layout_alignBottom="@+id/ll_item_panel">
        <ImageButton
            android:id="@+id/bt_delete"
            android:background="@drawable/common_ripple_red"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_item_panel"
        android:background="@color/view_page_main_bg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View style="@style/h_divider_gray2_margin22"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="20dp"
            android:textColor="@drawable/selector_text_color_white_gray8a"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Apple Inc"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_exchange"
                android:background="@drawable/shape_stock_exchange"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16dp"
                android:textColor="@drawable/selector_text_color_white_gray8a"
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAPL"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16dp"
                android:textColor="@drawable/selector_text_color_white_gray8a"
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="155.35"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16dp"
                android:textColor="@drawable/selector_text_color_white_gray8a"
                android:id="@+id/tv_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.31"
                android:layout_centerHorizontal="true"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16dp"
                android:textColor="@drawable/selector_text_color_white_gray8a"
                android:id="@+id/tv_change_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.50%"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"/>
            <ImageView
                android:id="@+id/iv_change_percent"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_stock_rise"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_name"
            style="@style/h_divider_gray2_margin22"/>
    </LinearLayout>
</RelativeLayout>
