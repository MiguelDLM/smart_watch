<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="@dimen/navi_dimens_48dp"
        android:layout_height="@dimen/navi_dimens_48dp">
        <TextView
            android:textSize="@dimen/navi_dimens_12dp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/route_search_filter_brand_button"
            android:layout_width="@dimen/navi_dimens_30dp"
            android:layout_height="@dimen/navi_dimens_48dp"
            android:text="中国银行"/>
    </FrameLayout>
    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/route_search_filter_brand_split_line"
        android:background="#e9e9e9"
        android:layout_width="0.5dp"
        android:layout_height="@dimen/navi_dimens_32dp"/>
</LinearLayout>
