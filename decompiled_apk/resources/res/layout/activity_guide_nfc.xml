<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <com.sma.smartv3.view.text.PFMedium
                android:text="@string/nfc_tip_title"
                style="@style/qrcode_sycn_tip"/>
            <com.sma.smartv3.view.text.PFMedium
                android:layout_marginTop="10dp"
                android:text="@string/nfc_title1"
                style="@style/qrcode_sycn_tip"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/nfc_pic_1"/>
            <com.sma.smartv3.view.text.PFMedium
                android:text="@string/nfc_title2"
                style="@style/qrcode_sycn_tip"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/nfc_pic_2"/>
            <com.sma.smartv3.view.text.PFMedium
                android:text="@string/nfc_title3"
                style="@style/qrcode_sycn_tip"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@drawable/nfc_pic_3"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
