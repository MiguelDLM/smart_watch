<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="19dp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginLeft="35dp"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@+id/check_box"/>
    <ImageView
        android:id="@+id/iv"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/tv"
        android:layout_alignBottom="@+id/tv"/>
    <TextView
        android:textSize="12dp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/sub_tv"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@+id/check_box"
        android:layout_below="@+id/tv"
        android:layout_alignLeft="@+id/tv"/>
    <CheckBox
        android:textSize="12dp"
        android:textColor="#3385ff"
        android:id="@+id/check_box"
        android:background="@drawable/nsdk_route_result_idss_checkbox_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:text="电车"
        android:drawableRight="@drawable/nsdk_route_result_idss_checkbox_selector"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="13dp"
        android:textColor="#333333"
        android:gravity="center_vertical"
        android:id="@+id/jump_btn"
        android:paddingLeft="8dp"
        android:paddingRight="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="查看全部"
        android:includeFontPadding="false"
        android:drawableRight="@drawable/nsdk_drawable_card_button_head_right_arrow"
        android:layout_alignParentRight="true"/>
</merge>
