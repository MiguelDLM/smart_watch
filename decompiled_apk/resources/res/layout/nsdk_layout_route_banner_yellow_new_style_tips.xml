<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="58dp">
    <RelativeLayout
        android:id="@+id/yellow_tips_head"
        android:layout_width="49dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="11dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/yellow_tips_notice"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:maxWidth="37dp"
            android:minWidth="35dp"
            android:minHeight="43dp"
            android:text="提示"
            android:singleLine="false"
            android:drawableTop="@drawable/bnav_route_banner_yellow_tips_notice"/>
        <TextView
            android:textSize="8dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/yellow_tips_notice_label"
            android:background="@drawable/yellow_tips_notice_label_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/yellow_banner_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_weight="1">
        <TextView
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/yellow_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:ellipsize="end"
            android:id="@+id/yellow_tips_sub_title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <Button
        android:textSize="11dp"
        android:textColor="@android:color/white"
        android:ellipsize="none"
        android:layout_gravity="center_vertical"
        android:id="@+id/yellow_tips_btn"
        android:background="@drawable/nsdk_route_result_yellow_bar_btn_bg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="8dp"
        android:maxWidth="70dp"
        android:minWidth="40dp"
        android:singleLine="true"/>
    <View
        android:layout_gravity="center_vertical"
        android:id="@+id/yellow_tips_close_divider"
        android:background="@android:color/white"
        android:visibility="gone"
        android:layout_width="1px"
        android:layout_height="10dp"
        android:layout_marginLeft="6dp"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/yellow_tips_close_iv"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bnav_route_banner_yellow_tips_close_white"
        android:scaleType="centerInside"/>
</LinearLayout>
