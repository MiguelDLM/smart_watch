<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="25sp"
                android:textColor="@color/text_color"
                android:id="@+id/tv_greet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="70dp"
                android:text="@string/greet_good_morning"
                android:layout_centerHorizontal="true"/>
            <FrameLayout
                android:id="@+id/measure_panel"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/tv_greet"
                android:layout_centerHorizontal="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_weight_measure"
                    android:background="@drawable/weight_measure_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_weight_measure_info"
                    android:background="@drawable/weight_measure_info_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.sma.smartv3.view.text.DINCondBold
                        android:textSize="55sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/tv_weightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="56.3"
                        android:layout_centerInParent="true"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:textSize="18sp"
                        android:textColor="@color/line_color"
                        android:id="@+id/tv_weightUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/kg"
                        android:layout_below="@+id/tv_weightValue"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </FrameLayout>
            <Button
                android:id="@+id/btn_measure_weight"
                android:layout_marginTop="30dp"
                android:text="@string/btn_weigh"
                android:layout_below="@+id/measure_panel"
                android:layout_centerHorizontal="true"
                style="@style/btn_measure_weight"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="25sp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:id="@+id/tv_measure_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="@string/measure_connected_tip"
                android:layout_below="@+id/btn_measure_weight"
                android:layout_centerHorizontal="true"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/line_color"
                android:gravity="center"
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measure_tip"
                android:layout_below="@+id/tv_measure_tip"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
