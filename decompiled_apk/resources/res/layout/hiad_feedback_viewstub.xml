<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/hiad_4_dp"
    android:paddingEnd="@dimen/hiad_4_dp">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/complain_extra_area"
        android:background="@drawable/hiad_feedback_view_row"
        android:paddingBottom="@dimen/hiad_12_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/hiad_12_dp"
        android:paddingEnd="@dimen/hiad_12_dp">
        <View
            android:id="@+id/complain_line"
            android:background="@color/hiad_10_percent_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hiad_1_px"/>
        <ImageView
            android:id="@+id/complain_icon"
            android:layout_width="@dimen/hiad_16_dp"
            android:layout_height="@dimen/hiad_16_dp"
            android:layout_marginTop="@dimen/hiad_12_dp"
            android:src="@drawable/hiad_complain_icon"
            android:layout_below="@+id/complain_line"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/hiad_14_dp"
            android:textColor="@color/hiad_feedback_text"
            android:ellipsize="end"
            android:id="@+id/complain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hiad_12_dp"
            android:maxLines="2"
            android:layout_below="@+id/complain_line"
            android:fontFamily="HwChinese-medium"
            android:layout_marginStart="@dimen/hiad_12_dp"
            android:layout_marginEnd="@dimen/hiad_20_dp"
            android:layout_toEndOf="@+id/complain_icon"/>
        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/hiad_12_dp"
            android:layout_height="@dimen/hiad_24_dp"
            android:src="@drawable/hiad_feedback_right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/dsa_extra_area"
        android:background="@drawable/hiad_feedback_view_row"
        android:paddingBottom="@dimen/hiad_12_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/hiad_12_dp"
        android:paddingEnd="@dimen/hiad_12_dp">
        <View
            android:id="@+id/dsa_line"
            android:background="@color/hiad_10_percent_black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hiad_1_px"/>
        <ImageView
            android:id="@+id/dsa_icon"
            android:layout_width="@dimen/hiad_16_dp"
            android:layout_height="@dimen/hiad_16_dp"
            android:layout_marginTop="@dimen/hiad_12_dp"
            android:src="@drawable/hiad_dsa_icon"
            android:layout_below="@+id/dsa_line"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="@dimen/hiad_14_dp"
            android:textColor="@color/hiad_feedback_text"
            android:ellipsize="end"
            android:id="@+id/dsa_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hiad_12_dp"
            android:text="@string/hiad_choices_whythisad"
            android:maxLines="2"
            android:layout_below="@+id/dsa_line"
            android:fontFamily="HwChinese-medium"
            android:layout_marginStart="@dimen/hiad_12_dp"
            android:layout_marginEnd="@dimen/hiad_20_dp"
            android:layout_toEndOf="@+id/dsa_icon"/>
        <ImageView
            android:id="@+id/dsa_right_arrow"
            android:layout_width="@dimen/hiad_12_dp"
            android:layout_height="@dimen/hiad_24_dp"
            android:src="@drawable/hiad_feedback_right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
