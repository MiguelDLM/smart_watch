<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/energy_type_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColor="#333333"
        android:id="@+id/displacement_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="排量"
        android:layout_centerVertical="true"/>
    <EditText
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:id="@+id/plate_edit_placement"
        android:background="#00ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_81dp"
        android:hint="请输入排量"
        android:maxLines="1"
        android:maxLength="5"
        android:digits="0123456789"
        android:layout_centerVertical="true"
        android:inputType="number"/>
    <TextView
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColor="#333333"
        android:id="@+id/plate_placement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_15dp"
        android:text="CC"
        android:layout_toRightOf="@+id/plate_edit_placement"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="@dimen/navi_dimens_12dp"
        android:textColor="#ff5956"
        android:gravity="center"
        android:id="@+id/displacement_tip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_10dp"
        android:layout_toRightOf="@+id/plate_placement"
        android:layout_centerVertical="true"/>
</RelativeLayout>
