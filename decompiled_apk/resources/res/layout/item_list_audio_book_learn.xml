<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/item_layout_book_learn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:minWidth="100dp"
            android:minHeight="100dp"/>
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/list_item_choose_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/audio_book_unchoose_icon"
            android:layout_marginEnd="10dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="end|bottom"
            android:id="@+id/audio_book_file_size"
            android:background="@color/audio_book_tv_bg_color"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50KB"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="12dp"
            android:textColor="@color/white"
            android:id="@+id/audio_book_file_top_tip"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </FrameLayout>
    <com.sma.smartv3.view.text.PFMedium
        android:textSize="14dp"
        android:textColor="@color/text_color"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:text="name"
        android:maxLines="1"/>
</LinearLayout>
