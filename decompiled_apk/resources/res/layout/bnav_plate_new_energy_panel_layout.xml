<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_energy_plate_input_container"
    android:background="@drawable/bnav_bg_attribution_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/plate_btn_close_layout"
        android:layout_width="@dimen/navi_dimens_40dp"
        android:layout_height="19dp"
        android:layout_marginTop="@dimen/navi_dimens_27dp"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="@dimen/navi_dimens_11dp"
            android:layout_height="@dimen/navi_dimens_11dp"
            android:src="@drawable/bnav_plate_limit_setting_close"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/navi_dimens_19dp"/>
    </RelativeLayout>
    <TextView
        android:textSize="19dp"
        android:textColor="#222222"
        android:gravity="center"
        android:id="@+id/plate_input_main_panel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_27dp"
        android:text="添加车辆，获取专属导航服务"
        android:includeFontPadding="false"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="@dimen/navi_dimens_20dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/plate_input_main_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plate_input_main_panel_title">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/plate_layout"
            android:paddingTop="@dimen/navi_dimens_17dp"
            android:paddingBottom="@dimen/navi_dimens_25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/navi_dimens_20dp"
            android:paddingEnd="@dimen/navi_dimens_20dp">
            <include
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_68dp"
                layout="@layout/nsdk_layout_energy_tip_layout"/>
            <com.baidu.navisdk.module.plate.layout.NewEnergyPlateLayout
                android:id="@+id/nsdk_car_plate_layout"
                android:background="@color/nsdk_white_color"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/navi_dimens_4dp"/>
            <View
                android:id="@+id/divider1"
                android:background="#ffeeeeee"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <com.baidu.navisdk.module.plate.layout.EnergyTypeInfoLayout
                android:id="@+id/energy_type_info_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_50dp"/>
            <View
                android:id="@+id/divider2"
                android:background="#ffeeeeee"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <com.baidu.navisdk.module.plate.layout.EnergyMileageLayout
                android:id="@+id/energy_mileage_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_50dp"/>
            <View
                android:background="#ffeeeeee"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:gravity="end|center_vertical"
                android:id="@+id/energy_mileage_delete_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_24dp"
                android:layout_marginTop="@dimen/navi_dimens_16dp">
                <TextView
                    android:textSize="13dp"
                    android:textColor="#ff999999"
                    android:id="@+id/energy_mileage_delete_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除此车辆"
                    android:drawableLeft="@drawable/nsdk_drawable_mileage_plate_delete"
                    android:drawablePadding="@dimen/navi_dimens_7dp"/>
                <TextView
                    android:textSize="13dp"
                    android:textColor="#ff00be9b"
                    android:gravity="center"
                    android:id="@+id/energy_mileage_delete_confirm"
                    android:background="@drawable/nsdk_new_energy_delete_confirm_bg"
                    android:visibility="gone"
                    android:layout_width="@dimen/navi_dimens_64dp"
                    android:layout_height="wrap_content"
                    android:text="确定删除"
                    android:layout_marginStart="@dimen/navi_dimens_6dp"
                    android:layout_toEndOf="@+id/energy_mileage_delete_plate"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="@drawable/bnav_plate_complete_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_7dp"
            android:layout_above="@+id/complete_btn_layout"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/complete_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_69dp"
            android:layout_below="@+id/plate_layout"
            android:paddingStart="@dimen/navi_dimens_19dp"
            android:paddingEnd="@dimen/navi_dimens_19dp">
            <include layout="@layout/bnav_plate_input_energy_complete_btn_layout"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.baidu.navisdk.module.plate.view.PlateAttributionView
        android:id="@+id/energy_attribution_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plate_input_main_panel"/>
</RelativeLayout>
