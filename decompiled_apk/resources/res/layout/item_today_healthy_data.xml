<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="-8dp"
        android:layout_alignTop="@+id/item_today_healthy_data_layout"
        android:layout_alignBottom="@+id/item_today_healthy_data_layout">
        <View
            android:id="@+id/today_healthy_data_top_view"
            android:background="@color/colorAccent"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="-7dp"
            android:src="@drawable/today_healthy_data_icon"
            app:tint="@color/colorAccent"/>
        <View
            android:id="@+id/today_healthy_data_btn_view"
            android:background="@color/colorAccent"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/item_today_healthy_data_layout"
        android:background="@drawable/radius_10_background"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/today_healthy_item_bg">
        <com.sma.smartv3.view.text.PFMedium
            android:textColor="@color/line_color"
            android:id="@+id/item_today_healthy_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/item_today_healthy_data_time"
            android:layout_marginStart="6dp">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:id="@+id/item_today_healthy_data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:id="@+id/item_today_healthy_data_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/item_today_healthy_data_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
