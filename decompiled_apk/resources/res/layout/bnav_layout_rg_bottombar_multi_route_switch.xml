<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/bnav_rg_toolbox_resume_switch_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:id="@+id/bnav_rg_toolbox_resume_tv"
        android:clickable="true"
        android:layout_width="@dimen/navi_dimens_0dp"
        android:layout_height="@dimen/nsdk_rg_button_height"
        android:text="@string/nsdk_string_rg_resume_navigator"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/navi_dimens_8dp"
        style="@style/NsdkRGGrayBtnStyle"/>
    <TextView
        android:gravity="center"
        android:id="@+id/bnav_rg_toolbox_switch_route_tv"
        android:clickable="true"
        android:layout_width="@dimen/navi_dimens_0dp"
        android:layout_height="@dimen/nsdk_rg_button_height"
        android:text="@string/nsdk_string_rg_switch_navigator"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/navi_dimens_10dp"
        android:layout_marginEnd="@dimen/navi_dimens_8dp"
        style="@style/NsdkRGBlueBtnStyle"/>
</LinearLayout>
