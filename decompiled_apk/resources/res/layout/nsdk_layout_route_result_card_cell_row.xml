<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="right"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/left_area"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginRight="9dp">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/head_image"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:textSize="19dp"
                android:textColor="#333333"
                android:gravity="center"
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <TextView
            android:textSize="@dimen/navi_dimens_12dp"
            android:textColor="#333333"
            android:id="@+id/head_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.baidu.navisdk.module.routeresultbase.view.template.cell.row.CardRowRightCell
            android:id="@+id/right_area"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.baidu.navisdk.module.routeresultbase.view.template.cell.row.CardRowRightCell2
            android:id="@+id/right_area_style2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</merge>
