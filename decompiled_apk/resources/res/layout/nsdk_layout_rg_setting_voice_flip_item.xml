<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bn_voice_flip_icon"
        android:layout_width="@dimen/navi_dimens_48dp"
        android:layout_height="@dimen/navi_dimens_48dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/bnav_v_img_text_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textSize="@dimen/navi_dimens_13dp"
        android:textColor="@color/bnav_rp_tc_title_scheme_name"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/bn_voice_flip_title"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
</LinearLayout>
