<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View style="@style/h_divider_gray2_margin22"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="16sp"
            android:textColor="@drawable/selector_text_color_white_gray8a"
            android:id="@+id/tv_title"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/check_enabled"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_enabled"
            android:padding="16dp"
            android:clickable="false"
            android:checked="true"
            android:layout_alignParentEnd="true"
            style="@style/abh_checkbox"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="12sp"
            android:textColor="@color/line_color"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/check_enabled"
            android:layout_marginStart="22dp"
            android:layout_toStartOf="@+id/check_enabled"/>
    </RelativeLayout>
    <View style="@style/h_divider_gray2_margin22"/>
</LinearLayout>
