<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:id="@+id/menu_wrap_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/bt_delete_sport_record"
            android:background="@drawable/common_ripple_red"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_item_panel"
        android:background="@drawable/common_ripple"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp">
            <include layout="@layout/layout_sport_record_item"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/wrap_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
