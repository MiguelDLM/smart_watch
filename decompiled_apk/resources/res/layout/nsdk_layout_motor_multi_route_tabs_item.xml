<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/route_tab_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="19dp"
            android:textColor="@color/nsdk_route_result_tab_time_selector"
            android:ellipsize="end"
            android:id="@+id/route_tab_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/route_tab_item_tag"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nsdk_drawable_tab_right_top"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/bottom_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/nsdk_color_route_result_tab_traffic_info_selector"
            android:gravity="center"
            android:id="@+id/route_tab_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:includeFontPadding="false"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/nsdk_color_route_result_tab_traffic_info_selector"
            android:gravity="center"
            android:id="@+id/route_tab_item_traffic_light"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:drawableLeft="@drawable/nsdk_ic_route_result_traffic_light_selector"
            android:drawablePadding="1dp"
            android:layout_below="@+id/time"/>
        <TextView
            android:textSize="12dp"
            android:textColor="@color/nsdk_color_route_result_tab_traffic_info_selector"
            android:gravity="center_horizontal"
            android:id="@+id/route_tab_item_tolls"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:drawableLeft="@drawable/nsdk_ic_route_result_road_toll_selector"
            android:drawablePadding="1dp"
            android:layout_below="@+id/time"/>
    </LinearLayout>
    <com.baidu.navisdk.ui.widget.BNHorizontalForbidScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/route_tab_item_describe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </com.baidu.navisdk.ui.widget.BNHorizontalForbidScrollView>
</merge>
