<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/sport_detail_style">
    <FrameLayout
        android:id="@+id/mapView_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/bMapView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.sma.smartv3.view.CustomGoogleMapView
            android:id="@+id/gMapView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="end"
            android:orientation="vertical"
            android:id="@+id/check_layout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:paddingEnd="5dp">
            <CheckBox
                android:id="@+id/downloadGpxIb"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/icon_gpx_v2"/>
            <CheckBox
                android:id="@+id/btn_map_hot"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_map_hot_v2"/>
            <CheckBox
                android:id="@+id/btn_map_3d"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_map_3d_v2"/>
            <CheckBox
                android:id="@+id/btn_map_mark"
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:button="@drawable/selector_map_mark_v2"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <com.sma.smartv3.view.ImageViewRound
            android:id="@+id/iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pic_avatar_default"
            app:borderColor="@color/colorAccent"
            app:borderWidth="1dp"
            app:isCustomize="true"
            app:type="linear"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/edt_nickname"
            style="@style/sport_detail_item_name"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/tv_dateTime"
            style="@style/sport_detail_item_name"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/shape_video_btn_bg"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.sma.smartv3.view.text.DINCondBold
            android:textSize="20sp"
            android:textColor="@color/white"
            android:id="@+id/tv_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/tv_distance_value_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_name">
            <com.sma.smartv3.view.text.DINCondBold
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/tv_distance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_centerVertical="true"/>
            <com.sma.smartv3.view.text.DINCondBold
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/tv_distance_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/km_capital"
                android:layout_below="@+id/tv_detail_name"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/hrLineChart"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:id="@+id/share_video_map_btn_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_distance_value_ll">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/white"
                    android:id="@+id/tv_duration"
                    android:text="00.00.00"
                    style="@style/sport_detail_item_value"/>
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/white"
                    android:text="@string/use_time"
                    style="@style/sport_detail_item_name"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/white"
                    android:id="@+id/tv_calories_value"
                    android:text="276"
                    style="@style/sport_detail_item_value"/>
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/white"
                    android:text="@string/kcal_video"
                    style="@style/sport_detail_item_unit_right"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="2">
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/white"
                    android:id="@+id/tv_hr_value"
                    android:text="286"
                    style="@style/sport_detail_item_value"/>
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/white"
                    android:text="@string/ave_hr"
                    style="@style/sport_detail_item_name"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/share_video_map_btn_ll"
            android:layout_alignParentRight="true">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="@string/app_name"
                style="@style/sport_detail_item_value"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
        <Button
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:id="@+id/share_video_save_btn"
            android:background="@drawable/selector_btn_play"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="@string/share"
            android:layout_below="@+id/share_video_map_btn_ll"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>
    </RelativeLayout>
    <Button
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:id="@+id/btn_track_play"
        android:background="@drawable/share_video_play"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_sport_detail_top_bg_v2"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true">
        <com.sma.smartv3.view.text.PFMedium
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/km"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="@style/sport_detail_item_name"/>
        <com.sma.smartv3.view.text.PFMedium
            android:id="@+id/tv_avg_bpm_value"
            android:visibility="gone"
            android:text="120"
            style="@style/sport_detail_item_value"/>
    </LinearLayout>
</RelativeLayout>
