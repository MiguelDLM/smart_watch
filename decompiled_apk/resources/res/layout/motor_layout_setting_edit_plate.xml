<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/motor_edit_plate_layout"
    android:paddingLeft="@dimen/navi_dimens_16dp"
    android:paddingRight="@dimen/navi_dimens_6dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/motor_setting_plate_layout_height">
    <ImageView
        android:id="@+id/motor_edit_plate_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/motor_plate_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_8dp"
        android:layout_toRightOf="@+id/motor_edit_plate_img"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="@dimen/navi_dimens_22dp"
            android:textStyle="bold"
            android:textColor="@color/nsdk_cl_text_a"
            android:id="@+id/motor_edit_plate_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/motor_edit_plate_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/motor_add_plate_avoid_limit"
            android:maxLines="1"
            style="@style/MotorSettingItemTipsText"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/motor_edit_plate_edit_img"
        android:paddingLeft="@dimen/navi_dimens_10dp"
        android:paddingTop="@dimen/navi_dimens_15dp"
        android:paddingRight="@dimen/navi_dimens_10dp"
        android:paddingBottom="@dimen/navi_dimens_15dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/motor_icon_plate_edit"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</merge>
