<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/nsdk_future_trip_main_panel_item_width"
    android:layout_height="@dimen/navi_dimens_33dp">
    <ImageView
        android:background="@drawable/nsdk_drawable_rr_eta_select_time_bg"
        android:visibility="gone"
        android:layout_width="@dimen/navi_dimens_52dp"
        android:layout_height="@dimen/navi_dimens_33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/navi_dimens_12dp"
        android:textColor="#3385ff"
        android:ellipsize="none"
        android:gravity="center"
        android:id="@+id/time_tx"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
