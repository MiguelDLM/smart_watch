<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <LinearLayout
        android:id="@+id/menu_wrap_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/bt_delete_sport_record"
            android:background="@drawable/common_ripple_red"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_delete"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@color/view_page_secondary_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="22sp"
            android:textColor="@color/text_color"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:text="张三"
            android:layout_marginStart="22dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13012345678"
            android:layout_below="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"/>
        <View
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_number"
            android:layout_marginEnd="1dp"
            style="@style/h_divider_gray2_margin22"/>
    </RelativeLayout>
</RelativeLayout>
