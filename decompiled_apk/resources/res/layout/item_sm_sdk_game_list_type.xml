<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/sm_sdk_px_13">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sm_sdk_px_16"
            android:textStyle="bold"
            android:textColor="#ff1e2029"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sm_sdk_px_11"/>
        <TextView
            android:textSize="@dimen/sm_sdk_px_12"
            android:textColor="#6f6f6f"
            android:layout_gravity="center"
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/sm_sdk_px_22"
            android:text="更多"
            android:drawableRight="@drawable/more_icon"
            android:drawablePadding="@dimen/sm_sdk_px_7"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
