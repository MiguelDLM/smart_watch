<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/label_line"
        android:background="#e9eaf0"
        android:visibility="gone"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/label_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/label_line">
        <ImageView
            android:id="@+id/label_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="1.5dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/label_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BNMultiTabLabel"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/label_layout2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/label_layout1">
        <TextView
            android:textStyle="bold"
            android:id="@+id/label_partA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BNMultiTabLabel"/>
        <TextView
            android:id="@+id/label_partB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BNMultiTabLabel"/>
    </LinearLayout>
</merge>
