<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">
    <LinearLayout
        android:id="@+id/menu_wrap_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/ll_item_panel"
        android:layout_alignBottom="@+id/ll_item_panel">
        <ImageButton
            android:id="@+id/bt_delete_record"
            android:background="@drawable/common_ripple_red_order"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_item_panel"
        android:background="@drawable/pop_top_bg"
        android:paddingLeft="22dp"
        android:paddingTop="10dp"
        android:paddingRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.sma.smartv3.view.text.PFMedium
                android:textColor="@color/line_color"
                android:id="@+id/order_integral_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textColor="@color/text_color"
                android:gravity="right"
                android:id="@+id/order_integral_pay_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/order_integral_img"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="20dp"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.sma.smartv3.view.text.PFMedium
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:id="@+id/order_integral_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:textSize="16sp"
                        android:textColor="@color/order_text_orange"
                        android:gravity="right"
                        android:id="@+id/order_integral_remark"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/line_color"
                    android:id="@+id/order_integral_orderNum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/order_orderNum"/>
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/line_color"
                    android:id="@+id/order_integral_orderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
