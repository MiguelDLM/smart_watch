<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sm_sdk_px_50">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_back"
            android:layout_width="@dimen/sm_sdk_px_36"
            android:layout_height="@dimen/sm_sdk_px_36"
            android:layout_marginLeft="@dimen/sm_sdk_px_10"
            android:src="@drawable/back_icon"/>
        <TextView
            android:textSize="@dimen/sm_sdk_px_18"
            android:textStyle="bold"
            android:textColor="#ff222222"
            android:layout_gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_vip_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm_sdk_px_20"
        android:layout_below="@+id/fl_top"/>
    <TextView
        android:textSize="@dimen/sm_sdk_px_15"
        android:textColor="#ff222222"
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sm_sdk_px_22"
        android:layout_marginTop="@dimen/sm_sdk_px_27"
        android:layout_below="@+id/iv_vip_bg"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_game_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm_sdk_px_7"
        android:layout_below="@+id/tv_sub_title"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
