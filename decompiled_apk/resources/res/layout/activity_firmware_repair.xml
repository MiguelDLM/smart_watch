<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.sma.smartv3.view.DfuProgress
                android:layout_gravity="center_horizontal"
                android:id="@+id/dfu_progress"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/pic_firmware_upgrade"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:gravity="center_horizontal"
                android:id="@+id/tv_tip"
                android:padding="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="16dp"
                style="@style/h_divider_gray2_margin22"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/file_name"/>
            <com.sma.smartv3.view.text.PFBold
                android:textSize="16sp"
                android:textColor="@color/line_color"
                android:gravity="center_horizontal"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"/>
            <View
                android:layout_marginTop="16dp"
                style="@style/h_divider_gray2_margin22"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sma.smartv3.view.text.PFMedium
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/file_size"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"/>
                <com.sma.smartv3.view.text.PFBold
                    android:textSize="16sp"
                    android:textColor="@color/line_color"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"/>
                <View
                    android:layout_marginTop="16dp"
                    style="@style/h_divider_gray2_margin22"/>
            </LinearLayout>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="12sp"
                android:textColor="@color/line_color"
                android:gravity="bottom"
                android:padding="22dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:text="@string/firmware_repair_tip"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
