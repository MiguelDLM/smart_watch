<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plate_limit_setting_recycle_container"
    android:layout_width="@dimen/navi_dimens_155dp"
    android:layout_height="@dimen/navi_dimens_106dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/plate_edit_container"
        android:background="@drawable/bnav_plate_limit_setting_no_select_bg"
        android:paddingTop="@dimen/navi_dimens_10dp"
        android:paddingBottom="@dimen/navi_dimens_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/navi_dimens_10dp"
        android:paddingEnd="@dimen/navi_dimens_10dp">
        <RelativeLayout
            android:id="@+id/plate_btn_edit_layout"
            android:layout_width="@dimen/navi_dimens_30dp"
            android:layout_height="@dimen/navi_dimens_30dp"
            android:layout_marginTop="@dimen/navi_dimens_10dp"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="@+id/plate_title"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/plate_edit_btn"
                android:layout_width="@dimen/navi_dimens_14dp"
                android:layout_height="@dimen/navi_dimens_14dp"
                android:src="@drawable/bnav_plate_limit_setting_edit"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/navi_dimens_14dp"
            android:textColor="#333333"
            android:id="@+id/plate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京A123456"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="@dimen/navi_dimens_10dp"/>
        <TextView
            android:textSize="@dimen/navi_dimens_12dp"
            android:textColor="#ff999999"
            android:id="@+id/plate_title_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="默认车辆"
            android:layout_centerVertical="true"
            app:layout_constraintTop_toBottomOf="@+id/plate_title"/>
        <ImageView
            android:id="@+id/plate_car_type_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bnav_plate_limit_setting_car_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/plate_add_container"
        android:background="@drawable/bnav_plate_limit_setting_no_select_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/plate_edit_add"
            android:layout_width="@dimen/navi_dimens_40dp"
            android:layout_height="@dimen/navi_dimens_40dp"
            android:layout_marginTop="@dimen/navi_dimens_18dp"
            android:src="@drawable/bnav_plate_limit_setting_add"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#ff333333"
            android:id="@+id/plate_add_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_20dp"
            android:layout_marginTop="@dimen/navi_dimens_9dp"
            android:text="添加车辆"
            android:layout_below="@+id/plate_edit_add"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
