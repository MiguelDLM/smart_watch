<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="55dp"
        style="@style/abh_title">
        <ImageView style="@style/abh_title_left"/>
        <com.sma.smartv3.view.text.PFMedium style="@style/abh_title_center"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/bg_white_radius_20"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_left_ear_1"/>
            <TextView
                android:textColor="@color/black"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/dialogue_translation_left_tv"
                android:background="@drawable/dialogue_translation_left_shape"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:onClick="onTranslationLanguage"/>
            <ImageView
                android:id="@+id/img_direction"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_direction_left"/>
            <ImageView
                android:id="@+id/transform_language_img"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_swap_horiz"/>
            <TextView
                android:textColor="@color/black"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/dialogue_translation_right_tv"
                android:background="@drawable/dialogue_translation_right_shape"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:onClick="onTranslationLanguage"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_record_phone"/>
        </LinearLayout>
        <ImageView style="@style/abh_title_other_right"/>
        <ImageView
            android:id="@+id/abh_title_right"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_record_tip"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="102dp">
        <com.sma.smartv3.view.WaveformView
            android:id="@+id/record_line"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_recording_status"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="20dp"
            android:textColor="@color/color_record_detail"
            android:gravity="center"
            android:id="@+id/tv_time"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="00:00:00"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/img_play"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/ic_binaural_start"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_broadcast"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_simultan_broadcast_open"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>
</LinearLayout>
