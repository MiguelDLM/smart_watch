<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/guide_top_view"
        android:background="@color/bg_colors_clarity_70"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/bottom_view"
        android:background="@color/bg_colors_clarity_70"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_top_view"
        app:layout_constraintVertical_weight="1"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/guide_middle_view"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guide_bottom_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:gravity="center"
        android:id="@+id/guide_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_middle_view"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:background="@drawable/bg_close_shape"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:src="@drawable/baseline_close_24"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_top_hint_title"
        android:text="@string/top_hint_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_middle_view"
        style="@style/main_status_guide_style"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_top_middle_title"
        android:visibility="gone"
        android:text="@string/sports_item_hint_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_bottom_view"
        style="@style/main_status_guide_style"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:id="@+id/ll_point_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <View
            android:id="@+id/point_view_1"
            android:background="@drawable/bg_point_yellow_shape"
            style="@style/point_view_style"/>
        <View
            android:id="@+id/point_view_2"
            android:background="@drawable/bg_point_gray_shape"
            android:layout_marginStart="5dp"
            style="@style/point_view_style"/>
        <View
            android:id="@+id/point_view_3"
            android:background="@drawable/bg_point_gray_shape"
            android:layout_marginStart="5dp"
            style="@style/point_view_style"/>
        <View
            android:id="@+id/point_view_4"
            android:background="@drawable/bg_point_gray_shape"
            android:layout_marginStart="5dp"
            style="@style/point_view_style"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_next"
        android:background="@drawable/bg_next_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:minHeight="40dp"
        android:text="@string/next"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_bundle_device_title"
        android:visibility="gone"
        android:text="@string/add_device_hint_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_next"
        style="@style/main_status_guide_style"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_binding_complete"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_binding_complete_oval"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_top_view"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_binding_complete_bottom"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_binding_complete_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_binding_complete"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_binding_complete_title"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:text="@string/bundle_device_hint_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_binding_complete_bottom"
        style="@style/main_status_guide_style"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_bottom_view_1"
            style="@style/main_bottom_ll_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ll_bottom_1"
                style="@style/iv_ll_bottom_style"/>
            <View
                android:id="@+id/iv_ll_bottom_view_1"
                style="@style/main_bottom_view_style"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_bottom_view_2"
            style="@style/main_bottom_ll_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ll_bottom_2"
                style="@style/iv_ll_bottom_style"/>
            <View
                android:id="@+id/iv_ll_bottom_view_2"
                style="@style/main_bottom_view_style"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_bottom_view_3"
            style="@style/main_bottom_ll_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ll_bottom_3"
                style="@style/iv_ll_bottom_style"/>
            <View
                android:id="@+id/iv_ll_bottom_view_3"
                style="@style/main_bottom_view_style"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_bottom_view_4"
            style="@style/main_bottom_ll_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ll_bottom_4"
                style="@style/iv_ll_bottom_style"/>
            <View
                android:id="@+id/iv_ll_bottom_view_4"
                android:background="@color/bg_colors_clarity_70"
                style="@style/main_bottom_view_style"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_bottom_view_5"
            style="@style/main_bottom_ll_style">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_ll_bottom_5"
                style="@style/iv_ll_bottom_style"/>
            <View
                android:id="@+id/iv_ll_bottom_view_5"
                style="@style/main_bottom_view_style"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
