<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/nsdk_rg_common_view_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/nsdk_rg_not_intervene_height">
    <com.baidu.navisdk.ui.widget.AlwaysMarqueeTextView
        android:textSize="16sp"
        android:textColor="#b3b3b3"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/common_card_text"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/navi_dimens_16dp"
        android:layout_marginRight="@dimen/navi_dimens_16dp"
        android:text="正在使用推荐方案"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:marqueeRepeatLimit="marquee_forever"/>
</RelativeLayout>
