<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="78dp">
    <LinearLayout
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/bg_item_binaural_left"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="11dp">
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="14dp"
            android:textColor="@color/color_binaural_left_translate"
            android:id="@+id/tv_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="14dp"
            android:textColor="@color/color_binaural_left_original"
            android:id="@+id/tv_translated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
        <ImageView
            android:id="@+id/iv_play"
            android:visibility="gone"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_play_record_red"/>
    </LinearLayout>
</FrameLayout>
