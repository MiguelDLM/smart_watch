<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bnav_rg_main_eta_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.navisdk.ui.routeguide.toolbox.view.ToolboxTextView
        android:textSize="@dimen/navi_dimens_14dp"
        android:textStyle="bold"
        android:textColor="#ff11141a"
        android:id="@+id/bnav_rg_toolbox_remain_time_and_dist"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/navi_dimens_14dp"
        android:textStyle="bold"
        android:textColor="#ff11141a"
        android:gravity="center"
        android:id="@+id/bnav_rg_toolbox_traffic_light_count"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:drawableLeft="@drawable/nsdk_drawable_toolbox_traffic_light_portrait"
        android:drawablePadding="@dimen/navi_dimens_2dp"
        android:layout_marginStart="@dimen/nsdk_rg_toolbox_traffic_light_margin_left"
        app:layout_constraintBaseline_toBaselineOf="@+id/bnav_rg_toolbox_remain_time_and_dist"
        app:layout_constraintStart_toEndOf="@+id/bnav_rg_toolbox_remain_time_and_dist"/>
    <TextView
        android:textSize="@dimen/navi_dimens_13dp"
        android:textStyle="bold"
        android:textColor="#ff11141a"
        android:gravity="center"
        android:id="@+id/bnav_rg_toolbox_arrive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/bnav_rg_toolbox_remain_time_and_dist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginLeft="@dimen/navi_dimens_0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
