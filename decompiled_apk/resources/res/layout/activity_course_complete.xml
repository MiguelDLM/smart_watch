<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/view_page_secondary_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
                <com.sma.smartv3.view.ImageViewRound
                    android:id="@+id/iv_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/pic_avatar_default"
                    android:layout_centerVertical="true"
                    app:borderColor="@color/colorAccent"
                    app:borderWidth="2dp"
                    app:isCustomize="true"
                    app:type="linear"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/iv_avatar"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/iv_avatar">
                    <com.sma.smartv3.view.text.PFMedium
                        android:textSize="16dp"
                        android:textColor="@color/text_color"
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:textSize="16dp"
                        android:textColor="@color/text_color"
                        android:id="@+id/tv_timne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"/>
                </LinearLayout>
                <com.sma.smartv3.view.ImageViewRound
                    android:id="@+id/iv_app_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:borderColor="@color/colorAccent"
                    app:borderWidth="2dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/course_details_pic_layout"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <com.sma.smartv3.view.ImageViewRound
                    android:id="@+id/course_details_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:isCustomize="true"
                    app:radius="10dp"
                    app:type="radial"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">
                    <com.sma.smartv3.view.text.PFBold
                        android:textColor="@color/white"
                        android:id="@+id/course_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="马甲线养成"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:textColor="@color/white"
                        android:id="@+id/course_details_diff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="K1入门  7分钟"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFBold
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用时"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:textColor="@color/white"
                            android:id="@+id/course_details_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="00:30:45"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFBold
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="热量消耗"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:textColor="@color/white"
                            android:id="@+id/course_details_heat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="50千卡"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.sma.smartv3.view.text.PFBold
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完成率"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="100%"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                style="@style/sport_detail_style_ll_v2">
                <com.sma.smartv3.view.text.PFMedium
                    android:text="训练课程"
                    style="@style/sport_detail_chart_item_title_v2"/>
                <com.sma.smartv3.view.text.PFMedium
                    android:textSize="14sp"
                    android:id="@+id/course_name_number"
                    android:text="课程名称:xxx  第一次完成"
                    android:maxLines="1"
                    style="@style/sport_detail_chart_item_title_v2"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/course_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/training_experience_layout"
                android:layout_height="wrap_content"
                style="@style/sport_detail_style_ll_v2">
                <com.sma.smartv3.view.text.PFMedium
                    android:text="@string/training_experience"
                    style="@style/sport_detail_chart_item_title_v2"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/training_experience_layout_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:minHeight="70dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/training_experience_layout_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_training_experience_1"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:gravity="center_horizontal"
                            android:layout_height="40dp"
                            android:text="@string/training_experience_1"
                            style="@style/sport_detail_chart_item_data_title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/training_experience_layout_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_training_experience_2"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:gravity="center_horizontal"
                            android:layout_height="40dp"
                            android:text="@string/training_experience_2"
                            style="@style/sport_detail_chart_item_data_title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/training_experience_layout_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_training_experience_3"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:gravity="center_horizontal"
                            android:layout_height="40dp"
                            android:text="@string/training_experience_3"
                            style="@style/sport_detail_chart_item_data_title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/training_experience_layout_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_training_experience_4"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:gravity="center_horizontal"
                            android:layout_height="40dp"
                            android:text="@string/training_experience_4"
                            style="@style/sport_detail_chart_item_data_title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/training_experience_layout_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_training_experience_5"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:gravity="center_horizontal"
                            android:layout_height="40dp"
                            android:text="@string/training_experience_5"
                            style="@style/sport_detail_chart_item_data_title"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/training_experience_layout_result"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/training_experience_img_result"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/icon_training_experience_2"/>
                    <com.sma.smartv3.view.text.PFMedium
                        android:id="@+id/training_experience_tv_result"
                        android:text="@string/training_experience_2"
                        style="@style/sport_detail_chart_item_data_title"/>
                </LinearLayout>
                <com.sma.smartv3.view.text.PFMedium
                    android:textColor="@color/text_color"
                    android:gravity="center"
                    android:id="@+id/training_experience_hint_tv"
                    android:layout_width="match_parent"
                    android:text="@string/training_experience_hint"
                    style="@style/sport_detail_chart_item_data_title"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/device_sources"
                style="@style/sport_detail_style_ll_v2">
                <com.sma.smartv3.view.text.PFMedium
                    android:text="@string/data_sources"
                    style="@style/sport_detail_chart_item_title_v2"/>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/device_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:maxHeight="150dp"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:textColor="@color/text_color"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:text="@string/device_name"
                            style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:textColor="@color/text_color"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/device_name"
                            android:text="SDF 55"
                            style="@style/sport_detail_chart_item_data_title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:id="@+id/device_qr_code_ll"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="35dp">
                        <ImageView
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/device_qr_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:textColor="@color/text_color"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:text="@string/sources_app_name"
                            style="@style/sport_detail_chart_item_data_title"/>
                        <com.sma.smartv3.view.text.PFMedium
                            android:textColor="@color/text_color"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/app_name"
                            style="@style/sport_detail_chart_item_data_title"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
