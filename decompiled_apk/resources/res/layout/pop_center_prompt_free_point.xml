<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginBottom="200dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/pop_prompt_free_point_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <com.sma.smartv3.view.text.FontTextView
            android:textSize="20dp"
            android:textColor="@color/order_text_orange"
            android:gravity="center"
            android:id="@+id/pop_center_prompt_img_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="@string/free_points_arrived"
            app:my_font="pf_medium"/>
        <com.sma.smartv3.view.text.FontTextView
            android:textSize="14dp"
            android:textColor="@color/line_color"
            android:id="@+id/pop_center_prompt_img_content"
            android:paddingTop="4dp"
            android:paddingBottom="20dp"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/free_points_arrived_tip"
            android:maxLines="10"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:my_font="pf_medium"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/pop_center_prompt_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/pop_prompt_free_point_icon"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/pop_center_prompt_closure"
        android:visibility="visible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/pop_center_prompt_closure_icon"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="54dp"/>
</RelativeLayout>
