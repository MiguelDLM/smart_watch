<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/transparent"
    android:paddingLeft="@dimen/navi_dimens_10dp"
    android:paddingRight="@dimen/navi_dimens_10dp"
    android:paddingBottom="@dimen/navi_dimens_10dp"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bnav_common_cp_button_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:textColor="#3385ff"
            android:gravity="center"
            android:id="@+id/choose_video_btn"
            android:background="@drawable/bnav_common_cp_ugc_button_selector"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="拍视频"/>
        <View
            android:id="@+id/choose_video_line"
            android:background="@color/nsdk_cl_bg_a"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#3385ff"
            android:gravity="center"
            android:id="@+id/choose_camera_btn"
            android:background="@drawable/bnav_common_cp_ugc_button_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_57dp"
            android:text="拍照"/>
        <View
            android:id="@+id/choose_camera_line"
            android:background="@color/nsdk_cl_bg_a"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#3385ff"
            android:gravity="center"
            android:id="@+id/choose_album_btn"
            android:background="@drawable/bnav_common_cp_ugc_button_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_57dp"
            android:text="从手机相册选择"/>
    </LinearLayout>
    <TextView
        android:textSize="20sp"
        android:textColor="#3385ff"
        android:gravity="center"
        android:id="@+id/choose_pic_cancel_btn"
        android:background="@drawable/bnav_common_cp_button_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_57dp"
        android:layout_marginTop="@dimen/navi_dimens_7dp"
        android:text="取消"/>
</LinearLayout>
