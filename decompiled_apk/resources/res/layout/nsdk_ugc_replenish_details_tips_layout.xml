<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ugc_replenish_layout"
    android:background="@drawable/nsdk_ugc_replenish_round_bg"
    android:paddingTop="@dimen/navi_dimens_9dp"
    android:paddingBottom="@dimen/navi_dimens_9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/navi_dimens_20dp"
    android:layout_marginRight="@dimen/navi_dimens_20dp">
    <ImageView
        android:id="@+id/ugc_replenish_event_icon"
        android:layout_width="@dimen/navi_dimens_17dp"
        android:layout_height="@dimen/navi_dimens_17dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="@dimen/navi_dimens_13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ugc_replenish_event_hints"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#333333"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/ugc_replenish_event_hints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="@dimen/navi_dimens_5dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ugc_replenish_event_verify"
        app:layout_constraintStart_toEndOf="@+id/ugc_replenish_event_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/nsdk_ugc_report_blue_txt_btn_selector"
        android:gravity="center"
        android:id="@+id/ugc_replenish_event_verify"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navi_dimens_22dp"
        android:text="@string/nsdk_ugc_replenish_text_event_nonexist"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="@dimen/navi_dimens_10dp"
        android:layout_marginEnd="@dimen/navi_dimens_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ugc_replenish_event_add"
        app:layout_constraintStart_toEndOf="@+id/ugc_replenish_event_hints"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/nsdk_ugc_report_blue_txt_btn_selector"
        android:gravity="center"
        android:id="@+id/ugc_replenish_event_add"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navi_dimens_22dp"
        android:text="@string/nsdk_ugc_replenish_text_add_details"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginStart="@dimen/navi_dimens_6dp"
        android:layout_marginEnd="@dimen/navi_dimens_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ugc_replenish_event_verify"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
