<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/nsdk_layout_route_sort_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#11141a"
        android:id="@+id/description_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:text="一起分享路况信息"
        android:layout_marginStart="19dp"/>
    <ImageView
        android:id="@+id/close_icon"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/bnav_drawable_challenge_mode_close"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/description_divide_line"
        android:background="#e9ebf0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/description_detail_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_divide_line">
        <TextView
            android:textSize="12dp"
            android:textColor="#5c6373"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="欢迎使用路况分享功能，您可以在这里获取道路事件的最新进展，也可以发布消息帮助其他车友了解现场实时情况。请在确保驾驶安全的前提下使用该功能，并遵守《路况信息分享规范》，严禁发布违法信息，共同维护健康和谐的网络环境。"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="13dp">
            <CheckBox
                android:textSize="12dp"
                android:textColor="#11141a"
                android:id="@+id/confirm_checkbox"
                android:saveEnabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="我已阅读并同意"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/bnav_drawable_agreement_checkbox"
                android:drawablePadding="@dimen/navi_dimens_5dp"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#3377ff"
                android:id="@+id/rules_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《路况信息分享规范》"/>
        </LinearLayout>
        <Button
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:id="@+id/confirm_btn"
            android:background="@drawable/nsdk_drawable_ugc_chat_agree_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/navi_dimens_26dp"
            android:text="立即进入"/>
    </LinearLayout>
</RelativeLayout>
