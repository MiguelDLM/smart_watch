<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/toolbox_btn_container"
        android:background="@drawable/nsdk_light_navi_btn_bg_common_selector"
        android:layout_width="@dimen/navi_dimens_57dp"
        android:layout_height="@dimen/navi_dimens_57dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tool_box_closed_state_iv"
                android:layout_width="@dimen/navi_dimens_28dp"
                android:layout_height="@dimen/navi_dimens_28dp"
                android:src="@drawable/nsdk_light_navi_toolbox"
                android:scaleType="centerInside"/>
            <TextView
                android:textSize="@dimen/nsdk_rg_control_panel_btn_text_size"
                android:textStyle="bold"
                android:textColor="@color/nsdk_cl_text_h"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nsdk_rg_control_button_text_margin_top"
                android:text="工具箱"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/yellow_banner_red_tool"
        android:background="@drawable/nsdk_yellow_banner_red_flag"
        android:visibility="gone"
        android:layout_width="@dimen/navi_dimens_4dp"
        android:layout_height="@dimen/navi_dimens_4dp"
        android:layout_marginTop="@dimen/navi_dimens_11dp"
        android:layout_marginRight="@dimen/navi_dimens_10dp"
        android:layout_alignRight="@+id/toolbox_btn_container"/>
</RelativeLayout>
