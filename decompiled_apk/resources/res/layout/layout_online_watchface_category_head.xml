    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingEnd="18dp">
    <com.sma.smartv3.view.text.PFMedium
        android:id="@+id/tv_name"
        android:text="@string/watch_face_category1"
        style="@style/watchface_head_item_tv_left"/>
    <com.sma.smartv3.view.text.PFMedium
        android:id="@+id/watchface_more_tv"
        android:text="@string/more"
        style="@style/watchface_head_item_tv_right"/>
    <ImageView style="@style/watchface_head_item_right_iv_style"/>
</LinearLayout>
