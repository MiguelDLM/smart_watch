<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/energy_type_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/navi_dimens_14dp"
        android:textColor="#333333"
        android:id="@+id/energy_type_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动力类型"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/energy_type_0"
        android:layout_marginLeft="@dimen/navi_dimens_81dp"
        android:text="油车"
        style="@style/EnergyType"/>
    <TextView
        android:id="@+id/energy_type_1"
        android:layout_marginLeft="@dimen/navi_dimens_10dp"
        android:text="纯电动"
        android:layout_toRightOf="@+id/energy_type_0"
        style="@style/EnergyType"/>
    <TextView
        android:id="@+id/energy_type_2"
        android:layout_marginLeft="@dimen/navi_dimens_10dp"
        android:text="混合动力"
        android:layout_toRightOf="@+id/energy_type_1"
        style="@style/EnergyType"/>
</RelativeLayout>
