<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/navi_dimens_10dp"
    android:paddingRight="@dimen/navi_dimens_10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <CheckBox
        android:gravity="center"
        android:id="@+id/custom_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_13dp"
        android:button="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/custom_item_stroke"
        android:background="@drawable/nsdk_custom_guide_image_checked_stroke"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/custom_item_image"
        app:layout_constraintLeft_toLeftOf="@+id/custom_item_image"
        app:layout_constraintRight_toRightOf="@+id/custom_item_image"
        app:layout_constraintTop_toTopOf="@+id/custom_item_image"/>
    <TextView
        android:textColor="@color/nsdk_rg_custom_sub_description_color"
        android:id="@+id/custom_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_10dp"
        android:text="经典模式"
        app:layout_constraintLeft_toLeftOf="@+id/custom_item_image"
        app:layout_constraintRight_toRightOf="@+id/custom_item_image"
        app:layout_constraintTop_toBottomOf="@+id/custom_item_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>
