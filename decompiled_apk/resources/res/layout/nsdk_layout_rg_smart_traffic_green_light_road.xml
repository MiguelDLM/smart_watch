<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="112dp"
    android:layout_height="63dp">
    <TextView
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/green_light_label"
        android:background="@drawable/nsdk_smart_traffic_green_light_top_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="绿波路段红绿灯"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/nsdk_green_light_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/nsdk_num_light_icon"
            android:background="@drawable/nsdk_smart_traffic_green_light_bottom_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/green_light_num"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:id="@+id/green_light_num"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="剩余4个"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/nsdk_num_light_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:id="@+id/green_light_num_ok"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="通过"
            app:layout_constraintBottom_toBottomOf="@+id/green_light_num"
            app:layout_constraintLeft_toRightOf="@+id/nsdk_num_light_icon"
            app:layout_constraintStart_toStartOf="@+id/green_light_num"
            app:layout_constraintTop_toTopOf="@+id/green_light_num"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
