<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    style="@style/pop_dial_common_container_style">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dial_time_pop_iv"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="18sp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/confirmButton"
            android:text="@string/confirm"
            style="@style/dial_pop_button"/>
    </RelativeLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout style="@style/dial_pop_content_ll_style">
        <RelativeLayout
            android:id="@+id/dialSelect0"
            android:background="@drawable/dial_number_pop_bg"
            android:layout_width="180dp"
            android:layout_height="180dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/light"
                    android:gravity="end"
                    android:id="@+id/tv0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AM"/>
                <TextView
                    android:textSize="32dp"
                    android:textColor="@color/light"
                    android:gravity="center"
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="08:30"/>
                <TextView
                    android:textSize="18dp"
                    android:textColor="@color/light"
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07/06 THU"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout style="@style/dial_pop_content_ll_style">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
