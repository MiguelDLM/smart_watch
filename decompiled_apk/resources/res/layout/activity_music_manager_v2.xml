<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <com.sma.smartv3.view.text.PFMedium
        android:textSize="14dp"
        android:textColor="@color/line_color"
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/music_transfer_tip"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <com.sma.smartv3.view.text.PFMedium
        android:textSize="14dp"
        android:textColor="@color/line_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_transfer_type_tip"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <com.sma.smartv3.view.text.PFMedium
        android:textSize="14dp"
        android:textColor="@color/line_color"
        android:id="@+id/tv_free_space"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/watch_free_space"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/task_panel"
        android:background="@drawable/common_ripple_status_item"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:id="@+id/tv_progress_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_transfer_task_tip"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/line_color"
                android:id="@+id/task_panel_music_downloading_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:id="@+id/tv_total_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100/100"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/task_panel_music_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="12sp"
                android:textColor="@color/line_color"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="12sp"
                android:textColor="@color/line_color"
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/pb_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxHeight="6dp"
            android:progressDrawable="@drawable/seekbar_music_bg"
            android:minHeight="6dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:onClick="onCancel"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/tv_retry"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:onClick="onRetry"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/music_v2_recycler_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/all_songs_item"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/line_color"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:drawableTop="@drawable/pic_no_music"
            android:drawablePadding="16dp"/>
    </FrameLayout>
    <Button
        android:id="@+id/btn_bottom_server"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="@string/add_server_music_btn"
        android:onClick="onBottomServerClick"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/btn_common"/>
    <Button
        android:id="@+id/btn_bottom_tera_box"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:text="@string/add_tera_box_music_btn"
        android:onClick="onBottomTeraBoxClick"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/btn_common"/>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:text="@string/add_phone_music_btn"
        style="@style/bottom_btn"/>
</LinearLayout>
