<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/bn_rg_bottom_bar_bg_nopadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ugc_sub_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_81dp">
            <ImageView
                android:id="@+id/ugc_sub_title_iv"
                android:layout_width="@dimen/navi_dimens_50dp"
                android:layout_height="@dimen/navi_dimens_50dp"
                android:layout_marginLeft="@dimen/navi_dimens_11dp"
                android:src="@drawable/nsdk_drawable_rg_cruise_accident"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="@dimen/navi_dimens_21dp"
                android:textStyle="bold"
                android:textColor="#333"
                android:id="@+id/ugc_sub_title_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navi_dimens_15dp"
                android:text="事故"
                android:layout_toRightOf="@+id/ugc_sub_title_iv"
                android:layout_alignTop="@+id/ugc_sub_title_iv"/>
            <TextView
                android:textSize="@dimen/navi_dimens_17dp"
                android:textColor="#666"
                android:gravity="center_vertical"
                android:id="@+id/ugc_sub_title_position_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navi_dimens_15dp"
                android:layout_marginTop="@dimen/navi_dimens_5dp"
                android:text="补充详情帮助更多用户"
                android:singleLine="true"
                android:layout_toRightOf="@+id/ugc_sub_title_iv"
                android:layout_alignBottom="@+id/ugc_sub_title_iv"/>
        </RelativeLayout>
        <View
            android:background="#00eaeaea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nsdk_ugc_report_view_line_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ugc_navi_tips_button_view_layout"
            android:background="@color/nsdk_cl_bg_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_15dp"
            android:layout_marginBottom="@dimen/navi_dimens_15dp">
            <Button
                android:textSize="@dimen/navi_dimens_15dp"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:id="@+id/ugc_navi_upload_content_fill_btn"
                android:background="@drawable/bnav_common_ugc_gray_corners_button_selector"
                android:layout_width="@dimen/navi_dimens_0dp"
                android:layout_height="@dimen/navi_dimens_46dp"
                android:layout_marginLeft="@dimen/navi_dimens_11dp"
                android:text="补充详情"
                android:layout_weight="1"/>
            <Button
                android:textSize="@dimen/navi_dimens_15dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:id="@+id/ugc_navi_upload_immediately_upload_btn"
                android:background="@drawable/bnav_common_ugc_blue_button_selector_50radius"
                android:layout_width="@dimen/navi_dimens_0dp"
                android:layout_height="@dimen/navi_dimens_46dp"
                android:layout_marginLeft="@dimen/navi_dimens_15dp"
                android:layout_marginRight="@dimen/navi_dimens_11dp"
                android:text="立即上报"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
