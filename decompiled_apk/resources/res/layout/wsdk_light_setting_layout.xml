<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/setting_container"
    android:background="#99000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/setting_bar"
        android:background="@drawable/wsdk_drawable_bike_btn_bg_normal"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentTop="true">
            <TextView
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="自动进入雷达"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <CheckBox
                android:id="@+id/auto_enter_check"
                android:background="@drawable/wsdk_checkbox_selector"
                android:layout_width="52dp"
                android:layout_height="31dp"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:button="@drawable/transparent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:textSize="12dp"
            android:textColor="#666666"
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:text="开启后智能判断行走状态，自由进入步行雷达"
            android:layout_below="@+id/line1"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/close_btn"
            android:tag="voiceTag_startNavi"
            android:background="@drawable/selector_btn_blue"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="关闭"
            android:layout_below="@+id/line2"/>
    </RelativeLayout>
</RelativeLayout>
