<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/item_special_course_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/item_special_course_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/item_special_course_pic">
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:id="@+id/item_special_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textColor="@color/line_color"
            android:id="@+id/item_special_course_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/item_special_course_view"
        android:background="@color/selection_bg_color"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_toEndOf="@+id/item_special_course_pic"/>
</RelativeLayout>
