<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clipChildren="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.baidu.navisdk.ui.widget.BNNoClickSeekBar
        android:id="@+id/seekbar"
        android:background="@drawable/nsdk_route_prefer_seekbar_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/nsdk_route_prefer_seekbar_bg_layer"
        android:thumb="@drawable/nsdk_route_prefer_seekbar_thumb_normal"/>
    <RelativeLayout
        android:id="@+id/progressTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:textSize="@dimen/navi_dimens_11dp"
        android:textColor="#5c6373"
        android:id="@+id/bottomHintView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="畅通70% , 收费多22"
        android:maxLines="1"
        android:layout_alignBottom="@+id/seekbar"/>
    <View
        android:background="@drawable/nsdk_route_prefer_seekbar_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/seekbar"/>
</RelativeLayout>
