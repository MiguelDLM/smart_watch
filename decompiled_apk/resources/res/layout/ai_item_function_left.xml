<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/view_page_secondary_bg"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="false"
        style="@style/ai_function_item_iv"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv"
        android:layout_alignTop="@+id/iv"
        android:layout_alignBottom="@+id/iv"
        android:layout_alignParentBottom="false"
        style="@style/ai_function_item_text_panel_style">
        <com.sma.smartv3.view.text.PFMedium
            android:textColor="@color/text_color"
            android:id="@+id/tv_title"
            style="@style/ai_function_item_title"/>
        <com.sma.smartv3.view.text.PFMedium
            android:id="@+id/tv_desc"
            style="@style/ai_function_item_desc"/>
    </LinearLayout>
</RelativeLayout>
