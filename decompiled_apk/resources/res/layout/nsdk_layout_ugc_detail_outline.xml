<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/nsdk_ugc_detail_round_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tssv_persistent_area"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navi_dimens_15dp"
            android:layout_marginBottom="20dp"
            layout="@layout/nsdk_layout_ugc_detail_outline_title"/>
        <com.baidu.navisdk.ugc.eventdetails.view.BNRCEventDetailLabelsView
            android:id="@+id/ugc_detail_labels_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="15dp"/>
        <RelativeLayout
            android:id="@+id/ugc_event_details_realistic_img_container"
            android:background="@drawable/bnav_bg_ugc_panel_realistic_img"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_165dp"
            android:layout_marginLeft="@dimen/nsdk_ugc_details_card_padding_left_right"
            android:layout_marginRight="@dimen/nsdk_ugc_details_card_padding_left_right"
            android:layout_marginBottom="15dp">
            <ImageView
                android:background="@drawable/bnav_drawable_route_fullview_page_placeholder"
                android:layout_width="@dimen/navi_dimens_30dp"
                android:layout_height="@dimen/navi_dimens_40dp"
                android:layout_centerInParent="true"/>
            <com.baidu.navisdk.ui.widget.RoundImageView
                android:id="@+id/ugc_event_details_realistic_img"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:roundedImageViewCornerRadius="@dimen/navi_dimens_5dp"
                app:roundedImageViewSizeRadio="0"/>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:id="@+id/ugc_event_details_content_layout"
            android:background="@drawable/nsdk_ugc_details_description_background"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navi_dimens_10dp"
            android:layout_marginRight="@dimen/navi_dimens_9dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:textSize="12sp"
                android:textColor="#5c6373"
                android:ellipsize="end"
                android:id="@+id/tv_event_description"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拥堵"
                android:maxLines="2"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/description_more"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_event_description"
                app:layout_constraintEnd_toEndOf="@+id/tv_event_description">
                <View
                    android:background="@drawable/nsdk_ugc_detail_description_shadow"
                    android:layout_width="38dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#3377ff"
                    android:background="#f8f9fa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多 &gt;&gt;"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/event_description_layout"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/tv_event_description"
                app:layout_constraintTop_toBottomOf="@+id/tv_event_description">
                <TextView
                    android:textSize="11sp"
                    android:textColor="#666"
                    android:ellipsize="end"
                    android:id="@+id/tv_event_description_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/navi_dimens_10dp"
                    android:text="时段"
                    android:maxLines="8"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:ellipsize="end"
                    android:id="@+id/tv_event_pgc_start_end_time"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/navi_dimens_10dp"
                    android:maxLines="4"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/img_and_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ugc_live_area"
            android:background="@drawable/nsdk_ugc_live_area_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_176dp"
            android:layout_marginLeft="@dimen/navi_dimens_15dp"
            android:layout_marginRight="@dimen/navi_dimens_15dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/ugc_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="@dimen/navi_dimens_12dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical"
                android:id="@+id/video_info"
                android:background="@drawable/nsdk_ugc_live_video_info_bg"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navi_dimens_30dp"
                android:maxLines="1"
                android:drawablePadding="2dp"
                app:layout_constraintTop_toTopOf="@+id/ugc_video"/>
            <ImageView
                android:id="@+id/center_control_area"
                android:visibility="gone"
                android:layout_width="@dimen/navi_dimens_54dp"
                android:layout_height="@dimen/navi_dimens_54dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ProgressBar
                android:id="@+id/ugc_live_loading"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="#ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.AppCompat.ProgressBar"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loading_failed_area"
                android:background="@drawable/nsdk_ugc_live_loading_failed_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:background="@drawable/nsdk_ugc_live_loading_failed_road_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:round="@dimen/navi_dimens_8dp"/>
                <ImageView
                    android:id="@+id/loading_fail_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nsdk_ugc_live_failed_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3"/>
                <TextView
                    android:textColor="#ffffff"
                    android:id="@+id/loading_failed_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="网络连接失败，请稍后重试"
                    app:layout_constraintLeft_toLeftOf="@+id/loading_fail_icon"
                    app:layout_constraintRight_toRightOf="@+id/loading_fail_icon"
                    app:layout_constraintTop_toBottomOf="@+id/loading_fail_icon"/>
                <TextView
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/loading_failed_retry"
                    android:background="@drawable/nsdk_ugc_live_loading_failed_retry_bg"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="13dp"
                    android:text="点击重试"
                    app:layout_constraintLeft_toLeftOf="@+id/loading_fail_icon"
                    app:layout_constraintRight_toRightOf="@+id/loading_fail_icon"
                    app:layout_constraintTop_toBottomOf="@+id/loading_failed_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/nsdk_ugc_details_card_padding_left_right"
            layout="@layout/nsdk_layout_ugc_detail_outline_pgc"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/layout_ugc_source"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_dimens_17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/navi_dimens_6dp"
            android:layout_marginRight="@dimen/nsdk_ugc_details_card_padding_left_right">
            <TextView
                android:textSize="12sp"
                android:ellipsize="end"
                android:id="@+id/tv_event_reporter_ugc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/iv_event_reporter_ugc_icon"
                android:visibility="gone"
                android:layout_width="@dimen/navi_dimens_14dp"
                android:layout_height="@dimen/navi_dimens_14dp"
                android:scaleType="fitXY"/>
            <TextView
                android:textSize="12sp"
                android:ellipsize="end"
                android:id="@+id/tv_event_reporter_ugc_supplement"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
        <View
            android:id="@+id/divider"
            android:background="#e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/navi_dimens_10dp"/>
        <include layout="@layout/nsdk_layout_ugc_detail_useful_new"/>
    </LinearLayout>
</FrameLayout>
