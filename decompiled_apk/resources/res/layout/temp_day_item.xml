<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="26dp"
    android:layout_marginEnd="26dp">
    <RelativeLayout
        android:background="@drawable/shape_temp_day_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp">
            <com.sma.smartv3.view.text.DINCondBold
                android:textSize="24sp"
                android:id="@+id/tempItemValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.9"/>
            <com.sma.smartv3.view.text.DINCondBold
                android:textSize="14sp"
                android:textColor="@color/line_color"
                android:id="@+id/tempItemUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/degree_centigrade"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="24sp"
            android:id="@+id/tempItemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="normal"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/shape_temp_day_item_center_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <com.sma.smartv3.view.text.DINCondBold
            android:textColor="@color/text_color"
            android:id="@+id/tempItemTime"
            android:padding="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
