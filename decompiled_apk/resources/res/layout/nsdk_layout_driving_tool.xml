<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/nsdk_drawable_common_loading_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:textColor="@color/nsdk_cl_text_a"
        android:gravity="center"
        android:id="@+id/dt_name_sp"
        android:visibility="visible"
        android:layout_width="@dimen/navi_dimens_180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_2dp"
        android:text="深圳-2012:-03-41 12:34:42-4"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/first_take_ll"
        android:background="@drawable/nsdk_drawable_common_bg_pressed_mask_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_10dp"
        android:layout_below="@+id/dt_name_sp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/take_picture_btn"
            android:background="#c7c7c7"
            android:layout_width="@dimen/navi_dimens_76dp"
            android:layout_height="@dimen/nsdk_driving_tool_button_height"
            android:text="拍照"
            style="@style/Text_NaviDrivingToolText"/>
        <Button
            android:id="@+id/screen_shot_btn"
            android:background="#c7c7c7"
            android:layout_width="@dimen/navi_dimens_76dp"
            android:layout_height="@dimen/nsdk_driving_tool_button_height"
            android:layout_marginLeft="@dimen/navi_dimens_20dp"
            android:text="截屏"
            style="@style/Text_NaviDrivingToolText"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/second_video_ll"
        android:background="@drawable/nsdk_drawable_common_bg_pressed_mask_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navi_dimens_15dp"
        android:layout_below="@+id/first_take_ll"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/short_video_btn"
            android:background="#c7c7c7"
            android:layout_width="@dimen/navi_dimens_76dp"
            android:layout_height="@dimen/nsdk_driving_tool_button_height"
            android:text="录像"
            style="@style/Text_NaviDrivingToolText"/>
        <Button
            android:id="@+id/setting_btn"
            android:background="#c7c7c7"
            android:layout_width="@dimen/navi_dimens_76dp"
            android:layout_height="@dimen/nsdk_driving_tool_button_height"
            android:layout_marginLeft="@dimen/navi_dimens_20dp"
            android:text="设置"
            style="@style/Text_NaviDrivingToolText"/>
    </LinearLayout>
    <Button
        android:id="@+id/new_issue_btn"
        android:background="#c7c7c7"
        android:layout_width="@dimen/navi_dimens_120dp"
        android:layout_height="@dimen/nsdk_driving_tool_button_height"
        android:layout_marginTop="@dimen/navi_dimens_15dp"
        android:text="新增问题 "
        android:layout_below="@+id/second_video_ll"
        android:layout_centerHorizontal="true"
        style="@style/Text_NaviDrivingToolText"/>
    <Button
        android:id="@+id/issue_view_btn"
        android:background="#c7c7c7"
        android:visibility="gone"
        android:layout_width="@dimen/navi_dimens_120dp"
        android:layout_height="@dimen/nsdk_driving_tool_button_height"
        android:layout_marginTop="@dimen/navi_dimens_15dp"
        android:layout_marginBottom="@dimen/navi_dimens_2dp"
        android:text="问题列表"
        android:layout_below="@+id/new_issue_btn"
        android:layout_alignLeft="@+id/new_issue_btn"
        android:layout_centerHorizontal="true"
        style="@style/Text_NaviDrivingToolText"/>
</RelativeLayout>
