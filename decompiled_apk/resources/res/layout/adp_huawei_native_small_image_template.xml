<?xml version="1.0" encoding="utf-8"?>
<com.huawei.hms.ads.nativead.NativeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/adp_huawei_native_small_view"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <com.huawei.hms.ads.nativead.MediaView
            android:id="@+id/adp_huawei_ad_media"
            android:background="#8bc34a"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"/>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/adp_huawei_ad_media">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/black"
                android:id="@+id/adp_huawei_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/adp_huawei_left_bottom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adp_huawei_ad_title"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/adp_huawei_ad_source_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:id="@+id/adp_huawei_ad_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/adp_huawei_ad_flag"
                        android:background="@drawable/adp_huawei_native_flag_rounded_corners_shape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/adp_huawei_ad_flag"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/adp_huawei_ad_source"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:id="@+id/adp_huawei_ad_app_developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/adp_huawei_ad_app_detail_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adp_huawei_ad_source_layout">
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:id="@+id/adp_huawei_ad_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="100dp"
                        android:text="@string/adp_huawei_app_version"/>
                    <TextView
                        android:textSize="11sp"
                        android:layout_gravity="center"
                        android:background="#666666"
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:id="@+id/adp_huawei_ad_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adp_huawei_app_detail"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:layout_gravity="center"
                        android:background="#666666"
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:id="@+id/adp_huawei_ad_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adp_huawei_app_privacy"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:layout_gravity="center"
                        android:background="#666666"
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:id="@+id/adp_huawei_ad_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/adp_huawei_app_permission"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/adp_huawei_right_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="95dp"
                android:layout_height="26dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true">
                <Button
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:id="@+id/adp_huawei_ad_call_to_action"
                    android:background="@drawable/adp_huawei_native_button_rounded_corners_shape"
                    android:visibility="gone"
                    android:layout_width="72dp"
                    android:layout_height="26dp"/>
                <ImageView
                    android:id="@+id/ads_huawei_close"
                    android:background="@drawable/adp_ad_close"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.huawei.hms.ads.nativead.NativeView>
