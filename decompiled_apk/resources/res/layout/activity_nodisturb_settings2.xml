<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <com.sma.smartv3.view.AbhSettingsHeader
        android:id="@+id/item_all_header"
        app:abh_description="@string/do_not_disturb_all"
        app:abh_title="@string/master_switch"
        style="@style/abh_settings_item"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.sma.smartv3.view.AbhSettingsHeader
            android:id="@+id/item_header"
            app:abh_description="@string/do_not_disturb_tip"
            app:abh_title="@string/do_not_disturb"
            style="@style/abh_settings_item"/>
        <com.sma.smartv3.view.AbhSettingsItem
            android:id="@+id/item_time_range"
            android:onClick="onSetTimeRange"
            app:abh_left_text="@string/time_settings"
            style="@style/abh_settings_item"/>
    </LinearLayout>
</LinearLayout>
