<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_view"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <include layout="@layout/layout_title_iv_tv_iv"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/ll_measurement"
            android:background="@drawable/bg_measurement_bg"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/iv_ic_measurement"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/icon_measurement_bg"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="55dp"
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/data_none"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="18dp"
                android:textColor="@color/line_color"
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bg_unit"/>
        </LinearLayout>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/measured"/>
        <View
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="12dp"
            android:textColor="@color/line_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="@string/bg_measurement_tip"
            android:lineSpacingMultiplier="1.3"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:text="@string/confirm"
        style="@style/bottom_btn"/>
</LinearLayout>
