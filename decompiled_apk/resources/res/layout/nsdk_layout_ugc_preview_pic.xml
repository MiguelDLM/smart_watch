<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#18181c"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nsdk_ugc_details_title_height">
        <ImageView
            android:gravity="center"
            android:id="@+id/back_preview_pic"
            android:padding="@dimen/navi_dimens_10dp"
            android:layout_width="@dimen/navi_dimens_45dp"
            android:layout_height="@dimen/navi_dimens_45dp"
            android:src="@drawable/bnav_ugc_preview_back_white"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="预览"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/delete_preview_pic"
            android:padding="@dimen/navi_dimens_10dp"
            android:layout_width="@dimen/navi_dimens_36dp"
            android:layout_height="@dimen/navi_dimens_36dp"
            android:src="@drawable/bnav_ugc_preview_delete_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.baidu.navisdk.widget.photoview.PhotoView
        android:id="@+id/iv_preview_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"/>
</LinearLayout>
