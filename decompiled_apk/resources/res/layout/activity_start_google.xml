<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/view_page_main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_vertical"
                android:id="@+id/googleRl"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:src="@drawable/selector_bottom_btn_google"
                    android:onClick="google"/>
            </RelativeLayout>
            <com.sma.smartv3.view.text.PFMedium
                android:textSize="16sp"
                android:textColor="@color/line_color"
                android:background="@drawable/common_ripple_borderless"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/not_logged_in_yet"
                android:onClick="noLogin"/>
            <com.sma.smartv3.view.text.PFMedium
                android:textColor="@color/line_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/other_login_methods"/>
            <ImageButton
                android:background="@drawable/common_ripple_borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/start_email"
                android:onClick="emailLogin"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
