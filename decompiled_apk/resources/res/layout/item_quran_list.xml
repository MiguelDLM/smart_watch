<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/shape_me_bottom_ll_bg"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="22dp"
    android:layout_marginEnd="22dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp">
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:id="@+id/item_quran_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="12sp"
            android:textColor="@color/line_color"
            android:id="@+id/item_quran_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    <com.sma.smartv3.view.text.PFMedium
        android:gravity="center"
        android:id="@+id/tv_renew"
        android:padding="5dp"
        android:layout_width="82dp"
        android:text="@string/app_store_item_renew"
        style="@style/pop_bottom_btn_2_style"/>
</LinearLayout>
