<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navi_result_fb_second_page"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="bottom"
        android:id="@+id/navi_result_fb_second_content_view"
        android:background="@drawable/nsdk_long_dis_service_panel_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/navi_result_fb_page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/navi_result_fb_page_exit_btn"
            android:layout_marginHorizontal="@dimen/nsdk_navi_result_fb_page_margin_horizontal"/>
        <ImageView
            android:id="@+id/navi_result_fb_page_exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            android:src="@drawable/nsdk_drawable_nearby_search_close"
            android:scaleType="fitCenter"
            android:layout_alignTop="@+id/navi_result_fb_page_title"
            android:layout_alignBottom="@+id/navi_result_fb_page_title"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"/>
        <View
            android:id="@+id/navi_result_fb_page_line1"
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/navi_result_fb_page_exit_btn"/>
        <com.baidu.navisdk.ui.widget.StarsView
            android:id="@+id/navi_result_fb_page_starview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/navi_result_fb_page_line1"
            android:layout_centerHorizontal="true"
            app:nsdk_starCount="5"
            app:nsdk_starHeight="35dp"
            app:nsdk_starIcon="@drawable/bnav_feedback_star_large_grey"
            app:nsdk_starMargin="5dp"
            app:nsdk_starSeleteIcon="@drawable/bnav_feedback_star_large_color"
            app:nsdk_starWidth="35dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/navi_result_fb_page_star_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="还需改善"
            android:layout_below="@+id/navi_result_fb_page_starview"
            android:layout_alignLeft="@+id/navi_result_fb_page_starview"
            android:layout_alignRight="@+id/navi_result_fb_page_starview"/>
        <com.baidu.navisdk.ui.widget.MaxHeightRecyclerView
            android:id="@+id/navi_result_fb_page_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:layout_marginBottom="11dp"
            android:minHeight="50dp"
            android:layout_below="@+id/navi_result_fb_page_star_txt"
            android:overScrollMode="never"
            android:layout_marginHorizontal="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            app:nsdk_maxHeight="255dp"/>
        <RelativeLayout
            android:id="@+id/navi_result_fb_page_item_editlayout"
            android:background="@drawable/bnav_result_feedback_edit_bg"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:layout_marginRight="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:layout_below="@+id/navi_result_fb_page_item_layout"
            android:layout_marginHorizontal="@dimen/nsdk_navi_result_fb_page_margin_horizontal">
            <TextView
                android:textSize="25dp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/navi_result_fb_page_edit_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="￥"
                android:layout_centerVertical="true"/>
            <EditText
                android:textSize="12dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:gravity="center_vertical"
                android:id="@+id/navi_result_fb_page_edittext"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="提示文案可配置（选填）"
                android:maxLength="100"
                android:layout_toRightOf="@+id/navi_result_fb_page_edit_string"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#999999"
                android:id="@+id/navi_result_fb_page_edit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="100"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/navi_result_fb_page_gradient"
            android:background="@drawable/nsdk_white_transparent_gradient_bg2"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginBottom="13dp"
            android:layout_below="@+id/navi_result_fb_page_item_editlayout"/>
        <TextView
            android:enabled="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/nsdk_white_color"
            android:gravity="center"
            android:id="@+id/navi_result_fb_page_submit_btn"
            android:background="@drawable/nsdk_navi_result_fb_submit_bg"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:layout_marginRight="@dimen/nsdk_navi_result_fb_page_margin_horizontal"
            android:layout_marginBottom="13dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_below="@+id/navi_result_fb_page_gradient"
            android:layout_marginHorizontal="@dimen/nsdk_navi_result_fb_page_margin_horizontal"/>
    </RelativeLayout>
</FrameLayout>
