<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/nsdk_smart_traffic_area_round_bg"
    android:layout_width="112dp"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/smart_area_text"
        android:background="@drawable/nsdk_smart_area_text_bg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLines="2"
        android:maxEms="8"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/smart_area_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/smart_area_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>
