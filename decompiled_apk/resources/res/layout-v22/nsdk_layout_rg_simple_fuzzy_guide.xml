<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bn_bg_rg_new_simple_guide_view"
    android:paddingLeft="@dimen/nsdk_rg_simple_guide_margin_h"
    android:paddingRight="@dimen/nsdk_rg_simple_guide_margin_h"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/nsdk_rg_default_guide_elevation"
    android:paddingHorizontal="@dimen/nsdk_rg_simple_guide_margin_h">
    <ImageView
        android:id="@+id/bnav_rg_cur_area_state_label"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nsdk_rg_simple_guide_area_label_margin_top"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/fuzzy_logo"
        android:visibility="visible"
        android:layout_width="@dimen/navi_dimens_57dp"
        android:layout_height="@dimen/nsdk_rg_simple_guide_top_info_height"
        android:layout_marginTop="@dimen/nsdk_rg_simple_guide_top_info_margin_top"
        android:src="@drawable/bnav_drawable_set_off"
        android:scaleType="fitCenter"
        android:layout_below="@+id/bnav_rg_cur_area_state_label"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/navi_dimens_15dp"
        android:layout_marginEnd="@dimen/navi_dimens_5dp"/>
    <View
        android:id="@+id/bnav_divider"
        android:background="#4dffffff"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/nsdk_rg_simple_guide_divider_margin_h"
        android:layout_marginRight="@dimen/nsdk_rg_simple_guide_divider_margin_h"
        android:layout_below="@+id/fuzzy_logo"/>
    <include
        android:id="@+id/bnav_rg_device_status_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_30dp"
        android:layout_below="@+id/bnav_divider"
        layout="@layout/nsdk_layout_rg_simple_guide_device_state"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/bnav_rg_next_turn_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_dimens_30dp"
        android:layout_below="@+id/bnav_divider">
        <TextView
            android:textSize="@dimen/navi_dimens_16dp"
            android:textStyle="bold"
            android:textColor="@color/nsdk_rg_main_info"
            android:id="@+id/bnav_rg_sg_next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随后"/>
        <ImageView
            android:id="@+id/bnav_rg_sg_next_turn_icon"
            android:layout_width="@dimen/navi_dimens_16dp"
            android:layout_height="@dimen/navi_dimens_16dp"
            android:layout_marginLeft="@dimen/navi_dimens_4dp"
            android:src="@drawable/nsdk_ic_lane_turn_around_left"/>
    </LinearLayout>
</RelativeLayout>
