<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_white_radius_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="19dp"
            android:textColor="@color/text_color"
            android:id="@+id/tv_tip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/guide_warm_title"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_tip_close"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/img_tip"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_binaural_tip"
            android:layout_below="@+id/tv_tip_title"
            android:layout_marginHorizontal="20dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="16dp"
            android:textColor="@color/text_secondary_color"
            android:gravity="center"
            android:id="@+id/tv_tip_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="32dp"
            android:text="@string/binaural_tip_1"
            android:layout_below="@+id/img_tip"
            android:layout_marginHorizontal="32dp"/>
        <com.sma.smartv3.view.text.PFMedium
            android:textSize="16dp"
            android:textColor="@color/text_secondary_color"
            android:gravity="center"
            android:id="@+id/tv_tip_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="32dp"
            android:text="@string/binaural_tip_2"
            android:layout_below="@+id/tv_tip_1"
            android:layout_marginHorizontal="32dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/tv_tip_2"
            android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:textSize="16dp"
                android:textColor="@color/text_secondary_color"
                android:gravity="center_vertical"
                android:id="@+id/tip_check"
                android:text="@string/not_prompt_again"
                style="@style/checkbox_add"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
